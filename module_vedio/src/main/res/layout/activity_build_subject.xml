<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/base_toolbar"/>

    <FrameLayout
        android:id="@+id/fl_cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_210"
        android:background="#f8f8f8">
        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_set_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="设置封面"
            android:textColor="@color/gray_999999"
            android:textSize="@dimen/sp_16"/>
    </FrameLayout>

    <EditText
        android:id="@+id/et_subject_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/gray_999999"
        android:hint="专题名称~(不超过15字)"
        android:background="@null"
        android:maxLength="15"
        android:padding="@dimen/dp_12"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_999999"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"/>


    <com.fengwo.module_comment.widget.GradientTextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_16"
        android:text="确定"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_46"
        android:layout_marginRight="@dimen/dp_46"
        android:layout_marginTop="@dimen/dp_160"/>
</LinearLayout>
