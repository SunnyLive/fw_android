<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/ll_adapter_video_search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/video_related"
        android:layout_margin="@dimen/dp_12"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_14"
        />
    <LinearLayout
        android:id="@+id/ll_adapter_video_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:orientation="vertical"/>
    <TextView
        android:id="@+id/tv_adapter_search_result_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_18"
        android:text="@string/video_search_result_all"
        android:padding="@dimen/dp_9"
        android:drawableRight="@drawable/ic_video_search_all"
        android:textColor="@color/purple_9966ff"
        android:textSize="@dimen/sp_14"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="@color/gray_F3F3F3"/>
</LinearLayout>