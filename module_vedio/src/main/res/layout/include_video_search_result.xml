<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_12"
    android:paddingRight="@dimen/dp_12"
    android:layout_height="wrap_content">
    <com.fengwo.module_comment.widget.RoundImageView
        android:id="@+id/iv_adapter_search_result"
        android:layout_width="@dimen/dp_108"
        android:layout_height="@dimen/dp_62"
        android:scaleType="centerCrop"
        android:src="@color/default_bg"
        app:layout_constraintTop_toTopOf="@+id/tv_adapter_search_result_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_adapter_search_result_date"
        />
    <TextView
        android:id="@+id/tv_adapter_search_result_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|bottom"
        android:padding="@dimen/dp_8"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_11"
        app:layout_constraintRight_toRightOf="@+id/iv_adapter_search_result"
        app:layout_constraintBottom_toBottomOf="@+id/iv_adapter_search_result"
        />
    <TextView
        android:id="@+id/tv_adapter_search_result_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        app:layout_constraintLeft_toRightOf="@+id/iv_adapter_search_result"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/text_33"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/sp_14"
        />
    <TextView
        android:id="@+id/tv_adapter_search_result_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="@+id/tv_adapter_search_result_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_adapter_search_result_title"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_12"
        />
    <TextView
        android:id="@+id/tv_adapter_search_result_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="@+id/tv_adapter_search_result_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_adapter_search_result_name"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_10"
        />
</androidx.constraintlayout.widget.ConstraintLayout>