<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_bg_video_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_chat_search"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="1:0.46"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/basetitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="影视"
                android:textColor="@color/color_chat_text_home"
                android:textSize="@dimen/sp_19"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:padding="@dimen/dp_12"
                android:src="@drawable/chat_ic_home_search" />

            <FrameLayout
                android:id="@+id/fl_chat_home_message"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44">

                <ImageView
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_44"
                    android:padding="@dimen/dp_12"
                    android:src="@drawable/chat_ic_home_msg1" />

                <TextView
                    android:id="@+id/tv_badge"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_gravity="right"
                    android:layout_margin="6dp"
                    android:background="@drawable/bg_dot_red"
                    android:gravity="center"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/sp_10"
                    android:visibility="gone" />
            </FrameLayout>

            <ImageView
                android:id="@+id/iv_chat_home_contact"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:padding="@dimen/dp_12"
                android:src="@drawable/chat_ic_home_contact"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/basetitle">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical"
            app:elevation="0dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_130"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginBottom="@dimen/dp_3"
                app:cardCornerRadius="@dimen/dp_8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_scrollFlags="scroll">

                <com.fengwo.module_comment.widget.BannerView.BannerView
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>

            <com.shizhefei.view.indicator.ScrollIndicatorView
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:paddingBottom="@dimen/dp_10" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_70"
            android:background="@color/white"
            android:overScrollMode="never"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
