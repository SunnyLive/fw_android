<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg"
    android:orientation="vertical">

    <!--    <com.tencent.rtmp.ui.TXCloudVideoView-->
    <!--        android:id="@+id/player_cloud_view"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent" />-->

    <com.tencent.rtmp.ui.TXCloudVideoView
        android:id="@+id/detail_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="#50000000" />

    <ImageView
        android:id="@+id/iv_fengmian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/timg"
        android:visibility="visible" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="36px"
        android:layout_marginBottom="361px"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageView
            android:layout_width="70px"
            android:layout_height="70px"
            android:src="@drawable/ic_video_more"
            app:layout_auto_basewidth="height" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21"
            android:textColor="@color/text_white"
            android:textSize="24px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/btn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="36px"
        android:layout_marginBottom="361px"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="70px"
            android:layout_height="70px"
            android:src="@drawable/ic_video_more"
            app:layout_auto_basewidth="height" />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:textSize="24px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/btn_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_share"
        android:layout_alignLeft="@id/btn_share"
        android:layout_marginBottom="60px"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="70px"
            android:layout_height="70px"
            android:src="@drawable/vedio_icon_smalldetail_comment"
            app:layout_auto_basewidth="height" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:textSize="24px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/btn_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_comment"
        android:layout_alignLeft="@id/btn_share"
        android:layout_marginBottom="60px"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="70px"
            android:layout_height="70px"
            android:src="@drawable/vedio_icon_smalldetail_unlike"
            app:layout_auto_basewidth="height" />

        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:textSize="24px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/btn_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_like"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22px"
        android:layout_marginBottom="60px"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_header"
            android:layout_width="100px"
            android:layout_height="100px"
            app:layout_auto_basewidth="height" />

        <ImageView
            android:id="@+id/btn_attention"
            android:layout_width="wrap_content"
            android:layout_height="40px"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="-20px"
            android:src="@drawable/chat_ic_attention" />
    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_bgm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekbar"
        android:layout_marginLeft="22px"
        android:layout_marginBottom="21px"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_marginRight="21px"
            android:background="#ff0"
            android:visibility="gone"
            app:layout_auto_basewidth="height" />

        <TextView
            android:id="@+id/tv_bgm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一起学猫叫"
            android:textColor="@color/text_white"
            android:visibility="gone" />
    </com.zhy.autolayout.AutoLinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#30000000"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_authorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_des"
            android:layout_alignLeft="@id/ll_bgm"
            android:layout_marginBottom="22px"
            android:text="#啦啦啦"
            android:textColor="@color/text_white"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_bgm"
            android:layout_alignLeft="@id/ll_bgm"
            android:layout_marginBottom="22px"
            android:text="#啦啦啦"
            android:textColor="@color/text_white"
            android:textSize="32px" />

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="46px" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_player"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/dp_50"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_155"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/ic_live_logo" />
</com.zhy.autolayout.AutoRelativeLayout>