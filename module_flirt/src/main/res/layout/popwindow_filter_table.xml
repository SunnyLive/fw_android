<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_purple_white_8"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_15"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_table_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择你心动的类型"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/text_33"
        android:layout_marginTop="@dimen/dp_30"
        android:textSize="@dimen/sp_16"
        />
    <TextView
        android:id="@+id/tv_table_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标签类型可多选"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_table_title"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_table_subtitle"
        app:layout_constraintBottom_toTopOf="@+id/v_line"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_250"/>
    <TextView
        android:id="@+id/tv_table_cancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="取消"
        android:gravity="center"
        android:textColor="@color/text_99"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/v_cen"
        app:layout_constraintTop_toTopOf="@+id/v_line"
        android:textSize="@dimen/sp_16"
        />
    <TextView
        android:id="@+id/tv_table_ok"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="确定"
        android:gravity="center"
        android:textColor="@color/purple_9966ff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/v_cen"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/v_line"
        android:textSize="@dimen/sp_16"
        />
    <View
        android:id="@+id/v_cen"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/color_e6"/>
    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/v_cen"
        android:background="@color/color_e6"/>
</androidx.constraintlayout.widget.ConstraintLayout>