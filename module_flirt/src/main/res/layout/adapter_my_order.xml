<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="@dimen/dp_138"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_5"
    android:background="@drawable/bg_purple_white_8"
    android:paddingBottom="@dimen/dp_15"
    tools:background="@color/black"
    >
    <!--头像-->
    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_impression_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--删除选中按钮-->
    <CheckBox
        android:id="@+id/iv_order_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:button="@drawable/bg_selector_order"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--未读消息数-->
    <TextView
        android:id="@+id/tv_unread"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/bg_unread"
        android:gravity="center"
        android:padding="@dimen/dp_2"
        android:text="99+"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--印象值-->

    <LinearLayout
        android:id="@+id/ll_impression_parent"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_7"
        android:layout_marginBottom="@dimen/dp_9"
        app:layout_constraintBottom_toBottomOf="@id/iv_header"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_12"
            android:src="@mipmap/ic_chat_room_addtime"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            tools:text="10:20:10"
            android:textColor="@color/gray_f6f6f6"
            android:textSize="@dimen/sp_12"/>


    </LinearLayout>

    <!--是否已经结束-->
    <TextView
        android:id="@+id/tv_time_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_20"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/dp_6"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_6"
        tools:text="已经结束"
        android:textColor="@color/text_white"
        android:gravity="center_vertical"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/iv_header"
        />

    <!--名字-->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginStart="@dimen/dp_5"
        android:textColor="@color/text_33"
        tools:textColor="@color/text_white"
        tools:text="爱是和你在一起"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_header"
        />
    <!--进入房间按钮-->
    <TextView
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_my_order"
        android:text="进入聊天室"
        android:textColor="@color/text_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginStart="@dimen/dp_5"
        tools:text="进入聊天室"
        android:textSize="@dimen/sp_11"
        />


    <ImageView
        android:id="@+id/iv_impression_del"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@drawable/icon_impression_del"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_header" />
</androidx.constraintlayout.widget.ConstraintLayout>