<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/dp_12"
    android:paddingRight="@dimen/dp_12"
    android:paddingTop="@dimen/dp_12"
    android:orientation="vertical">
<!--    头像-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_head"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/default_head"
        android:scaleType="centerCrop"
        app:layout_constraintCircleRadius="@dimen/dp_8"
        />
    <!--直播图标-->
<!--        <ImageView-->
<!--            android:id="@+id/iv_live"-->
<!--            android:layout_width="@dimen/dp_15"-->
<!--            android:layout_height="@dimen/dp_15"-->
<!--            app:layout_constraintCircle="@+id/civ_head"-->
<!--            app:layout_constraintCircleAngle="180"-->
<!--            app:layout_constraintCircleRadius="@dimen/dp_30"-->
<!--            android:src="@drawable/gif_liao_head"/>-->
    <TextView
        android:id="@+id/tv_flirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_9"
        android:textColor="@color/text_white"
        android:padding="@dimen/dp_5"
        app:layout_constraintCircle="@+id/civ_head"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="@dimen/dp_25"
        android:background="@drawable/shape_radius_purple_bg"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/civ_head"
        app:layout_constraintTop_toTopOf="@+id/civ_head"
        app:layout_constraintRight_toRightOf="@+id/civ_head"
        android:text="同城交友"/>
    <TextView
        android:id="@+id/tv_living"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_9"
        android:textColor="@color/text_white"
        android:padding="@dimen/dp_5"
        android:visibility="gone"
        app:layout_constraintCircle="@+id/civ_head"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="@dimen/dp_25"
        android:background="@drawable/shape_radius_purple2_bg"
        app:layout_constraintLeft_toLeftOf="@+id/civ_head"
        app:layout_constraintTop_toTopOf="@+id/civ_head"
        app:layout_constraintRight_toRightOf="@+id/civ_head"
        android:text="直播中"/>


    <!--    昵称-->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="宇宙无敌美男"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_15"
        android:layout_marginLeft="@dimen/dp_21"
        app:layout_constraintLeft_toRightOf="@+id/civ_head"
        app:layout_constraintTop_toTopOf="@+id/civ_head"
        />
    <!--年龄-->
    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner_girl"
        app:layout_constraintLeft_toRightOf="@+id/tv_name"
        android:gravity="right|center_vertical"
        android:layout_marginLeft="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_3"
        android:paddingRight="@dimen/dp_3"
        android:paddingTop="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_2"
        android:drawableLeft="@drawable/ic_girl"
        android:drawablePadding="@dimen/dp_3"
        android:textSize="@dimen/sp_10"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        android:textColor="@color/text_white"
        android:text="25"/>
    <!--身份已认证-->
    <TextView
        android:id="@+id/tv_cer_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_shape_cer_mine"
        android:drawableLeft="@drawable/ic_real_name"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_12"
        android:padding="@dimen/dp_3"
        android:drawablePadding="@dimen/dp_2"
        android:text="已认证"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_10"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintLeft_toRightOf="@+id/tv_age"
        app:layout_constraintTop_toTopOf="@+id/tv_age"
        app:layout_constraintBottom_toBottomOf="@+id/tv_age"
        />
<!--    签名-->
    <TextView
        android:id="@+id/tv_signature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="不能怕黑就开灯想念就联系不能怕黑就开灯想念就联系不能怕黑就开灯想念就联系"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_12"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginRight="@dimen/dp_7"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintRight_toLeftOf="@+id/tv_distance"
        android:layout_marginTop="@dimen/dp_10"
        />

<!--    在线状态-->
    <TextView
        android:id="@+id/tv_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在线"
        android:textColor="@color/gray_b3b2b2"
        android:drawablePadding="@dimen/dp_3"
        android:textSize="@dimen/sp_12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        />
    <!-- 距离与状态-->
    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0km"
        android:textColor="@color/gray_b3b2b2"
        android:textSize="@dimen/sp_12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_signature"
        />
<!--    图片展示-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_signature"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_21"
        />
<!--    分割线-->
    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:background="@color/normal_bg"
        app:layout_constraintLeft_toLeftOf="@+id/rv_icon"
        app:layout_constraintTop_toBottomOf="@+id/rv_icon"
        app:layout_constraintRight_toRightOf="@+id/rv_icon"
        android:layout_marginTop="@dimen/dp_14"
        />
</androidx.constraintlayout.widget.ConstraintLayout>