<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12">

        <!--语音-->
        <ImageView
            android:id="@+id/iv_flirt_room_voice"
            android:layout_width="@dimen/dp_32"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"

            android:src="@drawable/bg_chat_room_voice"
            android:visibility="invisible" />
        <!--输入框 限制长度 容易导致输入表情上限闪退-->
        <TextView
            android:id="@+id/et_input"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_18"
            android:background="@drawable/chat_right_text_bg"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:hint="说点什么..."
            android:inputType="textAutoCorrect|textAutoComplete|textMultiLine|textCapSentences"
            android:maxLength="100"
            android:maxLines="4"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:scrollbars="none"
            android:textColor="@color/text_white"
            android:layout_marginRight="@dimen/dp_10"
            android:textColorHint="@color/text_white"
            android:textSize="@dimen/sp_14"
            android:visibility="visible" />
        <!--        按住语音-->
        <com.fengwo.module_chat.widgets.chat_new.VoiceRecorderView
            android:id="@+id/rb_press_recode"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_18"
            android:background="@drawable/chat_right_text_bg"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:visibility="gone" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"

            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:inputType="textAutoCorrect|textAutoComplete|textMultiLine|textCapSentences"
            android:maxLength="100"
            android:maxLines="4"
            android:scrollbars="none"
            android:text="按住说话"
            android:textColor="@color/text_white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/sp_11"
            android:layout_marginRight="@dimen/dp_10"
            android:visibility="gone" />
        <!--表情-->
        <ImageView
            android:id="@+id/iv_emoticon"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"

            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/bg_chat_room_emotion"
            android:visibility="gone" />
        <!--礼物-->
        <ImageView
            android:id="@+id/iv_present"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_10"

            android:src="@drawable/ic_gift_room" />
        <!--更多-->
        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_10"

            android:src="@drawable/pic_more" />

        <ImageView
            android:id="@+id/iv_gd"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/pic_chat_gn" />

        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/pic_chat_gift" />
        <!--小屏-->
        <ImageView
            android:id="@+id/iv_small"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/pic_smallscreen" />


        <ImageView
            android:id="@+id/iv_closes"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"

            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/ic_close" />
        <!--游戏-->
        <ImageView
            android:id="@+id/iv_game"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_17"
            android:src="@drawable/bg_chat_room_game"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_35"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/rect_purple_round5"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_15"
            android:visibility="gone" />
    </LinearLayout>
    <!--表情布局-->
    <FrameLayout
        android:id="@+id/fl_emoticon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    <!--键盘适配高度-->
    <View
        android:id="@+id/view_keyboard"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
</LinearLayout>