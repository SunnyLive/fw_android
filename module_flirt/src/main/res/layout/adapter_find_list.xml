        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/bg_find_like"
        app:layout_constraintBottom_toBottomOf="@+id/tv_find_comments"
        app:layout_constraintRight_toLeftOf="@+id/tv_find_like"
        app:layout_constraintTop_toTopOf="@+id/tv_find_comments" />

    <TextView
        android:id="@+id/tv_find_shares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
