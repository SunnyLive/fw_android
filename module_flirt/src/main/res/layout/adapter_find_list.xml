<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_12">
    <!--  头像-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_head"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_13"
        android:scaleType="centerCrop"
        android:src="@drawable/default_head"
        android:layout_marginLeft="@dimen/dp_2"
        app:layout_constraintCircleRadius="@dimen/dp_8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--直播状态-->
    <TextView
        android:id="@+id/tv_flirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_radius_purple_bg"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:paddingTop="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_2"
        android:text="同城交友"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_9"
        app:layout_constraintBottom_toBottomOf="@+id/civ_head"
        app:layout_constraintLeft_toLeftOf="@+id/civ_head"
        app:layout_constraintRight_toRightOf="@+id/civ_head"
        app:layout_constraintTop_toBottomOf="@+id/civ_head" />

    <TextView
        android:id="@+id/tv_living"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_radius_purple2_bg"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:paddingTop="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_2"
        android:text="直播中"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_9"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/civ_head"
        app:layout_constraintLeft_toLeftOf="@+id/civ_head"
        app:layout_constraintRight_toRightOf="@+id/civ_head"
        app:layout_constraintTop_toBottomOf="@+id/civ_head" />

    <!--    昵称-->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:text="宇宙无敌美男"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_15"

        app:layout_constraintBottom_toTopOf="@+id/tv_find_time"
        app:layout_constraintLeft_toRightOf="@+id/civ_head"
        app:layout_constraintTop_toTopOf="@+id/civ_head" />
    <!--时间-->
    <TextView
        android:id="@+id/tv_find_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1分钟"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@+id/civ_head"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />
    <!--年龄-->
    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:background="@drawable/shape_corner_girl"
        android:drawableLeft="@drawable/ic_girl"
        android:drawablePadding="@dimen/dp_3"
        android:gravity="right|center_vertical"
        android:paddingLeft="@dimen/dp_3"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_3"
        android:paddingBottom="@dimen/dp_2"
        android:text="25"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_10"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintLeft_toRightOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/tv_name" />
    <!--身份已认证-->
    <TextView
        android:id="@+id/tv_cer_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_shape_cer_mine"
        android:drawableLeft="@drawable/ic_real_name"
        android:drawablePadding="@dimen/dp_2"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_3"
        android:paddingRight="@dimen/dp_3"
        android:text="已认证"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_10"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_age"
        app:layout_constraintLeft_toRightOf="@+id/tv_age"
        app:layout_constraintTop_toTopOf="@+id/tv_age" />

    <TextView
        android:id="@+id/tv_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/shape_pink_stoke_corner"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_2"
        android:text="我"
        android:textColor="@color/red_FE3ACE"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintLeft_toRightOf="@+id/tv_cer_mine"
        app:layout_constraintTop_toTopOf="@+id/tv_name" />


    <!--   审核状态     -->
    <TextView
        android:id="@+id/tv_mine_card_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        android:layout_marginStart="@dimen/dp_4"
        app:layout_constraintLeft_toRightOf="@+id/tv_mine"
        android:textSize="@dimen/sp_12"
        tools:text="审核中，仅自己可见" />

    <ImageView
        android:id="@+id/iv_find_much"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_6"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:src="@drawable/ic_find_much"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/civ_head" />


    <!--    图片展示-->
    <com.fengwo.module_comment.widget.ClickableRecyclerView
        android:id="@+id/rv_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/civ_head" />
    <!--    签名-->
    <TextView
        android:id="@+id/tv_signature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_7"
        android:ellipsize="end"
        android:text="不能怕黑就开灯想念就不能怕黑就开灯想念就"
        android:textColor="@color/text_66"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        app:layout_constraintRight_toRightOf="@+id/iv_find_much"
        app:layout_constraintTop_toBottomOf="@+id/rv_icon" />


    <TextView
        android:id="@+id/tv_find_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/string_comment"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_signature" />

    <ImageView
        android:id="@+id/iv_find_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_find_comments"
        app:layout_constraintBottom_toBottomOf="@+id/tv_find_comments"
        app:layout_constraintRight_toLeftOf="@+id/tv_find_comments"
        app:layout_constraintTop_toTopOf="@+id/tv_find_comments" />

    <ImageView
        android:id="@+id/iv_warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_warn"
        app:layout_constraintBottom_toTopOf="@+id/iv_find_comments"
        app:layout_constraintRight_toRightOf="@+id/iv_find_comments"
        app:layout_constraintTop_toTopOf="@+id/iv_find_comments" />

    <TextView
        android:id="@+id/tv_find_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/string_star"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@+id/tv_find_comments"
        app:layout_constraintRight_toLeftOf="@+id/iv_find_comments"
        app:layout_constraintTop_toTopOf="@+id/tv_find_comments" />

    <ImageView
