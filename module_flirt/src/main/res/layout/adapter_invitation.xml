<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_66"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cim_pic"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_15" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_weight="1"
android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"

            android:orientation="horizontal"

            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5454"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_14" />
            <com.fengwo.module_flirt.UI.DrawTextView
                android:id="@+id/tv_card_age_and_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/bg_gender_dp7"
                android:drawableLeft="@drawable/ic_girl"
                android:drawablePadding="@dimen/dp_3"
                android:gravity="right|center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_3"
                android:paddingRight="@dimen/dp_3"
                android:text="20"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_10"
                android:visibility="visible" />
            <ImageView
                android:id="@+id/im_zx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:src="@mipmap/pic_chat_zx"/>
        </LinearLayout>

        <TextView

            android:id="@+id/tv_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="top"
            android:text="6544"
            android:textColor="@color/gray_999999"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_yq"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_26"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bg_yq"
        android:gravity="center"
        android:text="邀请"
        android:textColor="@color/text_white_arr"
        android:textSize="@dimen/sp_12" />
</LinearLayout>