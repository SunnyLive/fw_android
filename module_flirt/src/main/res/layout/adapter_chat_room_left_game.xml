<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingTop="@dimen/dp_10"
    android:paddingRight="@dimen/dp_15">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:03:26"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_content_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_55"
        android:background="@drawable/radius_chat_tip_purple"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_12"
        android:text="为给您带来更好的泛娱乐体验，营造和谐、绿色、正能量的社交氛围。蜂窝互娱官方即日起加大对于违法违规用户及内容的监管及处置力度，一经发现立即严格处理。心动小屋开启，私语时间也请规范用语，姿态文明，私聊才会更美好~"
        android:textColor="@color/purple_9966ff"
        android:textSize="@dimen/sp_12"
        android:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_header_left"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/default_head"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_4"
            android:ellipsize="end"
            android:maxLength="10"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            app:layout_constraintLeft_toRightOf="@+id/civ_header_left"
            app:layout_constraintTop_toTopOf="@+id/civ_header_left" />

        <TextView
            android:id="@+id/tv_chat_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/shape_chat_gears0"
            android:paddingLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_2"
            android:text="缘定三生"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name"
            app:layout_constraintLeft_toRightOf="@+id/tv_name"
            app:layout_constraintTop_toTopOf="@+id/tv_name" />

        <ImageView
            android:id="@+id/iv_game_left"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintLeft_toLeftOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <ImageView
            android:id="@+id/iv_item_loading_left"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_20"
            android:focusable="false"
            android:src="@drawable/msg_state_fail_resend"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_game_left"
            app:layout_constraintLeft_toRightOf="@+id/iv_game_left"
            app:layout_constraintTop_toTopOf="@+id/iv_game_left" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>