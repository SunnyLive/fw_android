<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dating_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_15"
    android:paddingLeft="@dimen/dp_20"

    android:paddingRight="@dimen/dp_20">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_header"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/default_head"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXX"
        android:textColor="@color/text_66"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toTopOf="@+id/civ_header"
        app:layout_constraintLeft_toRightOf="@+id/civ_header"
        app:layout_constraintBottom_toBottomOf="@+id/civ_header"
        android:layout_marginLeft="@dimen/dp_12"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9:36"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/civ_header"
        app:layout_constraintBottom_toBottomOf="@+id/civ_header"
        />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_14"
        android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
        app:layout_constraintTop_toBottomOf="@+id/civ_header"
        />
    <TextView
        android:id="@+id/tv_dating_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_14"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/tv_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"
        android:layout_marginTop="@dimen/dp_18"
        />

    <TextView
        android:id="@+id/tv_order"
        android:layout_width="@dimen/dp_80"
        android:layout_height="wrap_content"
        android:text="接单"
        android:gravity="center"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_13"
        android:background="@drawable/rect_purple_round100"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="@dimen/dp_9"

        android:paddingBottom="@dimen/dp_9"
        app:layout_constraintTop_toBottomOf="@+id/tv_dating_time"
        android:layout_marginTop="@dimen/dp_20"
        />

    <TextView
        android:id="@+id/tv_refuse"
        android:layout_width="@dimen/dp_80"
        android:layout_height="wrap_content"
        android:text="拒绝"
        android:gravity="center"
        android:textColor="@color/purple_9966ff"
        android:textSize="@dimen/sp_13"
        android:background="@drawable/shape_dating_bg"
        app:layout_constraintRight_toLeftOf="@+id/tv_order"
        android:layout_marginRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_9"

        android:paddingBottom="@dimen/dp_9"
        app:layout_constraintTop_toBottomOf="@+id/tv_dating_time"
        android:layout_marginTop="@dimen/dp_20"
        />
    <!--理由-->
    <TextView
        android:id="@+id/tv_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已经超时，自动退款"
        android:textColor="@color/red_ff3333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dating_time"
        android:layout_marginTop="@dimen/dp_9"
        />
</androidx.constraintlayout.widget.ConstraintLayout>