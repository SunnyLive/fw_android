<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_62"
    android:paddingBottom="@dimen/dp_41">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_76"
        android:src="@mipmap/pic_moer_jt_s" />
    <LinearLayout

        android:layout_width="@dimen/dp_82"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/dp_42"
        android:layout_marginTop="-1dp"
        android:background="@drawable/shape_bottom_moer"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_shares"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pic_pop_sx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:text="筛选"
                android:textColor="@color/text_white_arr"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:background="#4dffffff"/>

        <LinearLayout
            android:id="@+id/ll_screen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pic_pop_sharch" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:text="搜索"
                android:textColor="@color/text_white_arr"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
