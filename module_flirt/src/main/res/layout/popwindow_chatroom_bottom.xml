<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_appointment"
    tools:layout_gravity="bottom"
    >


    <!--    title   选择项目    -->


    <!--   打赏榜单  -->

    <RadioGroup
        android:id="@+id/rg_choose_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/rb_choose_type1"
            android:layout_weight="1"
            android:layout_width="0dp"
            tools:checked="true"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_4"
            android:text="打赏榜单"
            android:stateListAnimator="@drawable/text_size_radio_state"
            android:textColor="@drawable/text_radio_choose_state"
            android:drawableBottom="@drawable/bg_radio_choose_state"
            android:button="@null"
            />



        <RadioButton
            android:id="@+id/rb_choose_type2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="印象榜单"
            android:drawablePadding="@dimen/dp_4"
            android:stateListAnimator="@drawable/text_size_radio_state"
            android:textColor="@drawable/text_radio_choose_state"
            android:drawableBottom="@drawable/bg_radio_choose_state"
            android:button="@null"
            />


        <RadioButton
            android:id="@+id/rb_choose_type3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_4"
            android:text="收礼明细"
            android:stateListAnimator="@drawable/text_size_radio_state"
            android:textColor="@drawable/text_radio_choose_state"
            android:drawableBottom="@drawable/bg_radio_choose_state"
            android:button="@null"
            />


    </RadioGroup>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg_choose_type"
        android:background="@color/lin_F7F7F7"
        />


    <!--   子选择项目   -->
    <RadioGroup
        android:id="@+id/rg_child_choose"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/view_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center_horizontal"
        >

        <RadioButton
            android:id="@+id/rb_child_choose1"
            android:layout_width="@dimen/dp_98"
            android:layout_height="@dimen/dp_26"
            android:checked="true"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/bg_chat_bottom_radio_text"
            android:background="@drawable/bg_chat_bottom_radio"
            android:layout_marginEnd="@dimen/dp_20"
            android:textSize="@dimen/sp_10"
            android:text="今日打赏榜"
            />

        <RadioButton
            android:id="@+id/rb_child_choose2"
            android:layout_width="@dimen/dp_98"
            android:layout_height="@dimen/dp_26"
            android:checked="true"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/bg_chat_bottom_radio_text"
            android:background="@drawable/bg_chat_bottom_radio"
            android:textSize="@dimen/sp_10"
            android:text="本期打赏榜"
            />

    </RadioGroup>





    <!--   数据列表   -->

    <!--  数据列表加刷新view  -->

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/sr_refresh"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/rg_child_choose"
        app:layout_constraintBottom_toTopOf="@+id/ll_show_price"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_include"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:overScrollMode="never" />
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>


    <View
        android:id="@+id/ll_show_price"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/lin_F7F7F7"
        app:layout_constraintTop_toBottomOf="@+id/sr_refresh"
        app:layout_constraintBottom_toTopOf="@+id/tv_price"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableRight="@drawable/icon_move_house_heart"
        android:drawablePadding="@dimen/dp_6"
        android:padding="@dimen/dp_15"
        android:text="本场总计：0"
        android:textColor="@color/text_66"
        android:textSize="@dimen/sp_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>






