<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_flirt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_flirt_home_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/live_bg_home_top"
        app:layout_constraintDimensionRatio="1:0.573"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/basetitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_2"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_12">

            <TextView
                android:id="@+id/tv_flirt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="i 撩"
                android:textColor="@color/color_chat_text_home"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_flirt_search"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:padding="@dimen/dp_12"
                android:src="@drawable/chat_ic_home_search" />
            <!--            ic_flirt_wenbo-->
            <ImageView
                android:id="@+id/iv_flirt_live"
                android:layout_width="@dimen/dp_46"
                android:layout_height="@dimen/dp_46"
                android:padding="@dimen/dp_6"
                tools:src="@drawable/ic_flirt_wenbo_gif" />

            <ImageView
                android:id="@+id/iv_chat_home_contact"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:padding="@dimen/dp_12"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:background="@color/gray_f0f0f0" />
    </FrameLayout>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/basetitle">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/cl_scrool"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:orientation="vertical"
                app:elevation="0dp">
                <!--  banner-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_top"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_145"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_14"
                    android:layout_marginBottom="@dimen/dp_25"
                    app:cardCornerRadius="@dimen/dp_8"
                    app:cardElevation="@dimen/dp_4"
                    app:layout_scrollFlags="scroll">

                    <com.fengwo.module_comment.widget.BannerView.BannerView
                        android:id="@+id/banner_flirt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_scrollFlags="scroll" />
                </androidx.cardview.widget.CardView>
                <!--                            菜单栏-->

                <com.fengwo.module_flirt.widget.FlirtIndicatorView
                    android:id="@+id/flv_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_14" />

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vp_flirt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:overScrollMode="never"
                android:paddingLeft="@dimen/dp_14"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_14"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
    <!--    未开定位提示-->
    <LinearLayout
        android:id="@+id/ll_positioning_unopen_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/menu_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_7"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_7"
        android:paddingBottom="@dimen/dp_10"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="当前设备定位功能已关闭，请在设置中开启定位功能。"
            android:textColor="@color/purple_9966ff"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_location_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_purple_attention_bg"
            android:paddingLeft="@dimen/dp_11"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_11"
            android:paddingBottom="@dimen/dp_6"
            android:text="知道了"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>