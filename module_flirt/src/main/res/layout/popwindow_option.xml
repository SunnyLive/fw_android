<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_appointment"
    android:paddingLeft="@dimen/dp_15"
    android:paddingTop="@dimen/dp_20"
    android:paddingRight="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_20"
    tools:layout_gravity="bottom">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="筛选"
        android:textColor="@color/black_363636"
        android:textSize="@dimen/sp_18" />

    <ImageView
        android:id="@+id/im_clone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp_5"
        android:layout_marginTop="-8dp"
        android:src="@mipmap/pic_clone" />

    <TextView
        android:id="@+id/tv_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:maxLines="1"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:text="选择对应的直播类型，确保直播的内容跟类型相符合哦"
        android:textColor="@color/gray_999999" />

    <TextView
        android:id="@+id/tv_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_context"
        android:layout_marginTop="@dimen/dp_20"
        android:text="性别"
        android:textColor="@color/alpha_citys"
        android:textSize="@dimen/sp_16" />

    <RadioGroup
        android:id="@+id/rg_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sex"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_sex1"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_26"
            android:background="@drawable/rb_nobtn_selector"
            android:button="@null"
            android:gravity="center"
            android:text="男"
            android:textColor="@drawable/bg_select_color" />

        <RadioButton
            android:id="@+id/rb_sex2"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/rb_nobtn_selector"
            android:button="@null"
            android:gravity="center"
            android:text="女"
            android:textColor="@drawable/bg_select_color" />

        <RadioButton
            android:id="@+id/rb_sex3"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_26"
            android:background="@drawable/rb_nobtn_selector"
            android:button="@null"
            android:gravity="center"
            android:text="不限"
            android:textColor="@drawable/bg_select_color" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg_sex"
        android:layout_marginTop="@dimen/dp_20"
        android:autoSizeMaxTextSize="@dimen/dp_25"
        android:text="年龄"
        android:textColor="@color/alpha_citys"
        android:textSize="@dimen/sp_16" />

    <RadioGroup
        android:id="@+id/rg_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_age"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_age1"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_26"
            android:background="@drawable/rb_nobtn_selector_age"
            android:button="@null"
            android:gravity="center"
            android:text="18-25岁"
            android:textColor="@drawable/bg_select_color" />

        <RadioButton
            android:id="@+id/rb_age2"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/rb_nobtn_selector_age"
            android:button="@null"
            android:gravity="center"
            android:text="25-30岁"
            android:textColor="@drawable/bg_select_color" />

        <RadioButton
            android:id="@+id/rb_age3"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/rb_nobtn_selector_age"
            android:button="@null"
            android:gravity="center"
            android:text="30-35岁"
            android:textColor="@drawable/bg_select_color" />

        <RadioButton
            android:id="@+id/rb_age4"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_26"
            android:background="@drawable/rb_nobtn_selector_age"
            android:button="@null"
            android:gravity="center"
            android:text="35岁以上"
            android:textColor="@drawable/bg_select_color" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg_age"
        android:layout_marginTop="@dimen/dp_20"
        android:autoSizeMaxTextSize="@dimen/dp_25"
        android:text="地区"
        android:textColor="@color/alpha_citys"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:id="@+id/ll_city"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_156"
        android:layout_below="@+id/tv_city"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <com.contrarywind.view.WheelView
            android:id="@+id/wheelProvince"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_weight="1"
            app:wheelview_dividerColor="@color/white"
            app:wheelview_lineSpacingMultiplier="2"
            app:wheelview_textColorCenter="@color/colorPrimary"
            app:wheelview_textColorOut="@color/text_99"
            app:wheelview_textSize="@dimen/sp_16" />

        <com.contrarywind.view.WheelView
            android:id="@+id/wheelCity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_weight="1"
            app:wheelview_dividerColor="@color/white"
            app:wheelview_lineSpacingMultiplier="2"
            app:wheelview_textColorCenter="@color/colorPrimary"
            app:wheelview_textColorOut="@color/text_99"
            app:wheelview_textSize="@dimen/sp_16" />
    </LinearLayout>
<TextView
    android:id="@+id/tv_confirm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/ll_city"
    android:paddingTop="@dimen/dp_12"
    android:text="确定"
    android:gravity="center"
    android:textColor="#FE3C9C"
    android:textSize="@dimen/sp_18"/>

</RelativeLayout>