<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_28"
            android:src="@drawable/chat_card_close" />

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/fl_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_36"
            android:overScrollMode="never" />

        <EditText
            android:id="@+id/tv_room_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_64"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_80"
            android:layout_marginRight="@dimen/dp_26"
            android:hint="填写话题，10字以内"
            android:textColorHint="@color/text_33" />

        <com.fengwo.module_comment.widget.GradientTextView
            android:id="@+id/tv_select_tag_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_marginRight="@dimen/dp_60"
app:gtv_start_color="@color/color_FFC147"
            app:gtv_end_color="@color/red_FE3C9C"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center"
            android:text="开启同城视频交友"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>
</ScrollView>
