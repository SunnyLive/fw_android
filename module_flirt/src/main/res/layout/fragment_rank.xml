<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ll_top2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/top2"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible"
            tools:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ll_top1"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_header_second"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_19"
                    android:src="@drawable/default_head" />

                <ImageView
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_68"
                    android:src="@drawable/ic_top_header2" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_nick_second"
                android:layout_width="@dimen/dp_70"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="魅力值 "
                    android:textColor="@color/color_ccb"
                    android:textSize="@dimen/sp_9" />
                <TextView
                    android:id="@+id/tv_value_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="100万"
                    android:textColor="@color/color_rank_value"
                    android:textSize="@dimen/sp_9" />
            </LinearLayout>


            <CheckBox
                android:id="@+id/cb_attention_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:background="@drawable/selector_attention"
                android:button="@null"
                android:checked="false"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_3"
                android:text="关注"
                android:textColor="@color/color_attenttion_text"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_top1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/top1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible"
            tools:visibility="visible"
            app:layout_constraintLeft_toRightOf="@id/ll_top2"
            app:layout_constraintRight_toLeftOf="@id/ll_top3"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_header_first"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginTop="@dimen/dp_15"
                    android:src="@drawable/default_head" />

                <ImageView
                    android:layout_width="@dimen/dp_61"
                    android:layout_height="@dimen/dp_76"
                    android:src="@drawable/ic_top_header1" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_nick_first"
                android:layout_width="@dimen/dp_70"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_13" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="魅力值 "
                    android:textColor="@color/color_ccb"
                    android:textSize="@dimen/sp_9" />
                <TextView
                    android:id="@+id/tv_value_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="100万"
                    android:textColor="@color/color_rank_value"
                    android:textSize="@dimen/sp_9" />
            </LinearLayout>
            <CheckBox
                android:id="@+id/cb_attention_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:background="@drawable/selector_attention"
                android:button="@null"
                android:checked="false"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_3"
                android:text="关注"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_attenttion_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_top3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/top3"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible"
            tools:visibility="visible"
            app:layout_constraintLeft_toRightOf="@id/ll_top1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_header_third"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_19"
                    android:src="@drawable/default_head" />

                <ImageView
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_68"
                    android:src="@drawable/ic_top_header3" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_nick_third"
                android:layout_width="@dimen/dp_70"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_12" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:text="魅力值 "
                android:textColor="@color/color_ccb"
                android:textSize="@dimen/sp_9" />
            <TextView
                android:id="@+id/tv_value_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:text="100万"
                android:textColor="@color/color_rank_value"
                android:textSize="@dimen/sp_9" /></LinearLayout>


            <CheckBox
                android:id="@+id/cb_attention_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:background="@drawable/selector_attention"
                android:button="@null"
                android:checked="false"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_3"
                android:text="关注"
                android:textColor="@color/color_attenttion_text"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/smartrefreshlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cl_show_anchor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_rank">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_14"
            android:background="@drawable/bg_rank_list"
            android:padding="@dimen/dp_10" />
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
    <!--    显示主播-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_show_anchor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@color/color_823"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="0"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_rank_anchor"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_17"
            android:src="@drawable/default_head"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_rank"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_rank_anchor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="name"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_15"
            app:layout_constraintLeft_toRightOf="@+id/iv_rank_anchor"
            app:layout_constraintTop_toTopOf="@+id/iv_rank_anchor" />

        <TextView
            android:id="@+id/tv_rank_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="魅力值  "
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@+id/iv_rank_anchor"
            app:layout_constraintLeft_toLeftOf="@+id/tv_rank_anchor_name" />

        <TextView
            android:id="@+id/tv_rank_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12312313"
            android:textColor="@color/color_rank_value"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@+id/iv_rank_anchor"
            app:layout_constraintLeft_toRightOf="@+id/tv_rank_des"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

