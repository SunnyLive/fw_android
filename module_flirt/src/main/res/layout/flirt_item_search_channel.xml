<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">
    <!--头像-->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_header"
        android:layout_width="@dimen/dp_60"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/default_head"
        android:layout_height="@dimen/dp_60" />

    <!--直播图标-->
    <ImageView
        android:id="@+id/iv_living"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintCircle="@+id/iv_header"
        app:layout_constraintCircleAngle="135"
        app:layout_constraintCircleRadius="@dimen/dp_30"
        android:visibility="gone"
        android:src="@drawable/gif_liao_head"/>
    <TextView
        android:id="@+id/tv_flirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_9"
        android:textColor="@color/text_white"
        android:padding="@dimen/dp_5"
        app:layout_constraintCircle="@+id/iv_header"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="@dimen/dp_25"
        android:background="@drawable/shape_radius_purple_bg"
        android:visibility="gone"
        android:text="同城交友"/>
    <TextView
        android:id="@+id/tv_living"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_9"
        android:textColor="@color/text_white"
        android:padding="@dimen/dp_5"
        android:visibility="gone"
        app:layout_constraintCircle="@+id/iv_header"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="@dimen/dp_25"
        android:background="@drawable/shape_radius_purple2_bg"
        android:text="直播中"/>

    <!--名字-->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="序偶芒果干"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_12"
        app:layout_constraintTop_toTopOf="@+id/iv_header"
        app:layout_constraintLeft_toRightOf="@+id/iv_header"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_14" />

    <ImageView
        android:id="@+id/iv_host_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        android:src="@drawable/login_ic_type3_v1" />

    <ImageView
        android:id="@+id/iv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/iv_host_level"
        app:layout_constraintTop_toTopOf="@+id/iv_host_level"
        android:src="@drawable/login_ic_v1" />
    <!--性别-->
<!--    <ImageView-->
<!--        android:id="@+id/iv_sex"-->
<!--        android:layout_width="@dimen/dp_7"-->
<!--        android:layout_height="@dimen/dp_9"-->
<!--        app:layout_constraintLeft_toRightOf="@+id/tv_name"-->
<!--        app:layout_constraintTop_toTopOf="@+id/tv_name"-->
<!--        app:layout_constraintBottom_toBottomOf="@+id/tv_name"-->
<!--        android:visibility="gone"-->
<!--        android:src="@drawable/live_ic_girl" />-->
    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner_girl"
        app:layout_constraintLeft_toRightOf="@+id/tv_name"
        android:gravity="right|center_vertical"
        android:drawableLeft="@drawable/ic_girl"
        android:layout_marginLeft="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_3"
        android:paddingRight="@dimen/dp_3"
        android:paddingTop="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_2"
        android:drawablePadding="@dimen/dp_3"
        android:textSize="@dimen/sp_10"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        android:textColor="@color/text_white"
        android:text="25"/>

    <!--内容-->
    <TextView
        android:id="@+id/tv_des"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginRight="@dimen/dp_7"
        app:layout_constraintTop_toBottomOf="@+id/iv_host_level"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        app:layout_constraintRight_toLeftOf="@+id/btn_attention"
        android:layout_marginTop="@dimen/dp_8"
        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_12" />
    <!--关注-->
    <TextView
        android:id="@+id/btn_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/radius_purple_bg"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_3"
        android:paddingRight="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="关注"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_12" />

</androidx.constraintlayout.widget.ConstraintLayout>