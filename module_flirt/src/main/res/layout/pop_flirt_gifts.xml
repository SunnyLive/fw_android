<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_gift_list"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.fengwo.module_comment.widget.epf.EPlayerView
        android:id="@+id/playview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#151923"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:visibility="gone"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_header"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/default_head" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="送给 啦啦啦啦啦"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_16" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/color_this"
            android:textSize="@dimen/sp_14"
            />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@null"
            app:tabBackground="@null"
            app:tabGravity="center"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="0dp"
            app:tabMode="scrollable"
            app:tabPaddingEnd="-4dp"
            android:visibility="gone"
            app:tabPaddingStart="-4dp"
            app:tabSelectedTextColor="@color/purple_9966ff"
            app:tabTextColor="@color/text_99" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:orientation="vertical">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_180"
                android:overScrollMode="never" />

            <LinearLayout
                android:id="@+id/ll_point"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">


                <ImageView
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_10"
                    android:src="@drawable/live_ic_diamond" />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:text="0"
                    android:textColor="@color/text_white_arr"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/btn_recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_rechrage_bg"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_17"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_23"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="充值"
                    android:textColor="#FAD58E"
                    android:textSize="@dimen/sp_11" />

            </LinearLayout>


            <TextView
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_5"
                android:background="@drawable/bg_live_end_btn"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_5"
                android:text="发送"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_14" />

            <RelativeLayout
                android:id="@+id/fastclick_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/button_out"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_out" />

                <RelativeLayout
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_in">

                    <TextView
                        android:id="@+id/click_left_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:text="3"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
</FrameLayout>