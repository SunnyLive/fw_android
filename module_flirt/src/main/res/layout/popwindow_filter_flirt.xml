<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp_20"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:layout_gravity="bottom"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_filter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_17"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/black"
        android:text="筛选"/>
    <TextView
        android:id="@+id/tv_filter_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_filter_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_filter_title"
        android:text="取消"
        android:textColor="@color/gray_bdbdbd"
        android:textSize="@dimen/sp_14"
        />
    <TextView
        android:id="@+id/tv_filter_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="想看到的用户"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_filter_title"
        android:layout_marginTop="@dimen/dp_43"
        android:textSize="@dimen/sp_12"
        />
    <TextView
        android:id="@+id/tv_filter_sex_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全部"
        android:textColor="@color/text_white"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_9"
        android:paddingBottom="@dimen/dp_9"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@+id/tv_filter_user"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_purple_corner"
        />
     <TextView
        android:id="@+id/tv_filter_sex_boy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="男"
        android:textColor="@color/text_white"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_9"
        android:paddingBottom="@dimen/dp_9"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_40"
        app:layout_constraintLeft_toRightOf="@+id/tv_filter_sex_all"
         app:layout_constraintTop_toTopOf="@+id/tv_filter_sex_all"
        android:background="@drawable/shape_purple_corner"
        />
    <TextView
        android:id="@+id/tv_filter_sex_girl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="女"
        android:textColor="@color/text_white"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_9"
        android:paddingBottom="@dimen/dp_9"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_40"
        app:layout_constraintLeft_toRightOf="@+id/tv_filter_sex_boy"
        app:layout_constraintTop_toTopOf="@+id/tv_filter_sex_boy"
        android:background="@drawable/shape_purple_corner"
        />
    <TextView
        android:id="@+id/tv_filter_age_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="年龄"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_filter_sex_all"
        android:layout_marginTop="@dimen/dp_25"
        />
    <TextView
        android:id="@+id/tv_filter_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="（18-100）"
        android:textColor="@color/purple_9966ff"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@+id/tv_filter_age_describe"
        app:layout_constraintTop_toBottomOf="@+id/tv_filter_sex_all"
        android:layout_marginTop="@dimen/dp_25"
        />

    <com.fengwo.module_flirt.widget.SelectedRangeView
        android:id="@+id/age_range"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@+id/tv_filter_age"
        app:starValue = "18"
        app:circleCorlor = "@color/text_white"
        app:circleR = "@dimen/dp_10"
        app:BcircleValue = "82"
        app:valueRange = "82"
        />

    <TextView
        android:id="@+id/tv_filter_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/age_range"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/shape_purple_corner"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_86"
        android:paddingRight="@dimen/dp_86"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_14"
        android:text="完成"/>

</androidx.constraintlayout.widget.ConstraintLayout>