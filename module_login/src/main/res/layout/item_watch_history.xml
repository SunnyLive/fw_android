<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_50"
    android:layout_height="match_parent"
    android:id="@+id/rl_history"
    android:layout_gravity="center"
    android:gravity="center">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_header"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        app:civ_border_color="@color/purple_B068D9"
        app:civ_border_width="@dimen/dp_2" />


    <FrameLayout
        android:id="@+id/fl_is_living"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_alignBottom="@+id/iv_header"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_5"
        android:background="@drawable/shape_white_round">
        <ImageView
            android:id="@+id/iv_living"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_gravity="center"
            />
    </FrameLayout>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:singleLine="true"
        android:text="asga"
        android:textColor="@color/purple_8578A4"
        android:textSize="@dimen/sp_9" />
</RelativeLayout>