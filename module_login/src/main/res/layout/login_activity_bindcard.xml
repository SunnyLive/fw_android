<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/base_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:text="持卡人"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_16" />

        <com.fengwo.module_comment.widget.ClearEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入持卡人"
            android:singleLine="true"
            android:textColor="@color/text_66"
            android:textColorHint="@color/text_99"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_95"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/normal_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:text="身份证号"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_16" />

        <com.fengwo.module_comment.widget.ClearEditText
            android:id="@+id/et_idcard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:digits="0123456789Xx"
            android:hint="请输入正确身份证"
            android:inputType="number"
            android:maxLength="18"
            android:singleLine="true"
            android:textColor="@color/text_66"
            android:textColorHint="@color/text_99"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_95"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/normal_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:text="开户银行"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_16" />

        <com.fengwo.module_comment.widget.ClearEditText
            android:id="@+id/et_choosebank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="请选择开户银行"
            android:background="@null"
            android:singleLine="true"
            android:textColor="@color/text_66"
            android:textColorHint="@color/text_99"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_95"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/normal_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:text="支行"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_16" />

        <com.fengwo.module_comment.widget.ClearEditText
            android:id="@+id/et_zhihang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入开户支行(非必填)"
            android:singleLine="true"
            android:textColor="@color/text_66"
            android:textColorHint="@color/text_99"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_95"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/normal_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:text="银行卡"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_16" />

        <com.fengwo.module_comment.widget.ClearEditText
            android:id="@+id/et_cardnumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入正确卡号"
            android:inputType="number"
            android:maxLength="19"
            android:singleLine="true"
            android:textColor="@color/text_66"
            android:textColorHint="@color/text_99"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_95"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/normal_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_16" />

        <com.fengwo.module_comment.widget.ClearEditText
            android:id="@+id/et_phoen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入正确卡预留手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/text_66"
            android:textColorHint="@color/text_99"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_95"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/normal_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_16" />

        <com.fengwo.module_comment.widget.ClearEditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="@color/text_66"
            android:textColorHint="@color/text_99"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/btn_getcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:gravity="center"
            android:minWidth="@dimen/dp_80"
            android:text="获取验证码"
            android:textColor="@color/purple_9966ff"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_95"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/normal_bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.fengwo.module_comment.widget.GradientTextView
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_24"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_18" />
</LinearLayout>