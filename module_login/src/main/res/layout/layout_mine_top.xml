<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/tv_mine_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_mine_top_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_mine_top_icon"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/text_33"
        android:textStyle="bold"
        tools:text="我的礼物墙"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mine_top_title"
        app:layout_constraintRight_toLeftOf="@+id/iv_mine_top_icon"
        app:layout_constraintBottom_toBottomOf="@+id/iv_mine_top_icon"
        />


    <ImageView
        android:id="@+id/iv_mine_top_icon"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        tools:src="@drawable/icon_gift"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>