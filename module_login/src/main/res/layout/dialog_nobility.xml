<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_white_round10"
    android:orientation="vertical"
    android:padding="@dimen/dp_20"
    tools:layout_gravity="center"
    tools:layout_margin="@dimen/dp_20">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="余额不足" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/login_bg_loginet_normal"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_15"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvConfirm"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <com.fengwo.module_comment.widget.GradientTextView
        android:id="@+id/tvConfirm"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_36"
        android:layout_marginStart="@dimen/dp_10"
        android:gravity="center"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/text_white"
        app:layout_constraintLeft_toRightOf="@id/tvCancel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvCancel"
        tools:text="去充值" />
</androidx.constraintlayout.widget.ConstraintLayout>