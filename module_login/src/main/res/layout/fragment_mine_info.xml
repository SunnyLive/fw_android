<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back_c1e"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_12"
        android:paddingTop="@dimen/dp_6"
        android:paddingEnd="@dimen/dp_12">

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_mine_detail_location"
            android:gravity="center_vertical"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_is_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:textColor="@color/blue_63A5FF"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/tv_distance"
            app:layout_constraintLeft_toRightOf="@+id/tv_distance"
            app:layout_constraintTop_toTopOf="@+id/tv_distance" />


        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:src="@drawable/ic_boy_sex"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tv_distance"
            app:layout_constraintLeft_toRightOf="@+id/tv_is_online"
            app:layout_constraintTop_toTopOf="@+id/tv_distance" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="@+id/tv_distance"
            app:layout_constraintLeft_toRightOf="@+id/iv_sex"
            app:layout_constraintTop_toTopOf="@+id/tv_distance" />


        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="新人主播,求关注,多多指教~在线实时打扰噢"
            android:textColor="@color/text_66"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="@+id/tv_distance"
            app:layout_constraintTop_toBottomOf="@+id/tv_distance" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/lin_F7F7F7"
            app:layout_constraintTop_toBottomOf="@+id/tv_des" />

        <TextView
            android:id="@+id/tv_user_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="用户等级:"
            android:textColor="@color/text_66"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="@+id/view1"
            app:layout_constraintTop_toBottomOf="@+id/view1" />

        <ImageView
            android:id="@+id/iv_user_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            app:layout_constraintBottom_toBottomOf="@+id/tv_user_level"
            app:layout_constraintLeft_toRightOf="@+id/tv_user_level"
            app:layout_constraintTop_toTopOf="@+id/tv_user_level"
            tools:layout_height="@dimen/dp_20"
            tools:layout_width="@dimen/dp_74"
            tools:src="@color/red_FE3C9C" />

        <TextView
            android:id="@+id/tv_live_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:text="主播等级:"
            android:textColor="@color/text_66"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/iv_user_level"
            app:layout_constraintLeft_toRightOf="@+id/iv_user_level"
            app:layout_constraintTop_toTopOf="@+id/iv_user_level" />


        <ImageView
            android:id="@+id/iv_live_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            app:layout_constraintBottom_toBottomOf="@+id/tv_live_level"
            app:layout_constraintLeft_toRightOf="@+id/tv_live_level"
            app:layout_constraintTop_toTopOf="@+id/tv_live_level" />

        <ImageView
            android:id="@+id/iv_activity_tag"
            android:layout_width="@dimen/dp_74"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toBottomOf="@+id/tv_live_level"
            app:layout_constraintLeft_toRightOf="@+id/iv_live_level"
            app:layout_constraintTop_toTopOf="@+id/tv_live_level"
            tools:background="#FF0000" />


        <!--
                &lt;!&ndash;    徽章     &ndash;&gt;
                <ImageView
                    android:id="@+id/iv_medal"
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_6"
                    android:layout_gravity="bottom"
                    android:background="@color/red_FE3C9C"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_activity_tag"
                    app:layout_constraintLeft_toRightOf="@+id/iv_activity_tag"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_activity_tag" />
        -->


        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/lin_F7F7F7"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_level" />

        <TextView
            android:id="@+id/tv_user_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="个人信息"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_16"
            app:layout_constraintLeft_toLeftOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/view2" />

        <TextView
            android:id="@+id/tv_id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="蜂窝号:"
            android:textColor="@color/text_66"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toBottomOf="@id/tv_user_txt"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/tv_id_title"
            app:layout_constraintLeft_toRightOf="@+id/tv_id_title"
            app:layout_constraintTop_toTopOf="@+id/tv_id_title" />

        <TextView
            android:id="@+id/tv_id_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/bg_gray_radius"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_3"
            android:paddingEnd="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_3"
            android:text="复制"
            android:textColor="@color/gray_979797"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBottom_toBottomOf="@+id/tv_id"
            app:layout_constraintLeft_toRightOf="@+id/tv_id"
            app:layout_constraintTop_toTopOf="@+id/tv_id" />

        <TextView
            android:id="@+id/tv_xingzuo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="星座:"
            android:textColor="@color/text_66"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toBottomOf="@id/tv_id_title"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_constellation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/tv_xingzuo_title"
            app:layout_constraintLeft_toRightOf="@+id/tv_xingzuo_title"
            app:layout_constraintTop_toTopOf="@+id/tv_xingzuo_title" />


        <TextView
            android:id="@+id/tv_hw_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="身高体重:"
            android:textColor="@color/text_66"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toBottomOf="@id/tv_xingzuo_title"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_hw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/tv_hw_title"
            app:layout_constraintLeft_toRightOf="@+id/tv_hw_title"
            app:layout_constraintTop_toTopOf="@+id/tv_hw_title" />

        <TextView
            android:id="@+id/tv_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="地址:"
            android:textColor="@color/text_66"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toBottomOf="@id/tv_hw_title"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/tv_address_title"
            app:layout_constraintLeft_toRightOf="@+id/tv_address_title"
            app:layout_constraintTop_toTopOf="@+id/tv_address_title" />

        <TextView
            android:id="@+id/tv_idea_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="理想型:"
            android:textColor="@color/text_66"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toBottomOf="@id/tv_address_title"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_ideal_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:textColor="@color/blue_5DB5FF"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/tv_idea_type_title"
            app:layout_constraintLeft_toRightOf="@+id/tv_idea_type_title"
            app:layout_constraintTop_toTopOf="@+id/tv_idea_type_title" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/lin_F7F7F7"
            app:layout_constraintTop_toBottomOf="@+id/tv_ideal_type" />


        <RelativeLayout
            android:id="@+id/rl_live"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/view3">


            <RelativeLayout
                android:id="@+id/rl_anchor_guard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/live_bg_user_info_guard"
                android:paddingTop="@dimen/dp_5"

                android:paddingBottom="@dimen/dp_5">

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="@dimen/dp_40"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_guard_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@drawable/ic_user_info_guard" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_guard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_toEndOf="@+id/ll1"
                    android:text="守护"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_guard_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_toEndOf="@+id/tv_guard"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_14" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_guard"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_27"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_toEndOf="@+id/tv_guard_num"
                    android:fadingEdge="horizontal"
                    android:layoutDirection="ltr"
                    android:requiresFadingEdge="horizontal" />

                <ImageView
                    android:id="@+id/iv_guard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_13"
                    android:background="@drawable/ic_user_info_guard_now" />

                <TextView
                    android:id="@+id/tv_guard_left_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_13"
                    android:textColor="@color/red_FF5E5E" />

                <ImageView
                    android:id="@+id/iv_guard_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_13"
                    android:background="@drawable/ic_wish_go"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_today_receive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_anchor_guard"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/live_bg_user_info_guard"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                app:layout_constraintTop_toBottomOf="@+id/rl_anchor_guard">

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_today_receive_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:background="@drawable/ic_mine_detail_today_receive" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_today_receive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_toEndOf="@+id/ll2"
                    android:text="今日贡献榜花蜜值"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_today_receive_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_toEndOf="@+id/tv_today_receive"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_14" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_today_receive"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_27"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_toEndOf="@+id/tv_today_receive_num"
                    android:fadingEdge="horizontal"
                    android:layoutDirection="ltr"
                    android:requiresFadingEdge="horizontal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_13"
                    android:background="@drawable/ic_wish_go" />

            </RelativeLayout>


            <!--   新增 今日印象总值  -->
            <RelativeLayout
                android:id="@+id/rl_impression_column"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_today_receive"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/live_bg_user_info_guard"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5">

                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iv_impression_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@drawable/icon_today_total" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_impression_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_toEndOf="@+id/ll3"
                    android:text="今日总印象值"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_impression__num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_toEndOf="@+id/tv_impression_title"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_14"
                    tools:text="212313" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_impression_img"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_27"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_toEndOf="@+id/tv_impression__num"
                    android:fadingEdge="horizontal"
                    android:layoutDirection="ltr"
                    android:requiresFadingEdge="horizontal" />

            </RelativeLayout>


            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/rl_impression_column"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/lin_F7F7F7" />


            <TextView
                android:id="@+id/tv_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view4"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_15"
                android:text="本月礼物墙·花蜜值"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view4" />

            <TextView
                android:id="@+id/tv_gift_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view4"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_toEndOf="@+id/tv_gift"
                android:text="asgasg"
                android:textColor="#FE3C9C"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toRightOf="@+id/tv_gift"
                app:layout_constraintTop_toBottomOf="@+id/view4" />

            <TextView
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view4"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_5"
                android:text="查看更多"
                android:textColor="@color/text_66"
                android:textSize="@dimen/sp_14" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_gift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_gift"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_5"
                android:fadingEdge="horizontal"
                android:layoutDirection="ltr"
                android:requiresFadingEdge="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/tv_gift" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>