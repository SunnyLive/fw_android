<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
        android:layout_marginStart="@dimen/dp_19"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_15"
        >

        <!--   时间     -->
        <TextView
            android:id="@+id/tv_mine_card_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_marginEnd="@dimen/dp_10"
            android:textColor="@color/gray_999999"
            android:textSize="@dimen/sp_12"
            tools:text="10分钟之前" />

        <!--   审核状态     -->
        <TextView
            android:id="@+id/tv_mine_card_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tv_mine_card_time"
            android:textSize="@dimen/sp_12"
            tools:text="审核中，仅自己可见" />


        <ImageView
            android:id="@+id/iv_mine_card_more"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_more" />

    </RelativeLayout>

    <!--   图片内容   -->
    <com.fengwo.module_comment.widget.ClickableRecyclerView
        android:id="@+id/rv_mine_card_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        />

    <!--  文本内容  -->
    <TextView
        android:id="@+id/tv_mine_card_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:maxLines="3"
        android:visibility="gone"
        tools:visibility="visible"
        android:textColor="@color/gray_666666"
        android:textSize="@dimen/sp_14"
        tools:text="不是你的菜，别去掀锅盖 不是你的哎，千万别依赖"
        />
<TextView
    android:id="@+id/tv_qb"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_3"
    android:textColor="#63A5FF"
    android:textSize="@dimen/sp_13"
    android:autoLink="all"
    android:layout_marginStart="@dimen/dp_15"
    android:text="展开"/>

    <RelativeLayout
        android:id="@+id/rl_mine_card_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:visibility="gone"
        tools:visibility="visible"
        >

        <!--   位置     -->
        <TextView
            android:id="@+id/tv_mine_card_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/icon_location"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="@color/gray_999999"
            android:textSize="@dimen/sp_12"
            tools:text="深圳南山 12m" />


        <!-- 评论  -->
        <TextView
            android:id="@+id/tv_mine_card_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:drawableStart="@drawable/icon_comment"
            android:gravity="center"
            android:text="评论"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="@color/gray_999999"
            android:textSize="@dimen/sp_12" />


        <!--   点赞     -->
        <TextView
            android:id="@+id/tv_mine_card_give"
            android:layout_toStartOf="@id/tv_mine_card_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_6"
            android:drawableStart="@drawable/icon_mine_card_islike"
            android:gravity="center"
            android:text="0"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="@color/gray_999999"
            android:textSize="@dimen/sp_12" />

        <!--   转发   -->
        <TextView
            android:id="@+id/tv_mine_card_transmit"
            android:layout_toStartOf="@id/tv_mine_card_give"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_6"
            android:drawableStart="@drawable/icon_transmit"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="@color/gray_999999"
            android:textSize="@dimen/sp_12"
            android:text="0"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/gray_C8C8C8"/>
</LinearLayout>