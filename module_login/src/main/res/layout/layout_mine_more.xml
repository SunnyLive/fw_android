<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_mine_more"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mine_more_modify"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/red_FE3C9C"
            android:textSize="@dimen/sp_18" />
        <View
            android:layout_width="match_parent"
            android:background="@color/gray_ececec"
            android:layout_height="@dimen/dp_1"/>
        <TextView
            android:id="@+id/tv_mine_more_del"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/red_FE3C9C"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_mine_more_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_23"
        android:background="@drawable/bg_mine_more"
        android:gravity="center"
        android:padding="@dimen/dp_17"
        android:text="取消"
        android:textColor="@color/text_33"
        android:textStyle="bold"
        android:textSize="@dimen/sp_18" />


</LinearLayout>