<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_attention"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">

    <RelativeLayout
        android:id="@+id/civ_head_root"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!--    头像-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_head"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/default_head"
            app:layout_constraintCircleRadius="@dimen/dp_8" />
        <RelativeLayout
            android:id="@+id/rl_zx_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:visibility="gone"
            android:background="@drawable/bg_zx_man"
            android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/gif_sex"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/gif_nan"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_3"
                />

        </RelativeLayout>


    </RelativeLayout>

    <!--    昵称-->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_6"
        android:ellipsize="end"
        android:maxEms="8"
        android:singleLine="true"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_14"

        app:layout_constraintLeft_toRightOf="@+id/civ_head_root"
        app:layout_constraintTop_toTopOf="@+id/civ_head_root"
        tools:text="宇宙无敌美男1111" />
    <TextView
        android:id="@+id/tv_jf"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_12"

        android:background="@drawable/pic_fj"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintLeft_toRightOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        />
    <!--    在线状态-->
    <TextView
        android:id="@+id/tv_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:background="@mipmap/pic_chat_zx"
        android:textColor="@color/blue_63A5FF"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintLeft_toRightOf="@+id/tv_age"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        tools:text="" />
    <!--    年龄-->
    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:drawablePadding="@dimen/dp_4"
        android:gravity="right"
        android:paddingLeft="@dimen/dp_5"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_2"
        android:text="25"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_10"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintLeft_toRightOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        tools:background="@drawable/shape_corner_boy"
        tools:drawableLeft="@drawable/ic_boy"
        tools:ignore="RtlHardcoded" />
    <!--    是否在直播状态-->
    <RelativeLayout
        android:id="@+id/iv_gif_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/shape_oval_boy_live_state_red"
        android:gravity="center"
        android:paddingStart="@dimen/dp_4"
        android:paddingTop="@dimen/dp_2"
        android:paddingEnd="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintLeft_toRightOf="@+id/tv_age"
        app:layout_constraintTop_toTopOf="@+id/tv_name">

        <ImageView
            android:id="@+id/iv_gif"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            tools:background="@drawable/live_cell_gif" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_is_live"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/bg_attention_home_tab_gradient"
        android:gravity="center"
        android:text="直播中"
        android:textColor="#FE3C9C"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/civ_head_root" />

    <!--    是否是好友-->
    <TextView
        android:id="@+id/tv_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/shape_is_friends"
        android:gravity="right"
        android:paddingLeft="@dimen/dp_5"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_2"
        android:text="好友"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_10"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintLeft_toRightOf="@+id/tv_age"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        tools:ignore="RtlHardcoded"
        tools:visibility="gone" />


    <!--    签名-->
    <TextView
        android:id="@+id/tv_signature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_12"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        app:layout_constraintRight_toLeftOf="@+id/tv_attention"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        tools:text="不能怕黑就开灯想念就联系不能怕黑就开灯想念就联系不能怕黑就开灯想念就联系" />
    <!--    距离与状态-->
    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_b3b2b2"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_signature"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_signature"
        tools:text="0km" />

    <!--    关注状态-->
    <TextView
        android:id="@+id/tv_attention"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/bg_attention_status"
        android:gravity="center"
        android:text="+ 关注"
        android:textColor="@color/gray_999999"
        android:textSize="@dimen/sp_12"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_is_live" />

    <!--    占位-->
    <View
        android:id="@+id/right_margin"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_50"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/civ_head_root"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/civ_head_root" />

    <!--    分割线-->
    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@color/gray_f1"
        app:layout_constraintLeft_toLeftOf="@+id/tv_signature"
        app:layout_constraintRight_toRightOf="@+id/tv_distance"
        app:layout_constraintTop_toBottomOf="@+id/tv_signature" />
</androidx.constraintlayout.widget.ConstraintLayout>