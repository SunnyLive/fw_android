<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/normal_bg">

    <include layout="@layout/base_toolbar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/normal_bg"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">
    </androidx.recyclerview.widget.RecyclerView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_18">
    <EditText
        android:id="@+id/edit_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_160"
        android:background="@null"
        android:hint="请输入举报信息，140字以内"
        android:gravity="top"
        android:maxLength="140"
        android:textSize="@dimen/sp_14" />
        <TextView
            android:id="@+id/tv_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_000000"
            android:textSize="@dimen/sp_12"
            android:text="0/140"
            android:layout_gravity="bottom|right"/>
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white">
    </androidx.recyclerview.widget.RecyclerView>



    <com.fengwo.module_comment.widget.GradientTextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_44"
        android:textColor="@color/text_white"
        android:layout_marginRight="@dimen/dp_44"
        android:text="提交"
        android:gravity="center"
        android:textSize="@dimen/sp_16"/>


</LinearLayout>
