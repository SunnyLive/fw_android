<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_toolbar" />

    <FrameLayout
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_133"
            android:scaleType="fitXY"
            android:src="@drawable/icon_realname_bg" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_116"
            android:background="@drawable/bg_realname_radius"

            >

            <!--          用户名           -->


            <TextView
                android:id="@+id/tv_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_18"
                android:text="真实姓名"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />


            <com.fengwo.module_comment.widget.ClearEditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_21"
                android:layout_toEndOf="@id/tv_name_label"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="请输入真实姓名"
                android:lines="1"
                android:paddingTop="@dimen/dp_18"
                android:paddingBottom="@dimen/dp_18"
                android:textColor="@color/text_cc"
                android:textSize="@dimen/sp_15" />



            <View
                android:id="@+id/v_line1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@id/et_name"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:background="@color/normal_bg1" />



            <!--  身份证号码   -->

            <TextView
                android:id="@+id/tv_id_card_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/v_line1"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_18"
                android:text="身份号码"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <com.fengwo.module_comment.widget.ClearEditText
                android:id="@+id/et_id_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v_line1"
                android:layout_marginStart="@dimen/dp_21"
                android:layout_toEndOf="@id/tv_name_label"
                android:background="@null"
                android:hint="请输入您的身份证号码"
                android:maxLength="18"
                android:lines="1"
                android:digits="0123456789xX"
                android:paddingTop="@dimen/dp_18"
                android:paddingBottom="@dimen/dp_18"
                android:textColor="@color/text_cc"
                android:textSize="@dimen/sp_15" />



            <View
                android:id="@+id/v_line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_below="@id/et_id_card"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:background="@color/normal_bg1" />




            <!--       上传身份证照片         -->


            <TextView
                android:id="@+id/tv_id_card_img_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/v_line2"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_18"
                android:text="上传身份证照片"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />



            <LinearLayout
                android:layout_below="@+id/tv_id_card_img_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                >


                <FrameLayout
                    android:layout_weight="1"
                    android:id="@+id/btn_id_card_head"
                    android:layout_width="@dimen/dp_168"
                    android:layout_height="@dimen/dp_103"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/iv_id_card_head"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_id_cardz_front"
                        android:scaleType="fitXY" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/bg_300"
                        />


                    <ImageView
                        android:id="@+id/iv_btn_id_card_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_camera"
                        android:layout_gravity="center"
                        />
                </FrameLayout>


                <FrameLayout
                    android:layout_weight="1"
                    android:id="@+id/btn_id_card_back"
                    android:layout_width="@dimen/dp_168"
                    android:layout_height="@dimen/dp_103"
                    android:layout_marginTop="@dimen/dp_15">


                    <ImageView
                        android:id="@+id/iv_id_card_back"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_id_cardz_side"
                        android:scaleType="fitXY" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/bg_300"
                        />


                    <ImageView
                        android:id="@+id/iv_btn_id_card_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_camera"
                        android:layout_gravity="center"
                        />


                </FrameLayout>

            </LinearLayout>



            <TextView
                android:id="@+id/tv_rule"
                android:layout_above="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_15"
                android:gravity="center"
                android:text="@string/realname_rule"
                android:textColor="@color/text_33"
                android:textSize="12sp" />


            <Button
                android:id="@id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_51"
                android:background="@drawable/bg_realname_btn"
                android:gravity="center"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:layout_alignParentBottom="true"
                android:text="开始认证"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_20" />

        </RelativeLayout>


    </FrameLayout>


    <!--   认证成功页面   -->


</LinearLayout>

