<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:swipe="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/normal_bg"
    android:layout_marginTop="@dimen/dp_3"
    android:layout_height="wrap_content">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:layout_height="match_parent">
            <View
                android:layout_width="@dimen/dp_10"
                android:layout_height="match_parent"
                android:background="@color/normal_bg"/>
            <TextView
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_32"
                android:paddingRight="@dimen/dp_32"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/purple_9966ff"
                android:text="刪除"/>
        </LinearLayout>
        <LinearLayout
            android:background="@color/white"
            android:padding="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:background="#f0f"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/text_33"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/sp_16"
                    android:text="啊是的噶"/>
                <com.willy.ratingbar.ScaleRatingBar
                    android:id="@+id/ratingbar"
                    style="@style/RadingStyle"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_name"
                    app:srb_rating="3"
                    app:srb_starPadding="3dp"
                    app:srb_drawableEmpty="@drawable/ic_star_grey"
                    app:srb_drawableFilled="@drawable/ic_star"
                    android:numStars="5"
                    android:layout_below="@id/tv_name"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignBottom="@id/ratingbar"
                    android:layout_toRightOf="@id/ratingbar"
                    android:text="8.8分"
                    android:layout_height="wrap_content"
                    android:textColor="#FB4B4B"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ratingbar"
                    android:textColor="@color/text_33"
                    android:layout_alignLeft="@id/tv_name"
                    android:textSize="@dimen/sp_12"
                    android:text="啊是的噶"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_alignLeft="@id/tv_name"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>

    </com.daimajia.swipe.SwipeLayout>
</LinearLayout>