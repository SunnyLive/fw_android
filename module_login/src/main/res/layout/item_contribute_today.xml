<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_10"
    android:paddingRight="@dimen/dp_12"
    android:layout_marginBottom="@dimen/dp_10">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_position"
        android:layout_width="@dimen/dp_28"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_18" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_header"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_toRightOf="@+id/tv_position" />

    <TextView
        android:id="@+id/tv_nick_name"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="17dp"
        android:layout_toStartOf="@+id/tv_mine"
        android:layout_toEndOf="@+id/iv_header"
        android:gravity="start"
        android:singleLine="true"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_toStartOf="@+id/tv_receive"
        android:background="@drawable/shape_pank"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_4"
        android:paddingRight="@dimen/dp_10"
        android:text="我"
        android:paddingBottom="@dimen/dp_4"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_10"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/tv_item_honey_value"
        android:layout_weight="1"
        android:gravity="right"
        android:text="花蜜值:"
        android:textColor="#BBBBBB"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_item_honey_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_2"
        android:text="asgasg"
        android:textColor="@color/alpha_dcd_what"
        android:textSize="@dimen/sp_12" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_lin"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_10"

        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@color/lin_40"
        />

</LinearLayout>
