<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:background="@drawable/login_bg_corner_white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="@dimen/dp_20"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_20">

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:background="#f0f" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/iv_header"
        android:text="微信充值"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_title"
        android:text="60"
        android:textColor="@color/purple_9966ff"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_price"
        android:text="花钻"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_giftnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_alignLeft="@id/tv_title"
        android:layout_marginTop="@dimen/dp_10"
        android:text="32个礼物"
        android:textColor="@color/text_66"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_fengmizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_giftnum"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/tv_giftnum"
        android:text="6100蜂蜜值"
        android:textColor="#FF9900"
        android:textSize="@dimen/sp_14" />

    <ImageView
        android:layout_width="@dimen/dp_5"
        android:layout_height="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arr_more" />


</RelativeLayout>