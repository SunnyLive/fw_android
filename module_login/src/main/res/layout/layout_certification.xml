<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_certification_columns"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/bg_dialog"
    android:orientation="horizontal"
    android:padding="@dimen/dp_15"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/ll_server_columns">

    <ImageView
        android:id="@+id/iv_anchor_certification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_marginEnd="@dimen/dp_30"
        android:src="@drawable/icon_anchor_certification_def"
        app:layout_constraintRight_toRightOf="@+id/line_certification"
        app:layout_constraintTop_toBottomOf="@+id/tv_anchor_certification" />

    <ImageView
        android:id="@+id/iv_expert_certification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_marginEnd="@dimen/dp_15"
        android:src="@drawable/icon_expert_certification_def"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_expert_certification" />


    <TextView
        android:id="@+id/tv_anchor_certification_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="主播认证"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ImageView
        android:id="@+id/iv_expert_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_expert_certification_label"
        app:layout_constraintBottom_toBottomOf="@+id/tv_expert_certification_label"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        android:src="@drawable/icon_expert_modify"/>


    <TextView
        android:id="@+id/tv_expert_certification_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:text="达人资料"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toRightOf="@+id/line_certification"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_expert_certification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:drawableEnd="@drawable/bg_certification_icon"
        android:gravity="center_vertical"
        android:background="@drawable/bg_certification_expert"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_12"
        android:text="快来成为达人"
        app:layout_constraintLeft_toRightOf="@+id/line_certification"
        app:layout_constraintTop_toBottomOf="@+id/tv_expert_certification_label" />

    <TextView
        android:id="@+id/tv_anchor_certification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:drawableEnd="@drawable/bg_certification_icon"
        android:gravity="center_vertical"
        android:background="@drawable/bg_certification_anchor"
        android:textColor="@color/text_99"
        android:text="快来成为主播"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_anchor_certification_label" />


    <View
        android:id="@+id/line_certification"
        android:layout_width="@dimen/dp_0_5"
        android:layout_height="0dp"
        android:background="@color/lin_F7F7F7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
