<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/base_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

<!--            <de.hdodenhof.circleimageview.CircleImageView-->
<!--                android:id="@+id/iv_header"-->
<!--                android:layout_width="@dimen/dp_90"-->
<!--                android:layout_height="@dimen/dp_90"-->
<!--                android:layout_margin="@dimen/dp_20"-->
<!--                tools:src="@drawable/ic_default_head" />-->


<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginBottom="@dimen/dp_30"-->
<!--                android:text="点击更换头像"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="@dimen/sp_14" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_f8f8f8"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:text="我的照片墙"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"


                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_photo_wall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="上传人像清晰照片，最多可添加6张，可以拖拽排序"
                android:textColor="@color/gray_9F9F9F"
                android:textSize="@dimen/sp_14" />

            <FrameLayout
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_120"
                android:layout_marginTop="@dimen/dp_40"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/btn_takepic"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="right|bottom"
                    android:background="@drawable/login_bg_caream"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/login_ic_caream" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_f8f8f8"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:text="账号信息"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
              />

            <LinearLayout
                android:id="@+id/btn_to_setname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textColor="@color/gray_9F9F9F"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_9F9F9F"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_9"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_18"
                    android:src="@drawable/ic_arr_more" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="蜂窝号"
                    android:textColor="@color/gray_9F9F9F"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_9F9F9F"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_9"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_18"
                    android:src="@drawable/ic_arr_more" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_f8f8f8"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:text="个人信息"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
         />

            <LinearLayout
                android:id="@+id/btn_to_setsex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textColor="@color/gray_9F9F9F"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_sex"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:src="@drawable/ic_boy_sex"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="男"
                    android:textColor="@color/gray_9F9F9F"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_9"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_18"
                    android:src="@drawable/ic_arr_more" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/btn_to_setbirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生日/星座"
                    android:textColor="@color/gray_9F9F9F"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未设置"
                    android:textColor="@color/gray_9F9F9F"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_9"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@drawable/ic_arr_more" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/btn_to_setlocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在地"
                    android:textColor="@color/gray_9F9F9F"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全球"
                    android:textColor="@color/gray_9F9F9F"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_9"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@drawable/ic_arr_more" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_hw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身高体重"
                    android:textColor="@color/gray_9F9F9F"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_hw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_9F9F9F"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_9"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@drawable/ic_arr_more" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_ideal_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="理想型"
                    android:textColor="@color/gray_9F9F9F"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_ideal_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_9F9F9F"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_9"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@drawable/ic_arr_more" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_f8f8f8"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:text="个人简介"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
           />


            <LinearLayout
                android:id="@+id/btn_to_setdes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_add_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_mine_add_ideal_type"
                    android:drawablePadding="@dimen/dp_2"
                    android:text="添加我的个人签名"
                    android:textColor="@color/red_FE3ACE"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_f8f8f8"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:text="我的标签"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
          />


            <com.donkingliang.labels.LabelsView
                android:id="@+id/lv_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_25"
                app:isIndicator="true"
                app:labelBackground="@drawable/bg_mine_label"
                app:labelTextColor="@color/alpha_245"
                app:labelTextPaddingBottom="@dimen/dp_8"
                app:labelTextPaddingLeft="@dimen/dp_12"
                app:labelTextPaddingRight="@dimen/dp_12"
                app:labelTextPaddingTop="@dimen/dp_8"
                app:labelTextSize="14sp"
                app:lineMargin="10dp"
                app:maxLines="3"
                app:selectType="SINGLE"
                app:wordMargin="10dp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>