<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/dp_8"
    android:paddingBottom="@dimen/dp_30"
    android:background="@drawable/shape_white_corner"
    android:layout_marginLeft="@dimen/dp_30"
    android:layout_marginRight="@dimen/dp_30"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_wish"
        android:layout_gravity="right"
        android:padding="@dimen/dp_6"/>

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_25"
        android:paddingRight="@dimen/dp_25"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_3333"
        android:text="(208783052）账号已申请注销，您已被登出，仅有7天可撤销，之后将自动注销。"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_gravity="center"/>

    <com.fengwo.module_comment.widget.GradientTextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_44"
        android:layout_marginRight="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_30"
        android:text="撤销注销申请"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        app:gtv_start_color="@color/red_ED62CB"
        app:gtv_end_color="@color/red_ED62CB"/>


</LinearLayout>
