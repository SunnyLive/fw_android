<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_mine_more"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_choose_all"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:gravity="center"
            android:text="所有人可见"
            android:textColor="@color/red_FE3C9C"
            android:textSize="@dimen/sp_18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray_ececec" />


        <TextView
            android:id="@+id/tv_choose_private"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:gravity="center"
            android:text="仅自己可见"
            android:textColor="@color/red_FE3C9C"
            android:textSize="@dimen/sp_18"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray_ececec" />


        <TextView
            android:id="@+id/tv_choose_friend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:gravity="center"
            android:text="仅好友可见"
            android:textColor="@color/red_FE3C9C"
            android:textSize="@dimen/sp_18" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_mine_more_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_23"
        android:background="@drawable/bg_mine_more"
        android:gravity="center"
        android:padding="@dimen/dp_17"
        android:text="取消"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />


</LinearLayout>