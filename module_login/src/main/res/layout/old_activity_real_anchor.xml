<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <include layout="@layout/base_toolbar" />

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="visible"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_133"
                android:scaleType="fitXY"
                android:src="@drawable/icon_anchor_bg_old" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_116"
                android:background="@drawable/bg_realname_radius">

                <!--          用户名           -->

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/v_line2"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_17"
                    android:textColor="@color/text_cc"
                    android:textSize="@dimen/sp_15" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/v_line1"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_18"
                    android:text="手机号码"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_18"
                    android:text="真实姓名"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />


                <!--     手机号       -->


                <TextView
                    android:id="@+id/btn_getcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/v_line2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_13"
                    android:background="@drawable/bg_realname_btn_bg"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingEnd="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_6"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/text_white" />


                <TextView
                    android:id="@+id/tv_id_card_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/v_line3"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_18"
                    android:text="上传身份证照片"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />


                <View
                    android:id="@+id/v_line1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@id/et_name"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:background="@color/normal_bg1" />


                <View
                    android:id="@+id/v_line2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@id/et_phone"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:background="@color/normal_bg1" />


                <View
                    android:id="@+id/v_line3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:layout_below="@id/btn_getcode"
                    android:background="@color/normal_bg1" />


                <!--       上传身份证照片         -->

                <com.fengwo.module_comment.widget.ClearEditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/v_line1"
                    android:layout_marginStart="@dimen/dp_21"
                    android:layout_toEndOf="@id/tv_name_label"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:maxLength="11"
                    android:paddingTop="@dimen/dp_18"
                    android:paddingBottom="@dimen/dp_18"
                    android:textColor="@color/text_cc"
                    android:textSize="@dimen/sp_15" />


                <com.fengwo.module_comment.widget.ClearEditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_21"
                    android:layout_toEndOf="@id/tv_name_label"
                    android:background="@null"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="请输入真实姓名"
                    android:paddingTop="@dimen/dp_18"
                    android:paddingBottom="@dimen/dp_18"
                    android:textColor="@color/text_cc"
                    android:textSize="@dimen/sp_15" />



                <LinearLayout
                    android:id="@+id/ll_id_card_parent"
                    android:layout_below="@+id/tv_id_card_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingEnd="@dimen/dp_16"
                    >


                    <FrameLayout
                        android:layout_weight="1"
                        android:id="@+id/btn_id_card_head"
                        android:layout_width="@dimen/dp_168"
                        android:layout_height="@dimen/dp_103"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_15">

                        <ImageView
                            android:id="@+id/iv_id_card_head"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_id_cardz_front"
                            android:scaleType="fitXY" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/bg_300"
                            />


                        <ImageView
                            android:id="@+id/iv_btn_id_card_head"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_camera"
                            android:layout_gravity="center"
                            />


                        <ImageView
                            android:id="@+id/iv_card_head_del"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:src="@drawable/icon_anchor_audio_del"
                            android:visibility="gone" />
                    </FrameLayout>


                    <FrameLayout
                        android:layout_weight="1"
                        android:id="@+id/btn_id_card_back"
                        android:layout_width="@dimen/dp_168"
                        android:layout_height="@dimen/dp_103"
                        android:layout_marginTop="@dimen/dp_15">


                        <ImageView
                            android:id="@+id/iv_id_card_back"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_id_cardz_side"
                            android:scaleType="fitXY" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/bg_300"
                            />


                        <ImageView
                            android:id="@+id/iv_btn_id_card_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_camera"
                            android:layout_gravity="center"
                            />


                        <ImageView
                            android:id="@+id/iv_card_back_del"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:src="@drawable/icon_anchor_audio_del"
                            android:visibility="gone" />
                    </FrameLayout>


                </LinearLayout>




                <TextView
                    android:id="@+id/tv_take_id_card_label"
                    android:layout_below="@id/ll_id_card_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginStart="@dimen/dp_15"
                    android:text="上传手持身份证照片"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <FrameLayout
                    android:id="@+id/btn_take_id_card"
                    android:layout_below="@id/tv_take_id_card_label"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_164"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/iv_take_id_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_fw_id_card"
                        android:layout_gravity="center"
                        android:scaleType="fitXY" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/bg_300"
                        />


                    <ImageView
                        android:id="@+id/iv_btn_take_id_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_camera"
                        android:layout_gravity="center"
                        />

                    <ImageView
                        android:id="@+id/iv_take_id_card_del"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:src="@drawable/icon_anchor_audio_del"
                        android:visibility="gone" />
                </FrameLayout>



                <TextView
                    android:id="@+id/tv_rule"
                    android:layout_below="@id/btn_take_id_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_38"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:gravity="center"
                    android:text="@string/realname_rule"
                    android:textColor="@color/text_33"
                    android:textSize="12sp" />


                <Button
                    android:id="@id/btn_submit"
                    android:layout_below="@id/tv_rule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_51"
                    android:background="@drawable/bg_realname_btn"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_12"
                    android:text="开始认证"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/sp_20" />


            </RelativeLayout>


        </FrameLayout>

    </ScrollView>


    <LinearLayout

        android:id="@+id/ll_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        tools:visibility="gone"
        >

        <ImageView
            android:id="@+id/iv_real_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_real_name_success" />

        <TextView
            android:id="@+id/tv_failed_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text=""
            android:textColor="@color/text_99"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_real_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="已完成主播认证~"
            android:textColor="@color/text_99"
            android:textSize="@dimen/sp_13" />

        <Button
            android:id="@+id/btn_recommit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_51"
            android:background="@drawable/bg_realname_btn"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_5"
            android:text="重新认证"
            android:textColor="@color/text_white"
            android:visibility="gone"
            tools:visibility="visible"
            />

    </LinearLayout>



</LinearLayout>



