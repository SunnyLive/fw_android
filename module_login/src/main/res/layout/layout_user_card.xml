<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_user_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_100"
    android:orientation="vertical"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.8"
    tools:background="@color/text_33">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_55"
        android:background="@drawable/bg_dialog"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15">


        <!--   这个是用户的数据信息    -->

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:background="@drawable/bg_dialog"
            android:lines="1"
            android:maxLength="10"
            android:singleLine="true"
            android:text="回忆终究是一个过去"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_user_age_bg"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/tv_user_age_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_110"
            android:background="@drawable/sex_choose_bg"
            android:paddingStart="@dimen/dp_3"
            android:paddingEnd="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_5"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="@+id/tv_user_name"
            app:layout_constraintLeft_toRightOf="@+id/tv_user_name"
            app:layout_constraintTop_toTopOf="@+id/tv_user_name">

            <TextView
                android:id="@+id/tv_user_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableStart="@drawable/sex_choose_icon"
                android:drawablePadding="@dimen/dp_3"
                android:gravity="center"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_10" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_user_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:text="蜂窝号："
            android:textColor="@color/text_99"
            android:textSize="@dimen/sp_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_name" />

        <TextView
            android:id="@+id/tv_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/text_99"
            android:textSize="@dimen/sp_12"
            app:layout_constraintLeft_toRightOf="@+id/tv_user_id_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
            tools:text="555555" />

        <TextView
            android:id="@+id/tv_user_id_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/bg_red_radius"
            android:paddingStart="@dimen/dp_6"
            android:paddingTop="@dimen/dp_3"
            android:paddingEnd="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_3"
            android:text="复制"
            android:textColor="@color/text_99"
            android:textSize="@dimen/sp_8"
            app:layout_constraintBottom_toBottomOf="@+id/tv_user_id"
            app:layout_constraintLeft_toRightOf="@+id/tv_user_id"
            app:layout_constraintTop_toTopOf="@+id/tv_user_id" />


        <FrameLayout
            android:id="@+id/fl_share_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_share_bg"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_8"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_id_copy">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableStart="@drawable/icon_qr_code"
                android:drawablePadding="@dimen/dp_4"
                android:text="分享给好友"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_10" />

        </FrameLayout>


        <!--  用户等级的徽章   -->
        <ImageView
            android:id="@+id/iv_user_level_badge"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_14"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_11"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_id_copy"
            tools:src="@drawable/login_ic_type3_v1"
            tools:visibility="visible" />


        <!--  主播等级徽章  -->
        <ImageView
            android:id="@+id/iv_anchor_level_badge"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_14"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_user_level_badge"
            app:layout_constraintLeft_toRightOf="@+id/iv_user_level_badge"
            app:layout_constraintTop_toTopOf="@+id/iv_user_level_badge"
            tools:src="@drawable/login_ic_type3_v1"
            tools:visibility="visible" />

        <!--  贵族等级徽章  -->

        <ImageView
            android:id="@+id/iv_vip_level_badge"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_14"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_anchor_level_badge"
            app:layout_constraintLeft_toRightOf="@+id/iv_anchor_level_badge"
            app:layout_constraintTop_toTopOf="@+id/iv_anchor_level_badge"
            tools:src="@drawable/login_ic_type3_v1"
            tools:visibility="visible" />

        <!--  活动等级徽章  -->
        <ImageView
            android:id="@+id/iv_active_level_badge"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_14"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_vip_level_badge"
            app:layout_constraintLeft_toRightOf="@+id/iv_vip_level_badge"
            app:layout_constraintTop_toTopOf="@+id/iv_vip_level_badge"
            tools:src="@drawable/login_ic_type3_v1"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/tv_friend_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="@color/red_FE3C9C"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/line1"
            app:layout_constraintTop_toBottomOf="@+id/fl_share_user"
            tools:text="483122" />

        <TextView
            android:id="@+id/tv_friend_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:text="好友"
            android:textColor="@color/text_99"
            android:textSize="@dimen/sp_12"
            app:layout_constraintLeft_toLeftOf="@+id/tv_friend_value"
            app:layout_constraintRight_toRightOf="@+id/tv_friend_value"
            app:layout_constraintTop_toBottomOf="@+id/tv_friend_value" />


        <View
            android:id="@+id/line1"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_32"
            android:background="@color/lin_F7F7F7"
            app:layout_constraintLeft_toRightOf="@+id/tv_friend_value"
            app:layout_constraintRight_toLeftOf="@+id/tv_attention_value"
            app:layout_constraintTop_toTopOf="@+id/tv_friend_value" />


        <TextView
            android:id="@+id/tv_attention_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="@color/red_FE3C9C"
            app:layout_constraintLeft_toRightOf="@+id/line1"
            app:layout_constraintRight_toLeftOf="@+id/line2"
            app:layout_constraintTop_toBottomOf="@+id/fl_share_user"
            tools:text="483122" />

        <TextView
            android:id="@+id/tv_attention_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:text="关注"
            android:textColor="@color/text_99"
            android:textSize="@dimen/sp_12"
            app:layout_constraintLeft_toLeftOf="@+id/tv_attention_value"
            app:layout_constraintRight_toRightOf="@+id/tv_attention_value"
            app:layout_constraintTop_toBottomOf="@+id/tv_attention_value" />


        <View
            android:id="@+id/line2"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_32"
            android:background="@color/lin_F7F7F7"
            app:layout_constraintLeft_toRightOf="@+id/tv_attention_value"
            app:layout_constraintRight_toLeftOf="@+id/tv_fans_value"
            app:layout_constraintTop_toTopOf="@+id/tv_attention_value" />

        <TextView
            android:id="@+id/tv_fans_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="@color/red_FE3C9C"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintLeft_toRightOf="@+id/line1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fl_share_user"
            tools:text="483122" />

        <TextView
            android:id="@+id/tv_fans_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:text="粉丝"
            android:textColor="@color/text_99"
            android:textSize="@dimen/sp_12"
            app:layout_constraintLeft_toLeftOf="@+id/tv_fans_value"
            app:layout_constraintRight_toRightOf="@+id/tv_fans_value"
            app:layout_constraintTop_toBottomOf="@+id/tv_fans_value" />


        <LinearLayout
            android:id="@+id/ll_user_amount_column"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@drawable/bg_mine_amount_column"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/tv_flowers_drill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/icon_flowers_drill"
                    android:drawablePadding="@dimen/dp_1"
                    android:gravity="center"
                    android:text="花钻"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/tv_flowers_drill_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:textColor="@color/color_ffc147"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/tv_flowers_drill"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="160" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_tohuami"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/tv_honey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/icon_honey"
                    android:drawablePadding="@dimen/dp_3"
                    android:gravity="center"
                    android:text="花蜜值"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/tv_honey_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:textColor="@color/color_ffc147"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/tv_honey"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="89.6万" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <RelativeLayout
        android:layout_width="@dimen/dp_118"
        android:layout_height="@dimen/dp_118"
        android:layout_gravity="end">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shadow"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_header"
            android:layout_width="@dimen/dp_87"
            android:layout_height="@dimen/dp_87"
            android:layout_centerInParent="true"
            android:src="@drawable/default_head"
            app:civ_border_color="@color/colorWhite"
            app:civ_border_width="@dimen/dp_5" />

        <ImageView
            android:id="@+id/iv_photo_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_5"
            android:visibility="invisible" />
    </RelativeLayout>


</FrameLayout>