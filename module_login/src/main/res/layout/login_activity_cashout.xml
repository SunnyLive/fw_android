<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_toolbar" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/dp_20">
            <TextView
                android:id="@+id/tv_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_below="@+id/view"
                android:text="可提现余额"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_51"
                android:text="￥"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_40" />

            <EditText
                android:id="@+id/et_withdraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv"
                android:layout_marginLeft="@dimen/dp_54"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_toRightOf="@id/tv"
                android:inputType="numberDecimal"
                android:background="@null"
                android:hint="最少提现20￥"
                android:textColorHighlight="#CCCCCC"
                android:textSize="@dimen/sp_24" />
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@id/tv"
                android:layout_alignLeft="@id/tv"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="#EAEAEA" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_30">

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:text="提现到银行卡：6229********3358"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_12" />

            <com.fengwo.module_comment.widget.GradientTextView
                android:id="@+id/tv_withdraw"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_marginTop="@dimen/dp_80"
                android:layout_marginRight="@dimen/dp_28"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:text="提现含7%税费，24小时内到账"
                android:textColor="@color/text_99"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>