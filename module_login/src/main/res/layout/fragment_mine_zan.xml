<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <com.fengwo.module_comment.widget.GradientTextView
            android:id="@+id/btn_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableRight="@drawable/bg_dongtai"
            android:drawablePadding="@dimen/dp_2"
            android:enabled="false"
            android:paddingLeft="@dimen/dp_14"
            android:paddingTop="@dimen/dp_4"
            android:paddingRight="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_4"
            android:text="动态"
            android:textColor="@color/bg_zan_txt_color"
            android:textSize="@dimen/sp_13"
            app:gtv_end_color="#F0A4FA"
            app:gtv_mid_color="#BA6FFC"
            app:gtv_radius="@dimen/dp_5"
            app:gtv_start_color="#9A43FF" />

        <com.fengwo.module_comment.widget.GradientTextView
            android:id="@+id/btn_vedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableRight="@drawable/bg_dongtai"
            android:drawablePadding="@dimen/dp_2"
            android:enabled="true"
            android:paddingLeft="@dimen/dp_14"
            android:paddingTop="@dimen/dp_4"
            android:paddingRight="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_4"
            android:text="小视频"
            android:textColor="@color/bg_zan_txt_color"
            android:textSize="@dimen/sp_13"
            app:gtv_end_color="#eeeeee"
            app:gtv_mid_color="#eeeeee"
            app:gtv_radius="@dimen/dp_5"
            app:gtv_start_color="#eeeeee" />

        <com.fengwo.module_comment.widget.GradientTextView
            android:id="@+id/btn_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableRight="@drawable/bg_dongtai"
            android:drawablePadding="@dimen/dp_2"
            android:enabled="true"
            android:paddingLeft="@dimen/dp_14"
            android:paddingTop="@dimen/dp_4"
            android:paddingRight="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_4"
            android:text="短片"
            android:textColor="@color/bg_zan_txt_color"
            android:textSize="@dimen/sp_13"
            app:gtv_end_color="#eeeeee"
            app:gtv_mid_color="#eeeeee"
            app:gtv_radius="@dimen/dp_5"
            app:gtv_start_color="#eeeeee" />
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_5" />
</LinearLayout>