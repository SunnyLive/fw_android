<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:orientation="vertical">

    <include layout="@layout/base_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_30">

            <LinearLayout
                android:id="@+id/ll_huafen_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_bg_huafen_top"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_58"
                android:paddingBottom="@dimen/dp_70">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_header"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100" />

                <ImageView
                    android:id="@+id/iv_level"
                    android:layout_width="@dimen/dp_67"
                    android:layout_height="@dimen/dp_21"
                    android:layout_marginTop="-10dp" />


                <com.fengwo.module_login.widget.HuafenProgressBar
                    android:id="@+id/progress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_7" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/iv"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:src="@drawable/login_ic_huafenzhi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_toRightOf="@id/iv"
                        android:text="花粉值"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_next_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="距离升级：50"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="-40dp"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/login_bg_corner_white"
                android:elevation="@dimen/dp_3"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_30"
                android:paddingBottom="@dimen/dp_30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="升级任务"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_18" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_task"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_30"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_1"
                    android:background="#E5B65A" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_25"
                    android:text="等级特权"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_18" />

                <View
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_1"
                    android:background="#E5B65A" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_privilege"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>