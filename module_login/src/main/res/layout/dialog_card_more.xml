<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_mine_more"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tv_choose_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:gravity="center"
                android:text="编辑"
                android:textColor="@color/red_FE3C9C"
                android:textSize="@dimen/sp_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/lin_F7F7F7" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_choose_stick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:gravity="center"
                android:text="置顶"
                android:textColor="@color/red_FE3C9C"
                android:textSize="@dimen/sp_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/lin_F7F7F7" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_choose_un_stick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:gravity="center"
                android:text="取消置顶"
                android:textColor="@color/red_FE3C9C"
                android:textSize="@dimen/sp_18"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/lin_F7F7F7" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_choose_authority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:gravity="center"
                android:text="权限"
                android:textColor="@color/red_FE3C9C"
                android:textSize="@dimen/sp_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/lin_F7F7F7" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_choose_delete"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/red_FE3C9C"
            android:textSize="@dimen/sp_18"
            android:visibility="gone"
            tools:visibility="visible" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_mine_more_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_mine_more"
        android:gravity="center"
        android:padding="@dimen/dp_17"
        android:text="取消"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />


</LinearLayout>