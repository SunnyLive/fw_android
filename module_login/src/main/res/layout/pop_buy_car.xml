<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:padding="@dimen/dp_4"
        android:textColor="@color/text_66"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="购买座驾"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/text_66"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_centerHorizontal="true"/>
    
    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_below="@+id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10" />

    <LinearLayout
        android:id="@+id/ll_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/tv_name">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_66"
            android:textSize="@dimen/sp_14"
            android:text="开通时长"/>
        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_ff6666"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:text="开通时长"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray_666666"
        android:layout_below="@+id/ll_duration"
        android:layout_marginTop="@dimen/dp_10"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll_duration"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10">
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_ff6666"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_14"
            android:text="价格"/>
        <com.fengwo.module_comment.widget.GradientTextView
            android:id="@+id/tv_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即支付"
            app:gtv_angle="90"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_14"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/text_white"
            app:gtv_end_color="#FF9439"
            app:gtv_start_color="#FF6409" />
    </RelativeLayout>

</RelativeLayout>
