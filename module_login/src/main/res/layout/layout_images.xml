<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/iv_gift_image"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        tools:src="@color/red_ff5a6d"
        android:layout_marginEnd="@dimen/dp_5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_trans_50_radius"
        android:gravity="center"
        android:paddingStart="@dimen/dp_3"
        android:paddingEnd="@dimen/dp_3"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintRight_toRightOf="@id/iv_gift_image"
        app:layout_constraintLeft_toLeftOf="@+id/iv_gift_image"
        app:layout_constraintBottom_toBottomOf="@id/iv_gift_image"
        android:text="1"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_7" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_header_image"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:civ_border_color="@color/red_FE3C9C"
        app:civ_border_width="0.5dp"
        tools:src="@color/red_ff5a6d"
        android:visibility="gone"
        />


    <FrameLayout
        android:id="@+id/fl_is_living"
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_8"
        android:background="@drawable/bg_live_history"
        app:layout_constraintRight_toRightOf="@+id/cv_header_image"
        app:layout_constraintBottom_toBottomOf="@+id/cv_header_image"
        android:visibility="gone"
        android:padding="@dimen/dp_2"
        >
        <ImageView
            android:id="@+id/iv_living"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            />
    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>