<!--        app:layout_constraintTop_toTopOf="@id/iv_head" />-->

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_10"
        android:padding="@dimen/dp_4"
        android:src="@drawable/ic_title_more"
        app:layout_constraintBottom_toBottomOf="@+id/iv_head"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_head" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/view_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_head" />


    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/normal_bg"
        app:layout_constraintBottom_toTopOf="@+id/fl_bottom" />

    <FrameLayout
        android:id="@+id/fl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tool:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_6">

            <TextView
                android:id="@+id/tv_discuss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_gray_corner_find"
                android:gravity="center"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:text="评论一下"
                android:textColor="@color/text_99"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_find_shares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_18"
                android:drawableLeft="@drawable/ic_find_share"
                android:drawablePadding="@dimen/dp_2"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_6"
                android:text="0"
                android:textColor="@color/text_66"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_find_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_mine_card_islike"
                android:drawablePadding="@dimen/dp_2"
                android:gravity="center_vertical"
                android:padding="6dp"
                android:text="0"
                android:textColor="@color/text_66"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_find_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_comment"
                android:drawablePadding="@dimen/dp_2"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_6"
                android:text="0"
                android:textColor="@color/text_66"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <include
            android:id="@+id/view_bottom_input"
            layout="@layout/chat_bottomview_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/ll_content_violation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:orientation="vertical"
            android:visibility="gone"
            tool:visibility="visible">

            <TextView
                android:id="@+id/tv_hint_label"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                tool:text="内容设计违规已封禁"
                android:textColor="#ffff5a6d"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_hint_content"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/dp_10"
                tool:text="文字内容或图片内容违规请重新上传"
                android:textColor="#ff666666"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
