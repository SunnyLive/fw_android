<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/base_toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_tips">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:layout_gravity="center"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/purple_9966ff"
        android:text="您的身份证信息仅用于实名认证"
        android:drawableLeft="@drawable/ic_securety"
        android:drawablePadding="@dimen/dp_6"/>

    </FrameLayout>

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_130"
                        android:layout_height="wrap_content"
                        android:text="*名字："
                        android:textColor="@color/text_99"
                        android:textSize="@dimen/sp_16" />

                    <com.fengwo.module_comment.widget.ClearEditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入您的姓名"
                        android:paddingTop="@dimen/dp_15"
                        android:paddingBottom="@dimen/dp_15"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

                <include layout="@layout/item_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_130"
                        android:layout_height="wrap_content"
                        android:text="*身份证号码："
                        android:textColor="@color/text_99"
                        android:textSize="@dimen/sp_16" />

                    <com.fengwo.module_comment.widget.ClearEditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入您的身份证号码"
                        android:maxLength="18"
                        android:paddingTop="@dimen/dp_15"
                        android:paddingBottom="@dimen/dp_15"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

                <include layout="@layout/item_line"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="*验证码："
                        android:textColor="@color/text_99"
                        android:textSize="@dimen/sp_16" />

                    <EditText
                        android:id="@+id/et_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:inputType="number"
                        android:maxLength="6"
                        android:paddingTop="@dimen/dp_15"
                        android:paddingBottom="@dimen/dp_15"
                        android:textSize="@dimen/sp_15" />

                    <com.fengwo.module_comment.widget.GradientTextView
                        android:id="@+id/btn_getcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_7"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_7"
                        android:text="获取验证码"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dp_20">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* 手持身份证照片"
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_16"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <FrameLayout
                        android:id="@+id/btn_takeidcard"
                        android:layout_width="@dimen/dp_125"
                        android:layout_height="@dimen/dp_80"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/login_bg_upload_rect"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="+"
                            android:textColor="@color/text_99"
                            android:textSize="@dimen/sp_30" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="@dimen/dp_6"
                            android:text="上传"
                            android:textColor="@color/text_99"
                            android:textSize="@dimen/sp_12" />

                        <ImageView
                            android:id="@+id/iv_takeidcard"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY" />
                    </FrameLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="@dimen/dp_125"
                        android:layout_height="@dimen/dp_80"
                        android:layout_marginTop="@dimen/dp_15"
                        android:src="@drawable/login_ic_shouchishenfenz" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:text="* 身份证正面照"
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_16" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/btn_idcard_head"
                        android:layout_width="@dimen/dp_125"
                        android:layout_height="@dimen/dp_80"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/login_bg_upload_rect">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="+"
                            android:textColor="@color/text_99"
                            android:textSize="@dimen/sp_30" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="@dimen/dp_6"
                            android:text="上传"
                            android:textColor="@color/text_99"
                            android:textSize="@dimen/sp_12" />

                        <ImageView
                            android:id="@+id/iv_idcard_head"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY" />
                    </FrameLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="@dimen/dp_125"
                        android:layout_height="@dimen/dp_80"
                        android:layout_marginTop="@dimen/dp_15"
                        android:src="@drawable/login_idcard_face" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:text="* 身份证反面照"
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/btn_idcard_back"
                        android:layout_width="@dimen/dp_125"
                        android:layout_height="@dimen/dp_80"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/login_bg_upload_rect">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="+"
                            android:textColor="@color/text_99"
                            android:textSize="@dimen/sp_30" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="@dimen/dp_6"
                            android:text="上传"
                            android:textColor="@color/text_99"
                            android:textSize="@dimen/sp_12" />

                        <ImageView
                            android:id="@+id/iv_idcard_back"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY" />
                    </FrameLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="@dimen/dp_125"
                        android:layout_height="@dimen/dp_80"
                        android:layout_marginTop="@dimen/dp_15"
                        android:src="@drawable/login_ic_idcard_back" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_50"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#f0f"
                        android:button="@drawable/bg_radiobutton"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_rule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_marginTop="@dimen/dp_3"
                        android:layout_marginBottom="@dimen/dp_3"
                        android:gravity="center"
                        android:text="@string/realidcard_rule"
                        android:textColor="@color/text_33"
                        android:textSize="12sp" />
                </LinearLayout>

                <com.fengwo.module_comment.widget.GradientTextView
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_20"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_11"
                    android:paddingBottom="@dimen/dp_11"
                    android:text="开始认证"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/sp_20" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_real_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_real_name_success" />
        <TextView
            android:id="@+id/tv_failed_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text=""
            android:textColor="@color/text_99"
            android:textSize="@dimen/sp_13" />
        <TextView
            android:id="@+id/tv_real_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="已完成主播认证~"
            android:textColor="@color/text_99"
            android:textSize="@dimen/sp_13" />

        <com.fengwo.module_comment.widget.GradientTextView
            android:id="@+id/btn_recommit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_5"
            android:text="重新认证"
            android:textColor="@color/text_white"
            android:visibility="gone"
            app:gtv_end_color="@color/purple_9966ff"
            app:gtv_start_color="@color/purple_9966ff" />
    </LinearLayout>

</LinearLayout>