<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:id="@+id/basetitle"
        layout="@layout/base_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_f2f3f5"
        app:layout_constraintTop_toBottomOf="@+id/basetitle"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/dp_23"
        android:layout_height="@dimen/dp_23"
        android:src="@drawable/icon_72"
        android:layout_marginTop="@dimen/dp_55"
        android:layout_marginStart="@dimen/dp_19"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="visible"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_logo_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="蜂窝互娱 申请使用"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/text_33"
        android:layout_marginEnd="@dimen/dp_12"
        app:layout_constraintLeft_toRightOf="@+id/logo"
        app:layout_constraintTop_toTopOf="@id/logo"
        app:layout_constraintBottom_toBottomOf="@id/logo"
        android:visibility="visible"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_add_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_19"
        tools:text="人脸识别验证你的身份信息，请确\n认为 用户名称 本人操作"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/text_33"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:visibility="visible"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/selector_check_bg"
        android:checked="true"
        android:layout_marginStart="@dimen/dp_9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_agree_tip"
        app:layout_constraintBottom_toBottomOf="@+id/tv_agree_tip"
        android:visibility="visible"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_agree_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/agree_tip"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/text_99"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_42"
        app:layout_constraintLeft_toRightOf="@id/cb_agree"
        app:layout_constraintBottom_toTopOf="@id/next"
        android:visibility="visible"/>


    <com.fengwo.module_comment.widget.GradientTextView
        android:id="@+id/next"
        android:layout_width="@dimen/dp_302"
        android:layout_height="@dimen/dp_46"
        android:text="下一步"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        android:layout_marginBottom="@dimen/dp_118"
        app:gtv_start_color="#FFC147"
        app:gtv_end_color="#FE3C9C"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_verify_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未能通过人脸检测"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/text_33"
        android:layout_marginTop="@dimen/dp_41"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        tools:visibility="visible"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_image_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_face_verify_error"
        android:layout_marginTop="@dimen/dp_91"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_verify_tip"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_retry"
        android:layout_width="@dimen/dp_192"
        android:layout_height="@dimen/dp_46"
        android:text="再试一次"
        android:gravity="center"
        android:textColor="@color/green_17CE5D"
        android:textSize="@dimen/sp_17"
        android:layout_marginBottom="@dimen/dp_118"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_f3f3f3_radius_25"
        android:visibility="gone"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/text_99"
        android:layout_marginTop="@dimen/dp_11"
        android:visibility="gone"
        android:text="提交给人工审核"
        app:layout_constraintTop_toBottomOf="@+id/tv_retry"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_back_main"
        android:layout_width="@dimen/dp_138"
        android:layout_height="@dimen/dp_46"
        android:text="返回i撩"
        android:gravity="center"
        android:textColor="@color/green_17CE5D"
        android:textSize="@dimen/sp_17"
        android:layout_marginStart="@dimen/dp_28"
        android:layout_marginBottom="@dimen/dp_69"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_f3f3f3_radius_25"
        android:visibility="gone"/>

    <com.fengwo.module_comment.widget.GradientTextView
        android:id="@+id/tv_verify"
        android:layout_width="@dimen/dp_138"
        android:layout_height="@dimen/dp_46"
        android:text="下一步"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        android:layout_marginBottom="@dimen/dp_69"
        android:layout_marginEnd="@dimen/dp_28"
        app:gtv_start_color="#FFC147"
        app:gtv_end_color="#FE3C9C"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>