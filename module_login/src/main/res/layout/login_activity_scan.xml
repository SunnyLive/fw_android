<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <cn.bingoogolapple.qrcode.zbar.ZBarView
        android:id="@+id/zb_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:qrcv_borderSize="@dimen/dp_0"
        app:qrcv_cornerColor="@color/purple_9966ff"
        app:qrcv_isScanLineReverse="true"
        app:qrcv_maskColor="#88000000"
        app:qrcv_qrCodeTipText="将二维码放入框内，即可自动扫描"
        app:qrcv_isTipTextBelowRect="true"
        app:qrcv_scanLineColor="@color/purple_9966ff"
        app:qrcv_verticalBias="0.5" />

    <include layout="@layout/base_toolbar" />
</FrameLayout>