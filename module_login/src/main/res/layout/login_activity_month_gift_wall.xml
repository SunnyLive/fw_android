<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_24"
        android:orientation="horizontal"
        >

        <RadioGroup
            android:id="@+id/rg_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="@dimen/dp_80"
            android:paddingEnd="@dimen/dp_80"
            >

            <RadioButton
                android:id="@+id/rb_anchor_gift_title"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_18"
                android:checked="true"
                android:textColor="@drawable/rb_text_color"
                android:gravity="center"
                android:text="直播礼物"
                android:button="@null"
                android:background="@null"
                />

            <RadioButton
                android:id="@+id/rb_expert_gift_title"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_18"
                android:textColor="@drawable/rb_text_color"
                android:gravity="center"
                android:text="达人礼物"
                android:button="@null"
                android:background="@null"
                />



        </RadioGroup>

        <ImageView
            android:id="@+id/iv_nav_back"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:padding="@dimen/dp_6"
            android:src="@drawable/ic_back_black"/>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dp_25"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:text="花蜜值:"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_receive_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/red_FE3ACE"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_receive">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_gift"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_5" />

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>


</LinearLayout>