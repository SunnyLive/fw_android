<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <gradient android:startColor="@color/red_FE3C9C"
                        android:endColor="@color/red_FE3C9C"/>
                    <corners android:topLeftRadius="@dimen/dp_4"
                        android:bottomLeftRadius="@dimen/dp_4"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <gradient android:startColor="@color/red_FE3C9C"
                        android:endColor="@color/red_FE3C9C"/>
                    <corners android:topLeftRadius="@dimen/dp_4"
                        android:bottomLeftRadius="@dimen/dp_4"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:startColor="@color/color_ffc147"
                        android:endColor="@color/red_FE3C9C"/>
                    <corners android:topLeftRadius="@dimen/dp_4"
                        android:bottomLeftRadius="@dimen/dp_4"/>
                </shape>
            </item>
            <item android:top="@dimen/dp_1"
                android:bottom="@dimen/dp_1"
                android:left="@dimen/dp_1">
                <shape>
                    <corners android:bottomLeftRadius="@dimen/dp_4"
                        android:topLeftRadius="@dimen/dp_4" />
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
