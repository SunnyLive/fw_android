                <ImageView
                    android:id="@+id/iv_wish_help_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_9"
                    android:src="@drawable/ic_wish_help"
                    android:visibility="gone"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_wish_present_name_week" />
                <!--完成-->
                <ImageView
                    android:id="@+id/iv_wish_complete_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_9"
                    android:src="@drawable/ic_wish_complete"
                    android:visibility="gone"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_wish_present_name_week" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!--本周 添加心愿-->
            <LinearLayout
                android:id="@+id/ll_add_wish_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_wish_add"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp_29"
                android:visibility="visible"
                tools:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="╋ 本周心愿"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <!--本月  主播心愿展示-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_create_wish_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_wish_add_create"
                android:elevation="@dimen/dp_10"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/wish_type_bg"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_4"
                    android:text="本月心愿"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/sp_8"
                    app:layout_constraintLeft_toLeftOf="parent"
