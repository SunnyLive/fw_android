                        android:layout_height="@dimen/dp_32"
                        android:layout_marginRight="@dimen/dp_7"
                        android:src="@drawable/default_head"
                        app:civ_border_color="@color/purple_B699FF"
                        app:civ_border_width="@dimen/dp_1" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_ranklist2_2"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:layout_marginRight="@dimen/dp_7"
                        android:src="@drawable/default_head"
                        app:civ_border_color="@color/purple_B699FF"
                        app:civ_border_width="@dimen/dp_1" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_ranklist2_3"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:layout_marginRight="@dimen/dp_7"
                        android:src="@drawable/default_head"
                        app:civ_border_color="@color/purple_B699FF"
                        app:civ_border_width="@dimen/dp_1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"


                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/ll_wish_rank_list_week"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_wish_present_name_week"
                    app:layout_constraintRight_toRightOf="parent">

                    <ProgressBar
                        android:id="@+id/pb_wish_num_week"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="@dimen/dp_159"
                        android:layout_height="@dimen/dp_4"
                        android:layout_gravity="center"

                        android:max="100"
                        android:progress="30"
                        android:progressDrawable="@drawable/bg_wish_progress" />

                    <TextView
                        android:id="@+id/tv_wish_value_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_12"
                        android:ems="5"
                        android:gravity="center"
                        android:text="9999/9999"
                        android:textColor="#3E3159"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintBottom_toBottomOf="@+id/ll_2"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/ll_2" />

                </LinearLayout>
                <ImageView
                    android:id="@+id/tv_ydc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pic_ydc"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <TextView
                    android:id="@+id/tv_pb_num_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/sp_9"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/ll_2"
                    app:layout_constraintLeft_toLeftOf="@+id/ll_2"
                    app:layout_constraintTop_toTopOf="@+id/ll_2" />


                <TextView
                    android:id="@+id/tv_des_type_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="报答方式:自行协商"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_12"
                    android:visibility="visible"
                    app:layout_constraintLeft_toLeftOf="@+id/ll_2"

                    app:layout_constraintTop_toBottomOf="@+id/iv_wish_present_week"
                    tools:visibility="gone" />

                <TextView
                    android:id="@+id/tv_des_wish_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:text="报答方式:自行协商"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@+id/iv_wish_present_week"
                    app:layout_constraintTop_toBottomOf="@+id/iv_wish_present_week"
                    tools:visibility="visible" />
                <!--关闭-->
