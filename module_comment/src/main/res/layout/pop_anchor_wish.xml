                    android:layout_marginLeft="@dimen/dp_12"
                    android:text="爱心仙女棒"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintLeft_toRightOf="@+id/iv_wish_present_month"
                    app:layout_constraintTop_toTopOf="@+id/iv_wish_present_month" />

                <LinearLayout
                    android:id="@+id/ll_wish_rank_list_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_1"
                    android:orientation="horizontal"

                    app:layout_constraintLeft_toLeftOf="@+id/tv_wish_present_name_month"
                    app:layout_constraintTop_toBottomOf="@+id/tv_wish_present_name_month">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_ranklist3_1"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:layout_marginRight="@dimen/dp_7"
                        android:src="@drawable/default_head"
                        app:civ_border_color="@color/purple_B699FF"
                        app:civ_border_width="@dimen/dp_1" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_ranklist3_2"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:layout_marginRight="@dimen/dp_7"
                        android:src="@drawable/default_head"
                        app:civ_border_color="@color/purple_B699FF"
                        app:civ_border_width="@dimen/dp_1" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_ranklist3_3"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:layout_marginRight="@dimen/dp_7"
                        android:src="@drawable/default_head"
                        app:civ_border_color="@color/purple_B699FF"
                        app:civ_border_width="@dimen/dp_1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_3"
                    android:layout_width="0dp"
