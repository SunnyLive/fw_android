                    android:src="@drawable/pic_ydc"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <TextView
                    android:id="@+id/tv_pb_num_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/sp_9"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/ll_3"
                    app:layout_constraintLeft_toLeftOf="@+id/ll_3"
                    app:layout_constraintTop_toTopOf="@+id/ll_3" />


                <TextView
                    android:id="@+id/tv_des_type_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="报答方式:自行协商"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="@+id/ll_3"
