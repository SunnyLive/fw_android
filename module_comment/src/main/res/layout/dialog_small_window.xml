<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_230"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_23"
        android:background="@drawable/bg_rou_rec_white_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dialog_small_window_close"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_7"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/exit_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你已退出"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_17"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.fengwo.module_comment.widget.RoundImageView
            android:id="@+id/header"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_85"
            app:radius="@dimen/dp_43"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginTop="@dimen/dp_38"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="开启缘分"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_27"
            android:background="@mipmap/bg_get_chance"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="何美美的房间"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black_333333"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/impress_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/gray_999999"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nickname"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="退出达人房间，印象值将归零\n是否要退出"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/gray_666666"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/impress_value"/>


        <!--确定 取消-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_sure_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tips">
            <!--取消-->
            <!--确定-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_sure"
                android:layout_width="@dimen/dp_86"
                android:layout_height="@dimen/dp_33"
                android:background="@drawable/radius_gray_bg"
                android:ems="6"
                android:gravity="center"
                android:textColor="@color/purple_fff_09a"
                android:textSize="@dimen/sp_12" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cancel"
                android:layout_width="@dimen/dp_86"
                android:layout_height="@dimen/dp_33"
                android:layout_marginStart="@dimen/dp_19"
                android:background="@drawable/radius_yellow_red_bg"
                android:ems="6"
                android:gravity="center"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_12" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/enter_living_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="即将为你跳转直播间"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/sp_15"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tips"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>