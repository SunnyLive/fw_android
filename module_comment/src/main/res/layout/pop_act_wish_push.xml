<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_315"
    android:layout_height="@dimen/dp_282"
    android:background="@drawable/bg_activity_wish"
    android:orientation="vertical">
    <!--    android:background="@drawable/bg_pop_tips"-->


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:padding="@dimen/dp_5"
        android:src="@mipmap/pic_clone_y_bai"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivMember"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_52"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_41"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:textColor="@color/text_white_arr"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toRightOf="@+id/ivMember"
        app:layout_constraintTop_toTopOf="@+id/ivMember" />

    <TextView
        android:id="@+id/v_wish_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:text="对你许下心愿"
        android:textColor="@color/text_white_arr"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@+id/ivMember"
        app:layout_constraintLeft_toRightOf="@+id/ivMember" />

    <TextView
        android:id="@+id/tv_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_27"
        android:background="@drawable/common_bg_white_round_16"
        android:padding="@dimen/dp_16"
        android:text="我愿做你的小太阳，围绕你转，
护你登顶"
        android:textColor="#304486"
        android:textSize="@dimen/sp_16"
        app:layout_constraintTop_toBottomOf="@+id/ivMember" />

    <ImageView
        android:id="@+id/v_view_wish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@drawable/pic_xy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_context" />


</androidx.constraintlayout.widget.ConstraintLayout>
