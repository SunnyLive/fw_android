<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/t00_000000"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_meiyan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/top_tb">

        <TextView
            android:id="@+id/tv_fennen_title"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="粉嫩"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/sb_fennen"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/sb_fennen"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:progress="40"
            app:layout_constraintLeft_toRightOf="@id/tv_fennen_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1" />

        <TextView
            android:id="@+id/tv_fennen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.4"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_hongrun_title"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="红润"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_12"
            app:layout_constraintTop_toBottomOf="@id/tv_fennen_title" />

        <SeekBar
            android:id="@+id/sb_hongrun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:progress="70"
            app:layout_constraintLeft_toRightOf="@id/tv_fennen_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_hongrun_title"
            app:layout_constraintVertical_weight="1" />

        <TextView
            android:id="@+id/tv_hongrun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.7"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_hongrun_title" />

        <TextView
            android:id="@+id/tv_baixi_title"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="白皙"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_12"
            app:layout_constraintTop_toBottomOf="@id/tv_hongrun_title" />

        <SeekBar
            android:id="@+id/sb_baixi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:progress="50"
            app:layout_constraintLeft_toRightOf="@id/tv_baixi_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_baixi_title" />

        <TextView
            android:id="@+id/tv_baixi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_baixi_title" />


        <TextView
            android:id="@+id/tv_meifu_title"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="美肤强度"
            android:layout_marginTop="@dimen/dp_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_baixi_title" />

        <SeekBar
            android:id="@+id/sb_meifu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:progress="70"
            app:layout_constraintLeft_toRightOf="@id/tv_meifu_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_meifu_title" />

        <TextView
            android:id="@+id/tv_meifu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="70"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_meifu_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_meixing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:visibility="gone"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/top_tb">

        <TextView
            android:id="@+id/tv_eye_title"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="大眼"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/sb_eye"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/sb_eye"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:progress="39"
            app:layout_constraintLeft_toRightOf="@id/tv_eye_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1" />

        <TextView
            android:id="@+id/tv_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="39"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_face_title"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="瘦脸"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_eye_title" />

        <SeekBar
            android:id="@+id/sb_face"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:progress="46"
            app:layout_constraintLeft_toRightOf="@id/tv_face_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_face_title"
            app:layout_constraintVertical_weight="1" />

        <TextView
            android:id="@+id/tv_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="46"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_face_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/filter_cl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_10"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/top_tb">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_lvjing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_lvjing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="滤镜强度"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_lvjing" />

        <SeekBar
            android:id="@+id/sb_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:progress="100"
            app:layout_constraintLeft_toRightOf="@id/tv_lvjing"
            app:layout_constraintRight_toLeftOf="@id/tv_lvjing_value"
            app:layout_constraintTop_toTopOf="@id/tv_lvjing" />

        <TextView
            android:id="@+id/tv_lvjing_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:text="100"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_lvjing" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tiezhi_cl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_20"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/top_tb">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tiezhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/top_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/alpha_50_white"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>