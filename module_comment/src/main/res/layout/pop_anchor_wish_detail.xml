<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_wish_bg_clent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_wish_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/dp_15"
        android:src="@drawable/ic_wish_close"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_add_wish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_23"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_23"
        android:background="@drawable/bg_wish_detail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/iv_wish_present"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="fitXY"
            android:src="@drawable/live_home_default"/>
        <TextView
            android:id="@+id/tv_wish_present_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            app:layout_constraintTop_toTopOf="@+id/iv_wish_present"
            android:layout_marginTop="@dimen/dp_6"
            app:layout_constraintLeft_toRightOf="@+id/iv_wish_present"
            android:text="爱心仙女棒"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_14"
            />
        <LinearLayout
            android:id="@+id/ll_wish_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="1dp"
            app:layout_constraintRight_toLeftOf="@+id/tv_wish_value"
            app:layout_constraintLeft_toLeftOf="@+id/tv_wish_present_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_wish_present_name"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_8"
                android:textSize="@dimen/sp_10"
                android:ems="3"
                android:textColor="@color/text_white"
                android:text="1980"
                android:background="@drawable/ic_wish_progress"/>
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progress="50"
                android:layout_marginTop="@dimen/dp_5"
                android:progressDrawable="@drawable/bg_wish_progress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_wish_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/1314"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_12"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/ll_wish_progress"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/iv_creat_wish"
        android:layout_width="@dimen/dp_213"
        android:layout_height="@dimen/dp_48"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_26"
        app:layout_constraintTop_toBottomOf="@+id/ll_add_wish"
        android:layout_marginBottom="@dimen/dp_27"

        android:textSize="@dimen/sp_14"
        android:text="确定"
        android:gravity="center"
        android:textColor="@color/text_white_arr"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_wish_suresing"/>

</androidx.constraintlayout.widget.ConstraintLayout>