<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="bottom"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:id="@+id/cl_add_wish"
    android:background="@drawable/ic_wish_bg_select">
    <ImageView
        android:id="@+id/iv_wish_back"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_55"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/dp_15"
        android:src="@drawable/pic_fh_s"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_60"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_27"
        android:background="@drawable/bg_wish_add_create"
        app:layout_constraintTop_toBottomOf="@+id/iv_wish_back"
        app:layout_constraintBottom_toTopOf="@+id/iv_creat_wish"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="心愿礼物"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tv_wish_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择礼物"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/iv_wish_go"
            android:paddingRight="@dimen/dp_21"
            android:textColor="#9D9DA6"
            android:textSize="@dimen/sp_12"
            />
        <ImageView
            android:id="@+id/iv_wish_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_wish_select"
            app:layout_constraintBottom_toBottomOf="@+id/tv_wish_select"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_wish_go"/>
        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_constraintTop_toBottomOf="@+id/tv_wish_select"
            android:background="@color/gray_EEEEEE"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="心愿数量"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_wish_input"
            app:layout_constraintBottom_toBottomOf="@+id/et_wish_input"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14"
            />
        <EditText
            android:id="@+id/et_wish_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="填写个数"
            android:textColorHint="#9D9DA6"
            android:background="@color/transparent"
            android:inputType="number"
            android:gravity="right"
            android:maxLength="4"
            android:paddingRight="@dimen/dp_20"
            android:textColor="#9D9DA6"
            android:textSize="@dimen/sp_12"
            android:paddingTop="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_13"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_line"
            />
        <View
            android:id="@+id/v_line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_constraintTop_toBottomOf="@+id/et_wish_input"
            android:background="@color/gray_EEEEEE"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报答方式"
            app:layout_constraintTop_toTopOf="@+id/tv_wish_type_select"
            app:layout_constraintBottom_toBottomOf="@+id/tv_wish_type_select"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/tv_wish_type_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择报答方式"
            android:paddingTop="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_18"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_line1"
            android:paddingRight="@dimen/dp_21"
            android:textColor="#9D9DA6"
            android:textSize="@dimen/sp_12"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_wish_type_select"
            app:layout_constraintBottom_toBottomOf="@+id/tv_wish_type_select"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_wish_go"/>

        <View
            android:id="@+id/v_line2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_constraintTop_toBottomOf="@+id/tv_wish_type_select"
            android:background="@color/gray_EEEEEE"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/iv_creat_wish"
        android:layout_width="@dimen/dp_213"
        android:layout_height="@dimen/dp_48"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/dp_27"
        android:textSize="@dimen/sp_14"
        android:text="确定"
        android:gravity="center"
        android:textColor="@color/text_white_arr"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_wish_suresing"/>
</androidx.constraintlayout.widget.ConstraintLayout>