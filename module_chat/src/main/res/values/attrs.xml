	<declare-styleable name="XBanner">
		<attr name="isAutoPlay" format="boolean" />
		<attr name="isHandLoop" format="boolean" />
		<attr name="AutoPlayTime" format="integer|reference" />
		<attr name="pointNormal" format="reference" />
		<attr name="pointSelect" format="reference" />
		<attr name="indicatorDrawable" format="reference" />
		<attr name="pointsVisibility" format="boolean" />
		<attr name="isTipsMarquee" format="boolean" />
		<attr name="pointsPosition" format="enum">
			<enum name="LEFT" value="0" />
			<enum name="CENTER" value="1" />
			<enum name="RIGHT" value="2" />
		</attr>
		<attr name="pointsContainerBackground" format="reference|color" />
		<attr name="pointContainerPosition" format="enum">
			<enum name="TOP" value="10" />
			<enum name="BOTTOM" value="12" />
		</attr>
		<!-- 指示点容器左右内间距 -->
		<attr name="pointContainerLeftRightPadding" format="dimension" />
		<!-- 指示点上下内间距 -->
		<attr name="pointTopBottomPadding" format="dimension" />
		<!-- 指示点左右内间距 -->
		<attr name="pointLeftRightPadding" format="dimension" />
		<!-- 提示文案的文字颜色 -->
		<attr name="tipTextColor" format="reference|color" />
		<!-- 提示文案的文字大小 -->
		<attr name="tipTextSize" format="dimension" />
		<!--是否是数字指示器-->
		<attr name="isShowNumberIndicator" format="boolean" />
		<!-- 数字指示器背景 -->
		<attr name="numberIndicatorBacgroud" format="reference" />
		<!-- 当只有一页数据时是否显示指示器，默认值为false -->
		<attr name="isShowIndicatorOnlyOne" format="boolean" />
		<!-- 图片切换速度 -->
		<attr name="pageChangeDuration" format="integer" />
		<!--图片轮播框架展占位图-->
		<attr name="placeholderDrawable" format="reference" />
		<!--是否开启一屏显示多个模式 默认不开启-->
		<attr name="isClipChildrenMode" format="boolean" />
		<!--一屏显示多个左右间距-->
		<attr name="clipChildrenLeftRightMargin" format="dimension" />
		<!--一屏显示多个上下间距-->
		<attr name="clipChildrenTopBottomMargin" format="dimension" />
		<!--设置viewpager间距-->
		<attr name="viewpagerMargin" format="dimension" />
		<!--少于三张是否支持一屏多显模式-->
		<attr name="isClipChildrenModeLessThree" format="boolean" />
		<!--是否展示提示文案-->
		<attr name="isShowTips" format="boolean" />
		<!--banner轮播区域底部margin-->
		<attr name="bannerBottomMargin" format="dimension" />
		<!--设置viewPager ClipChildren-->
		<attr name="viewPagerClipChildren" format="boolean" />
		<!-- 占位图缩放模式 -->
		<attr name="android:scaleType" />
	</declare-styleable>



	<declare-styleable name="ViewPagerIndicator" tools:ignore="ResourceName">
		<attr name="vpi_selected_color" format="color|reference"/>
		<attr name="vpi_default_color" format="color|reference"/>
		<attr name="vpi_radius" format="dimension|reference"/>
		<attr name="vpi_radius_selected" format="dimension|reference"/>
		<attr name="vpi_length" format="dimension|reference"/>
		<attr name="vpi_distance" format="dimension|reference"/>
		<attr name="vpi_num" format="integer"/>
		<attr name="vpi_indicatorType">
			<enum name="LINE" value="0" />
			<enum name="CIRCLE" value="1" />
			<enum name="CIRCLE_LINE" value="2" />
			<enum name="BEZIER" value="3" />
			<enum name="SPRING" value="4" />
			<enum name="PROGRESS" value="5" />
		</attr>
		<attr name="vpi_distanceType">
			<enum name="BY_RADIUS" value="0" />
			<enum name="BY_DISTANCE" value="1" />
			<enum name="BY_LAYOUT" value="2" />
		</attr>
		<attr name="vpi_animation" format="boolean"/>
	</declare-styleable>

	<declare-styleable name="TagTextView">
		<attr name="ttv_start_color" format="color"/>
		<attr name="ttv_end_color" format="color"/>
		<attr name="background_type" format="enum">
			<enum name="stroke" value="0" />
			<enum name="fill" value="1" />
		</attr>
	</declare-styleable>


	<declare-styleable name="IndexBar">
		<attr name="indexBarTextSize" format="dimension" />
		<attr name="indexBarPressBackground" format="color" />
	</declare-styleable>

	<declare-styleable name="QuickSideBarView">
		<attr name="sidebarTextColor" format="color|reference"/>
		<attr name="sidebarBackgroundColor" format="color|reference"/>
		<attr name="sidebarTextColorChoose" format="color|reference"/>
		<attr name="sidebarTextSize" format="dimension"/>
		<attr name="sidebarTextSizeChoose" format="dimension"/>
		<attr name="sidebarItemHeight" format="dimension"/>
	</declare-styleable>

	<declare-styleable name="HeaderViewPager"><attr format="dimension" name="hvp_topOffset"/></declare-styleable>


</resources>