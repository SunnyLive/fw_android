<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.ui.activity.social.AddressBookActivity">

    <com.fengwo.module_comment.widget.AppTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:atb_backIcon="@drawable/ic_back_white"
        app:atb_moreIcon="@drawable/chat_ic_more"
        app:atb_title="通讯录"
        app:atb_title_color="@color/text_33">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:src="@drawable/chat_ic_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_more"
            app:layout_constraintTop_toBottomOf="@+id/status_bar" />
    </com.fengwo.module_comment.widget.AppTitleBar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_bdbdbd" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <com.fengwo.module_chat.widgets.indexbar.IndexBar
            android:id="@+id/indexBar"
            android:layout_width="@dimen/dp_24"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_50"
            app:indexBarPressBackground="@color/text_white"
            app:indexBarTextSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_selected"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_gravity="center"
            android:background="@drawable/bg_gray_round_8"
            android:gravity="center"
            android:textColor="@color/text_66"
            android:textSize="48sp"
            android:visibility="gone"
            tools:text="A"
            tools:visibility="visible" />
    </FrameLayout>
</LinearLayout>