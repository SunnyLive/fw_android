<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.fengwo.module_comment.widget.AppTitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:atb_backIcon="@drawable/ic_back_black"
            app:atb_backgroundColor="@color/white"
            app:atb_title="联系人"
            app:atb_title_color="@color/black" />

        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/sr_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.fengwo.module_chat.utils.AddHistroyHeader
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/white"
                android:padding="@dimen/dp_6" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:overScrollMode="never" />
        </com.scwang.smart.refresh.layout.SmartRefreshLayout>

        <!--键盘-->
        <FrameLayout
            android:id="@+id/fl_lay_input_root"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90">
            <com.fengwo.module_chat.widgets.chat_new.ChatInput
                android:id="@+id/lay_input"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_fee_gif"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_47"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_15"
                android:src="@drawable/ic_logo_chat"/>
            <FrameLayout
                android:id="@+id/fl_lay_input"
                android:clickable="true"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1f000000"/>
        </FrameLayout>

        <!--表情-->
        <RelativeLayout
            android:id="@+id/emotion_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#F6F6F6"
            android:orientation="vertical"
            android:visibility="gone">

            <com.fengwo.module_comment.utils.chat.NoScrollViewPager
                android:id="@+id/vp_bottom_more"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_more_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="gone">

            <!-- 转发 -->
            <LinearLayout
                android:id="@+id/layout_bottom_forward"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_chat_forward" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_greet"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@color/transparent"
        android:clickable="true"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:paddingBottom="@dimen/dp_50"
            android:paddingTop="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="@dimen/dp_212"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:gravity="center"
                android:text="非好友每天对同一人只能发送1条招呼 对方回复后可无限畅聊"
                android:textColor="@color/text_66"
                app:layout_constraintBottom_toTopOf="@+id/tvGreet"
                app:layout_constraintLeft_toLeftOf="@+id/tvGreet"
                app:layout_constraintRight_toRightOf="@+id/tvGreet" />

            <TextView
                android:id="@+id/tvGreet"
                android:layout_width="@dimen/dp_212"
                android:layout_height="@dimen/dp_44"
                android:background="@drawable/shape_purple_gr_bg"
                android:gravity="center"
                android:text="打招呼"
                android:textColor="@color/text_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="MissingConstraints" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_no_real_idcard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@color/transparent"
        android:clickable="true"
        android:paddingBottom="@dimen/dp_50"
        android:visibility="gone"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal|center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_14"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/layer_shadow_coner_gray"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_7"
                android:paddingRight="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_7"
                android:text="为防止骚扰，实名认证通过后才能相互私聊"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_m_2"
                android:background="@drawable/layer_shadow_gray_triangle" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_74"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_4">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:src="@drawable/ic_logo" />

                <TextView
                    android:id="@+id/tv_to_renzhen"
                    android:layout_width="@dimen/dp_212"
                    android:layout_height="@dimen/dp_44"
                    android:layout_gravity="bottom"
                    android:background="@drawable/shape_purple_gr_bg"
                    android:gravity="center"
                    android:text="去认证"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/sp_14" />

            </FrameLayout>


        </LinearLayout>
    </RelativeLayout>
</FrameLayout>