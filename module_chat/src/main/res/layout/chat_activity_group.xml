<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.fengwo.module_comment.widget.AppTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:atb_backIcon="@drawable/ic_back_white"
        app:atb_moreIcon="@drawable/ic_title_more"
        app:atb_title="联系人"
        app:atb_title_color="@color/text_33" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/view_res"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F8F8F8"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_res"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/status_expand"
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_chat_arrow" />
            </LinearLayout>
            <com.scwang.smart.refresh.layout.SmartRefreshLayout
                android:id="@+id/sr_rv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <com.fengwo.module_chat.utils.AddHistroyHeader
                    android:layout_width="match_parent"
                    android:padding="@dimen/dp_6"
                    android:layout_height="@dimen/dp_40"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:overScrollMode="never" />
            </com.scwang.smart.refresh.layout.SmartRefreshLayout>

            <com.fengwo.module_chat.widgets.chat_new.ChatInput
                android:id="@+id/lay_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/emotion_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#F6F6F6"
                android:orientation="vertical"
                android:visibility="gone">

                <com.fengwo.module_comment.utils.chat.NoScrollViewPager
                    android:id="@+id/vp_bottom_more"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_more_bottom_view"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <!-- 转发 -->
                <LinearLayout
                    android:id="@+id/layout_bottom_forward"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_chat_forward" />
                </LinearLayout>
                <!-- 清屏 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_chat_clear" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <com.fengwo.module_chat.widgets.QiqiuView
            android:id="@+id/qiqiu"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</LinearLayout>