<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_4">

    <FrameLayout
        android:id="@+id/view_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <com.tencent.rtmp.ui.TXCloudVideoView
            android:id="@+id/cloud_video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/view_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPictureThumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginStart="@dimen/dp_23"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:overScrollMode="never" />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/dp_50"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_155"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/ic_live_logo" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <!--     右边点赞区   -->
        <LinearLayout
            android:id="@+id/ll_right_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="@dimen/dp_100"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_header"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:scaleType="centerCrop"
                android:src="@drawable/timg"
                app:radius="@dimen/dp_8" />

            <ImageView
                android:id="@+id/iv_add_attention"
                android:layout_width="@dimen/dp_23"
                android:layout_height="@dimen/dp_23"
                android:layout_marginTop="@dimen/dp_m_12"
                android:src="@drawable/chat_ic_attention"
                app:layout_constraintCircle="@id/iv_header"
                app:layout_constraintCircleAngle="180"
                app:layout_constraintCircleRadius="@dimen/dp_20" />

            <ImageView
                android:id="@+id/view_like"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_22"
                android:src="@drawable/chat_ic_like" />

            <TextView
                android:id="@+id/tv_chat_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2839"
                android:textColor="@color/color_chat_card_like"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/iv_chat_comment"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/chat_ic_comment" />

            <TextView
                android:id="@+id/tv_chat_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2839"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/iv_chat_comment"
                app:layout_constraintRight_toRightOf="@id/iv_chat_comment" />

            <ImageView
                android:id="@+id/tvShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_share_card"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/tvCardSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_card_more"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_24"
            android:text="测试文字"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_card_content"
            app:layout_constraintLeft_toLeftOf="@+id/tv_card_content" />

        <TextView
            android:id="@+id/tv_card_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_50"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toBottomOf="@+id/ll_right_card"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ll_right_card"
            app:layout_goneMarginEnd="@dimen/dp_12"
            tools:text="永远不要跟别人比幸运，我从来没想过我比别人幸运，我也许比他们更有毅力，在最困难的时候，他们熬不住了，我可以多熬一秒钟、二秒钟" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>