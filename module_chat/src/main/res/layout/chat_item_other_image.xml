<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_image_other"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:id="@id/messageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/dp_9"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:paddingRight="@dimen/dp_9"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_12"
        android:visibility="visible"
        tools:text="今天  12:34:12" />

    <LinearLayout
        android:id="@+id/view_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_chat_item_select"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_16"
            android:src="@drawable/selector_chat_ckeck"
            android:visibility="invisible"
            tools:visibility="visible" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10">

            <com.fengwo.module_comment.widget.RoundImageView
                android:id="@id/messageUserAvatar"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:scaleType="centerCrop"
                app:radius="@dimen/dp_8"
                android:src="@drawable/imgdefault" />

            <TextView
                android:id="@+id/tv_group_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/image_other"
                android:layout_alignTop="@id/messageUserAvatar"
                android:textColor="@color/text_99"
                android:textSize="@dimen/sp_12"
                android:visibility="visible"
                tools:text="请注意" />

            <com.fengwo.module_comment.widget.RoundImageView
                android:id="@+id/image_other"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_150"
                android:layout_below="@id/tv_group_friend"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_toEndOf="@id/messageUserAvatar"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/timg" />

            <ImageView
                android:id="@+id/iv_item_fail"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_7"
                android:layout_toEndOf="@id/image_other"
                android:layout_toRightOf="@id/image_other"
                android:focusable="false"
                android:src="@drawable/msg_state_fail_resend"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>