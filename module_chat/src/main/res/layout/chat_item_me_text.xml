<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_text_me"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/messageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/dp_9"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:paddingRight="@dimen/dp_9"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_12"
        android:visibility="visible"
        tools:text="今天  12:34:12" />

    <LinearLayout
        android:id="@+id/view_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_chat_item_select"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_16"
            android:src="@drawable/selector_chat_ckeck"
            android:visibility="invisible"
            tools:visibility="visible" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingTop="@dimen/dp_10">

            <com.fengwo.module_comment.widget.RoundImageView
                android:id="@+id/messageUserAvatar"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:layout_alignParentEnd="true"
                android:scaleType="centerCrop"
                app:radius="@dimen/dp_8"
                tools:src="@drawable/imgdefault" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/messageUserAvatar"
                android:layout_toStartOf="@id/messageUserAvatar"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <ImageView
                    android:id="@+id/iv_item_fail"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:focusable="false"
                    android:layout_marginRight="@dimen/dp_7"
                    android:src="@drawable/msg_state_fail_resend"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_group_friend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textColor="@color/text_66"
                        android:textSize="@dimen/sp_12"
                        android:visibility="gone"
                        tools:text="请注意"
                        tools:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/bubble_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:background="@drawable/app_lvjian_chat_right"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_10">

                        <com.fengwo.module_comment.widget.emojiTextview.GifTextView
                            android:id="@+id/messageText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15"
                            tools:text="冲啊案件快速健康会尽快回复冲啊案件快速健康会尽快回复尽快哈市将客户放假哈市将是发动机很少见啊就是费事尽快哈市将客户放假哈市将是发动机很少见啊就是费事" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
