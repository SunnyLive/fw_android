<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/menu_white"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_input_recode"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:padding="@dimen/dp_4"
        android:src="@drawable/ic_chat_single_voice" />

    <com.fengwo.module_chat.widgets.chat_new.VoiceRecorderView
        android:id="@+id/rb_press_recode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/selector_recode_btn_bg"
        android:gravity="center"
        android:minHeight="34dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_input_ban"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/selector_recode_btn_bg"
        android:gravity="center"
        android:minHeight="34dp"
        android:text="全体禁言"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_15"
        android:visibility="gone" />

    <com.fengwo.module_chat.widgets.chat_new.MsgEditText
        android:id="@+id/et_input_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/shape_edittext_bg_gray_stroke"
        android:clickable="true"
        android:focusable="true"
        android:maxLength="400"
        android:maxLines="4"
        android:scrollbars="none"
        android:inputType="textAutoCorrect|textAutoComplete|textMultiLine|textCapSentences"
        android:minHeight="34dp"
        android:padding="8dp"
        android:hint="说点什么"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_15"
        android:visibility="visible" />
<!--    android:hint="请输入聊天内容"-->

    <ImageView
        android:id="@+id/iv_input_expression"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:padding="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_6"
        android:src="@drawable/ic_input_emoji" />

    <TextView
        android:id="@+id/tv_send"
        android:layout_width="60dp"
        android:layout_height="@dimen/dp_32"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:background="@drawable/chat_solid_btn_bg_selector"
        android:gravity="center"
        android:text="发送"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_15"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_input_more"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        android:src="@drawable/addfix"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_input_add"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:padding="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_6"
        android:src="@drawable/ic_chat_single_add"
        android:visibility="visible" />
</LinearLayout>