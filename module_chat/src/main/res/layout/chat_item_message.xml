<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_12"
    android:paddingRight="@dimen/dp_12">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivHeader"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/timg" />

    <TextView
        android:id="@+id/tvBadge"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:background="@drawable/bg_dot_red"
        android:textSize="@dimen/sp_10"
        app:layout_constraintBottom_toBottomOf="@+id/tvSubtitle"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/text_white"
        android:gravity="center"
        tools:text="99"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:ellipsize="end"
        android:maxLength="15"
        android:singleLine="true"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toTopOf="@id/tvSubtitle"
        app:layout_constraintLeft_toRightOf="@id/ivHeader"
        app:layout_constraintTop_toTopOf="@id/ivHeader"
        />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_36"
        android:singleLine="true"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="@id/ivHeader"
        app:layout_constraintLeft_toLeftOf="@id/tvTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="12:30" />
    <ImageView
        android:id="@+id/iv_no_disturb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvDate"
        app:layout_constraintLeft_toLeftOf="@+id/tvDate"
        app:layout_constraintRight_toRightOf="@+id/tvDate"
        app:layout_constraintBottom_toBottomOf="@+id/tvSubtitle"
        android:visibility="gone"
        android:src="@drawable/chat_no_disturbing"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/gray_eeeeee"
        app:layout_constraintLeft_toRightOf="@id/ivHeader"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>