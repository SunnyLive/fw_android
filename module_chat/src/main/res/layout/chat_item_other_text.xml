<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_text_other"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:id="@id/messageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/dp_9"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:paddingRight="@dimen/dp_9"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_12"
        android:visibility="visible"
        tools:text="今天  12:34:12" />

    <LinearLayout
        android:id="@+id/view_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_chat_item_select"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@drawable/selector_chat_ckeck"
            android:visibility="gone"
            tools:visibility="gone" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_10">

            <com.fengwo.module_comment.widget.RoundImageView
                android:id="@id/messageUserAvatar"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:scaleType="centerCrop"
                app:radius="@dimen/dp_8"
                android:src="@drawable/imgdefault" />

            <ImageView
                android:id="@+id/iv_item_fail"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:focusable="false"
                android:src="@drawable/msg_state_fail_resend"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_toStartOf="@id/iv_item_fail"
                android:layout_toEndOf="@id/messageUserAvatar"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_group_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请注意"
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_12"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/bubble_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/app_lvjian_other_chat_background"
                    android:focusableInTouchMode="false"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <com.fengwo.module_comment.widget.emojiTextview.GifTextView
                        android:id="@id/messageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="冲啊案件快速健康会尽快回复尽快哈市将客户放假哈市将是发动机很少见啊就是费事"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
