<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/base_toolbar" />

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/smartrefreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.fengwo.module_chat.widgets.header.HeaderViewPager
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_60"
                android:clipToPadding="false"
                android:orientation="vertical"
                app:hvp_topOffset="@dimen/dp_0">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.fengwo.module_comment.widget.RoundImageView
                        android:id="@+id/ivCircle_avatar"
                        android:layout_width="@dimen/dp_115"
                        android:layout_height="@dimen/dp_115"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:scaleType="centerCrop"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:radius="@dimen/dp_20"
                        tools:src="@drawable/timg" />

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:singleLine="true"
                        android:textColor="@color/text_33"
                        android:textSize="@dimen/sp_15"
                        app:layout_constraintLeft_toRightOf="@id/ivCircle_avatar"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/ivCircle_avatar" />

                    <TextView
                        android:id="@+id/tvSubtitle"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:ellipsize="end"
                        android:maxLines="7"
                        android:textColor="@color/text_99"
                        android:textSize="@dimen/sp_11"
                        app:layout_constraintBottom_toBottomOf="@+id/ivCircle_avatar"
                        app:layout_constraintLeft_toLeftOf="@id/tvTitle"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_top"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_14"
                        app:cardCornerRadius="@dimen/dp_8"
                        app:cardElevation="@dimen/dp_4"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintDimensionRatio="1:0.36"
                        app:layout_constraintTop_toBottomOf="@id/ivCircle_avatar">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/vp_center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:overScrollMode="never" />
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.shizhefei.view.indicator.ScrollIndicatorView
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never" />
            </com.fengwo.module_chat.widgets.header.HeaderViewPager>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="bottom"
                android:background="@color/white"
                android:elevation="@dimen/dp_4"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">

                <com.fengwo.module_comment.widget.RoundImageView
                    android:id="@+id/ivCircle_avatar_litter"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:scaleType="centerCrop"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:radius="@dimen/dp_20"
                    tools:src="@drawable/timg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/bg_chat_card_bottom"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvMember"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:overScrollMode="never" />

                    <TextView
                        android:id="@+id/tv_circle_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_12"
                        tools:text="612人" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_enter_circle"
                        android:layout_width="@dimen/dp_128"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_chat_card_gradient"
                        android:gravity="center"
                        android:text="进入圈子"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</LinearLayout>