<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <rotate
            android:fromDegrees="45"

            android:pivotX="135%"
            android:pivotY="15%">
            <shape android:shape="rectangle">
                <size android:width="@dimen/dp_16"
                    android:height="@dimen/dp_16"/>
                <solid android:color="@color/normal_bg"/>
            </shape>
        </rotate>
    </item>

    <item
        android:top="1sp"
        android:left="1sp"
        android:right="2sp"
        android:bottom="3sp">
        <rotate
            android:fromDegrees="45"

            android:pivotX="135%"
            android:pivotY="15%">
            <shape android:shape="rectangle">
                <size android:width="@dimen/dp_16"
                    android:height="@dimen/dp_16"/>
                <solid android:color="@color/white"/>
            </shape>
        </rotate>
    </item>

</layer-list>