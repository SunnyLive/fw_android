<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_315"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_card_white_16dp">

        <ImageView
            android:id="@+id/img_tips"
            android:layout_width="@dimen/dp_185"
            android:layout_height="@dimen/dp_138"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_teenager_tips"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="青少年模式"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/img_tips"
            app:layout_constraintStart_toStartOf="@+id/img_tips"
            app:layout_constraintTop_toBottomOf="@+id/img_tips" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_46"
            android:text="为呵护未成年人的健康成长，蜂窝互娱特别提醒：未满18周岁的青少年，需由监护人确认并陪同后方可登入APP"
            android:textColor="@color/text_66"
            android:textSize="@dimen/sp_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_tips"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"/>

        <TextView
            android:id="@+id/tv_teenager_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启青少年模式"
            android:textColor="@color/blue_63A5FF"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_127"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_tips"
            android:drawablePadding="@dimen/dp_2"
            android:drawableEnd="@drawable/icon_teenager_tips_right_arrow"
            />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/radius_purple_bg"
            android:gravity="center"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:text="我知道了"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_teenager_tips"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp_30"
           />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>