<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_10">

    <ImageView
        android:layout_width="@dimen/dp_141"
        android:layout_height="@dimen/dp_104"
        android:src="@drawable/live_ic_shouhu_empty" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_22"
        android:text="主播还没有守护"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_21"
        android:text="赶紧抢占成为TA的第一个守护"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抢占守护时间："
            android:textColor="@color/text_66"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120s"
            android:textColor="@color/purple_9966ff"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <com.fengwo.module_comment.widget.GradientTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_22"
        android:gravity="center"
        android:padding="@dimen/dp_14"
        android:text="抢占守护"
        android:textSize="@dimen/sp_18" />
</LinearLayout>