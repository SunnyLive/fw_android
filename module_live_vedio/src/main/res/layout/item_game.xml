<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_margin="11dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/v_icon"
        android:layout_width="38dp"
        android:src="@drawable/live_home_default"
        android:layout_height="38dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/v_name"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="全民挖宝"
        android:textColor="@color/text_33"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/v_icon"
        app:layout_constraintRight_toRightOf="@id/v_icon"
        app:layout_constraintTop_toBottomOf="@id/v_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>