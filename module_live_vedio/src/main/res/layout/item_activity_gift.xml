<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_161"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_5"
    android:paddingRight="@dimen/dp_5">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/bg"
            android:layout_width="@dimen/dp_62"
            android:layout_height="@dimen/dp_62"
            android:layout_marginTop="@dimen/dp_9">


            <ImageView
                android:id="@+id/iv_gift"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </FrameLayout>

        <ImageView
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_18"
            android:src="@drawable/ic_add_queen"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_gift_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="告白天使"

        android:textColor="@color/purple_66EAF6"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_gift_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:text="告白天使"

        android:textColor="@color/purple_66EAF6"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_now_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="800"
            android:textColor="#EECD60"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_1"
            android:src="@drawable/live_ic_diamond" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_old_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_7"
        android:text=""
        android:textColor="#CDD7E0"
        android:textSize="@dimen/sp_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:src="@drawable/live_ic_diamond" />

        <TextView
            android:id="@+id/tv_ori_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="800"
            android:textColor="#C88BFF"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

</LinearLayout>