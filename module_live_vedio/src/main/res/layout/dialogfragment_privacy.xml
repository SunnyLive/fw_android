<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_20"
    android:background="@drawable/bg_white_round_8">
    <ImageView
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_login_logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_7"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black_363636"
        android:text="蜂窝互娱用户隐私协议"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_363636"
        android:text="感谢您下载蜂窝互娱！当您开始使用本软件时，我们可能会对您的部分个人信息进行收集、使用和共享。请您仔细阅读《蜂窝互娱用户隐私协议》，并确定了解我们对您个人信息的处理规则，包括："/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/gray_999999"
        android:text="我们如何收集和使用您的个人信息
        \n我们如何使用Cookie和同类技术
        \n我们如何共享、转让、公开您的个人信息
        \n我们如何保护和保留您的个人信息
        \n您如何管理个人信息
        \n未成年人信息的保护
        \n如何联系我们"/>
    <TextView
        android:id="@+id/tv_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/gray_999999"
        android:text=""/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"

            >
            <TextView
                android:id="@+id/tv_disagree"
                android:layout_width="@dimen/dp_140"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_36"
                android:paddingTop="@dimen/dp_14"
                android:paddingRight="@dimen/dp_36"
                android:paddingBottom="@dimen/dp_14"
                android:text="不同意"
                android:background="@drawable/bg_dialog_button_privatecy"
                android:textColor="@color/gray_999999"
                android:textSize="@dimen/sp_16"
                />

            <TextView
                android:id="@+id/tv_agree"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_140"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_purple_detail"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_36"
                android:paddingTop="@dimen/dp_14"
                android:paddingRight="@dimen/dp_36"
                android:paddingBottom="@dimen/dp_14"
                android:text="同意"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_16"

                />

        </RelativeLayout>
</LinearLayout>