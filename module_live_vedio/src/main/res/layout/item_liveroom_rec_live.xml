<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <com.fengwo.module_comment.widget.RatioImageView
        android:id="@+id/iv_thumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_12"
        android:scaleType="fitXY"
        app:height_to_width_ratio="1.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:round_radius="@dimen/dp_6"
        tools:background="@drawable/ic_default_deep" />

    <LinearLayout
        android:id="@+id/ll_tag"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_5"
        android:background="@drawable/bg_home_lable"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_4"
        android:paddingRight="@dimen/dp_6"
        app:layout_constraintBottom_toTopOf="@+id/tv_title"
        app:layout_constraintLeft_toLeftOf="@+id/iv_thumb">

        <ImageView
            android:id="@+id/iv_gif"
            android:layout_width="@dimen/dp_10"
            android:visibility="gone"
            android:layout_height="@dimen/dp_10" />

        <ImageView
            android:id="@+id/im_hmz"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:src="@drawable/pic_hmz"
    />

        <TextView
            android:id="@+id/tv_looknum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_1"
            android:gravity="center"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_9"
            android:textStyle="bold"
            tools:text="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_1"
            android:src="@drawable/txt_live"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_7"
        android:layout_marginBottom="@dimen/dp_5"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/text_white"
        android:textSize="@dimen/dp_12"
        app:layout_constraintBottom_toBottomOf="@+id/iv_thumb"
        app:layout_constraintLeft_toLeftOf="@+id/iv_thumb"
        tools:ignore="MissingConstraints"
        tools:text="十分士大夫空对空111111111111111111111111" />
</androidx.constraintlayout.widget.ConstraintLayout>