<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/view_wish_dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_282"
        android:background="@drawable/bg_wish_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_wish_user_header"
        android:layout_width="@dimen/dp_66"
        android:layout_height="@dimen/dp_66"
        android:layout_marginEnd="@dimen/dp_125"
        tools:src="@color/color_FFC147"
        app:layout_constraintTop_toTopOf="@+id/view_wish_dialog_bg"
        app:layout_constraintRight_toRightOf="@+id/view_wish_dialog_bg"
        app:layout_constraintBottom_toTopOf="@+id/tv_wish_result_ctx"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_wish_anchor_header"
        android:layout_width="@dimen/dp_66"
        android:layout_height="@dimen/dp_66"
        android:layout_marginStart="@dimen/dp_125"
        tools:src="@color/red_FE3C9C"
        app:layout_constraintTop_toTopOf="@+id/view_wish_dialog_bg"
        app:layout_constraintLeft_toLeftOf="@+id/view_wish_dialog_bg"
        app:layout_constraintBottom_toTopOf="@+id/tv_wish_result_ctx"/>




    <TextView
        android:id="@+id/tv_wish_anchor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/civ_wish_anchor_header"
        app:layout_constraintRight_toRightOf="@+id/civ_wish_anchor_header"
        app:layout_constraintLeft_toLeftOf="@+id/civ_wish_user_header"
        app:layout_constraintBottom_toTopOf="@+id/tv_wish_result_ctx"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_16"
        tools:text="主播：米玲淋"/>


    <TextView
        android:id="@+id/tv_wish_result_ctx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_27"
        android:layout_marginEnd="@dimen/dp_27"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:textSize="@dimen/sp_16"
        android:textColor="#304486"
        tools:text="我愿做你的小太阳，围绕你转，护你登顶"
        android:background="@drawable/bg_wish_blessing_text"
        app:layout_constraintRight_toRightOf="@+id/view_wish_dialog_bg"
        app:layout_constraintLeft_toLeftOf="@+id/view_wish_dialog_bg"
        app:layout_constraintBottom_toTopOf="@+id/iv_wish_result_btn"/>


    <ImageView
        android:id="@+id/iv_wish_result_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_13"
        android:src="@drawable/icon_wish_pop_btn"
        app:layout_constraintBottom_toBottomOf="@+id/view_wish_dialog_bg"
        app:layout_constraintLeft_toLeftOf="@+id/view_wish_dialog_bg"
        app:layout_constraintRight_toRightOf="@+id/view_wish_dialog_bg" />





</androidx.constraintlayout.widget.ConstraintLayout>