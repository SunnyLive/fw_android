<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <LinearLayout
                android:id="@+id/ll_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|right"
                android:layout_marginTop="@dimen/dp_140"
                android:layout_marginRight="@dimen/dp_8"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/im_sd_lw"
                    android:layout_width="@dimen/dp_88"
                    android:layout_height="@dimen/dp_97"

                    android:src="@drawable/pic_sd_wz" />

                <TextView
                    android:id="@+id/tv_sd_lw"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_19"
                    android:background="@drawable/bg_sd_text"
                    android:gravity="center"
                    android:text="1/18"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_view_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|right"
                android:layout_marginTop="@dimen/dp_175"
                android:layout_marginRight="@dimen/dp_18"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/im_sd_lw_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pic_newyear_sbx" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pic_newyear_text"
                    android:gravity="center">

                    <TextSwitcher
                        android:id="@+id/tv_sd_lw_new"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inAnimation="@anim/anim_in"
                        android:lines="1"
                        android:outAnimation="@anim/anim_out" />

                </RelativeLayout>


            </LinearLayout>



            <!--大礼物动画-->

            <com.fengwo.module_comment.widget.EPlayTextureView
                android:id="@+id/animationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />


            <!--礼物-->
            <com.opensource.svgaplayer.SVGAImageView
                android:id="@+id/svga_animation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

        </FrameLayout>

        <!--pk-->
        <com.opensource.svgaplayer.SVGAImageView
            android:id="@+id/svga_pk"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_400"

            android:visibility="visible"
            app:clearsAfterStop="true"
            app:layout_constraintTop_toBottomOf="@id/tv_hour_rank"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <!--底部功能按钮-->
        <FrameLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <include
                android:id="@+id/view_bottom"
                layout="@layout/live_livingroom_bottomview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent" />



            <include
                android:id="@+id/view_bottom_input"
                layout="@layout/live_livingroom_bottomview_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"

                app:layout_constraintBottom_toBottomOf="parent" />

        </FrameLayout>
        <!--顶部阴影-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_cover_top"
            app:layout_constraintTop_toTopOf="parent" />
        <!--底部阴影-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_cover_bottom"
            app:layout_constraintBottom_toBottomOf="parent" />
        <!--top榜结束奖章-->
        <!--TODO -->
        <ImageView
            android:id="@+id/iv_activity_tag"
            android:layout_width="@dimen/dp_69"
            android:layout_height="@dimen/dp_47"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_hour_rank"
            tools:visibility="visible" />



        <!--  TOP view-->
        <LinearLayout
            android:id="@+id/tv_hour_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_78"
            android:background="@drawable/live_bg_topview_left"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_6"
            android:paddingTop="@dimen/dp_3"
            android:paddingEnd="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_hour_rank" />

            <TextView
                android:id="@+id/tv_hour_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOP榜 未上榜"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_11" />
        </LinearLayout>

        <!--更多直播-->
        <LinearLayout
            android:id="@+id/ll_more_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_78"
            android:background="@drawable/live_bg_more_live_rec"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_6"
            android:paddingTop="@dimen/dp_3"
            android:paddingEnd="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_more_live" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:text="更多直播  "
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="#919191"
                android:textSize="@dimen/sp_11" />
        </LinearLayout>


     <!--   &lt;!&ndash;快捷回复！ 怎么会在这里？&ndash;&gt;
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tagQuickSdMsg"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@color/transparent"
            android:visibility="gone"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toTopOf="@id/bottom"
            app:tag_row_space="@dimen/dp_4"
            app:tag_tag_space="@dimen/dp_12"
            tools:ignore="MissingConstraints" />-->


        <RelativeLayout
            android:layout_width="@dimen/dp_118"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_8"
            android:clipChildren="false"
            app:layout_constraintRight_toRightOf="parent">

            <com.fengwo.module_live_vedio.widget.redpack.RedPackIconView
                android:id="@+id/v_redpack_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="30dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <!--活动-->
            <com.fengwo.module_comment.widget.BannerView.act.ActBannerView
                android:id="@+id/act_banner"
                android:layout_width="@dimen/dp_118"
                android:layout_height="@dimen/dp_200"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_60"
                android:clipChildren="false"
                android:gravity="center"
                android:src="@drawable/live_ic_toutiao" />
        </RelativeLayout>

        <!--im区-->
        <com.fengwo.module_comment.widget.CustomRecyclerView
            android:id="@+id/rv_chat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:layout_marginEnd="@dimen/dp_129"
            android:fadingEdgeLength="16dp"
            android:paddingStart="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_3"
            android:requiresFadingEdge="vertical"
            app:layout_constraintBottom_toTopOf="@id/bottom" />


        <!--  进场公告-->
        <include layout="@layout/item_living_enter" />
        <!--旧的活动暂时没用 -->
        <include layout="@layout/item_living_enter_activity" />
        <!--顶部view-->
        <include
            android:id="@+id/topview"
            layout="@layout/live_livingroom_topview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            app:layout_constraintTop_toTopOf="parent" />
        <!--连送动画-->
        <include layout="@layout/live_item_gift_showview" />
        <!--公告 头条-->
        <ViewStub
            android:id="@+id/vs_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inflatedId="@+id/ll_notice"
            android:layout="@layout/notice_layout"
            app:layout_constraintTop_toBottomOf="@+id/tv_hour_rank">

        </ViewStub>




        <!--红包雨-->
        <com.fengwo.module_live_vedio.widget.falllayout.FallingLayout
            android:id="@+id/falling_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--弹幕-->
    <com.fengwo.module_comment.widget.DanmakuView
        android:id="@+id/dmk_show_danmu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:layout_marginTop="@dimen/dp_260"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>