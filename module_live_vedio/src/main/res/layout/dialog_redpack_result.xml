<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/v_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_light_redpack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/v_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:src="@drawable/ic_redpack_success"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.fengwo.module_comment.widget.MarqueeTextView
        android:id="@+id/v_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="210dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="marquee"
        tools:text="恭喜抢到蓝梦轩派发的红包"
        android:textColor="#ffffdd7e"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/v_bg"
        app:layout_constraintRight_toRightOf="@id/v_bg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/v_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawableRight="@drawable/ic_gem"
        android:drawablePadding="10dp"
        tools:text="999"
        android:textColor="#ffffffff"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/v_name"
        app:layout_constraintRight_toRightOf="@id/v_name"
        app:layout_constraintTop_toBottomOf="@id/v_name" />

    <TextView
        android:id="@+id/v_receiver"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/shape_redpack_bt"
        android:gravity="center"
        android:text="开心收下"
        android:textColor="#ffffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:translationY="-22dp"
        app:layout_constraintLeft_toLeftOf="@id/v_bg"
        app:layout_constraintRight_toRightOf="@id/v_bg"
        app:layout_constraintTop_toBottomOf="@id/v_bg" />

    <TextView
        android:id="@+id/v_receiver_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:translationY="-10dp"
        android:text="领取详情"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/v_bg"
        app:layout_constraintRight_toRightOf="@id/v_bg"
        app:layout_constraintTop_toBottomOf="@id/v_receiver" />
</androidx.constraintlayout.widget.ConstraintLayout>