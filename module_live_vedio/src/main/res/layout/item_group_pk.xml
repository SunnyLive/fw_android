<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10">

    <TextView
        android:id="@+id/tvVS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VS"
        android:textColor="@color/black_000000"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/flSelfHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivSelfHeader"
        android:layout_width="@dimen/dp_34"
        android:layout_height="@dimen/dp_34"
        android:scaleType="centerCrop"
        android:src="@drawable/timg"
        app:civ_border_color="@color/normal_bg"
        app:civ_border_width="@dimen/dp_2" />
        <ImageView
            android:id="@+id/ivSelfRunAway"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="right|bottom"
            android:src="@drawable/ic_pk_run_away"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/tvSelfStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvVS"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSelfNickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="测试文字"
        android:textColor="@color/text_66"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/flSelfHeader"
        app:layout_constraintRight_toLeftOf="@id/tvSelfStatus"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/flEnemyHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvVS"
        app:layout_constraintTop_toTopOf="parent" >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivEnemyHeader"
        android:layout_width="@dimen/dp_34"
        android:layout_height="@dimen/dp_34"
        android:layout_marginLeft="@dimen/dp_10"
        android:scaleType="centerCrop"
        android:src="@drawable/timg"
        app:civ_border_color="@color/normal_bg"
        app:civ_border_width="@dimen/dp_2" />
        <ImageView
            android:id="@+id/ivEnemyRunAway"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="right|bottom"
            android:src="@drawable/ic_pk_run_away"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/tvEnemyStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEnemyNickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="测试文字"
        android:textColor="@color/text_66"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/flEnemyHeader"
        app:layout_constraintRight_toLeftOf="@id/tvEnemyStatus"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>