<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alpha20_black"
    android:orientation="vertical">

    <View
        android:id="@+id/ll_user_info_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:id="@+id/ll_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dp_24"
        android:background="@drawable/shape_white_corner"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_298">


            <com.fengwo.module_comment.widget.RatioImageView
                android:id="@+id/iv_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                app:height_to_width_ratio="1"
                app:round_radius="@dimen/dp_10"
                tools:background="@drawable/bg_pk_contribute" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_black_mask" />

            <TextView
                android:id="@+id/tv_jubao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/live_bg_topview_left"
                android:drawableStart="@drawable/ic_user_info_report"
                android:drawablePadding="@dimen/dp_5"
                android:paddingStart="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:text="举报"
                android:textColor="@color/text_white_arr"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/iv_close_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_user_info_close" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:padding="@dimen/dp_13">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/text_white_arr"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/tv_sex_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:background="@drawable/shape_corner_girl"
                        android:paddingStart="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_3"
                        android:paddingEnd="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_3"
                        android:text="11"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/sp_10" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_label"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5" />




                </LinearLayout>

                <TextView
                    android:id="@+id/tv_fengwohao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="right"
                    android:text="蜂窝号：--"
                    android:textColor="@color/text_white_arr"
                    android:textSize="@dimen/sp_12" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_11"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_fans"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="粉丝"
                        android:textColor="@color/text_white_arr"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_today_receive"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="花蜜值"
                        android:textColor="@color/text_white_arr"
                        android:textSize="@dimen/sp_13" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end|center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_user_info_location" />

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:singleLine="true"
                            android:textColor="@color/text_white_arr"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_view"
                android:layout_width="@dimen/dp_43"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_130"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_gravity="right|bottom">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_headers"
                    android:layout_width="@dimen/dp_43"
                    android:layout_height="@dimen/dp_43"


                    android:src="@drawable/default_head" />
                <ImageView
                    android:id="@+id/im_cp"
                    android:layout_width="@dimen/dp_43"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_36"
                    />
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout


            android:id="@+id/rl_anchor_guard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/live_bg_user_info_guard"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5">


            <ImageView
                android:id="@+id/iv_guard_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@drawable/ic_user_info_guard" />

            <TextView
                android:id="@+id/tv_guard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_toEndOf="@+id/iv_guard_pic"
                android:text="守护"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_guard_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_toEndOf="@+id/tv_guard"
                android:text="守护"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_guard"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_27"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_toEndOf="@+id/tv_guard_num"
                android:fadingEdge="horizontal"
                android:layoutDirection="ltr"
                android:requiresFadingEdge="horizontal" />

            <ImageView
                android:id="@+id/iv_guard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_13"
                android:background="@drawable/ic_user_info_guard_now" />

            <TextView
                android:id="@+id/tv_guard_left_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_13"
                android:textColor="@color/red_FF5E5E" />

        </RelativeLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_18"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户等级:"
                android:textColor="@color/gray_A0A0A0"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/iv_level1"
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_17"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_5" />

            <TextView
                android:id="@+id/tv_anchor_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:text="主播等级:"
                android:textColor="@color/gray_A0A0A0"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/iv_anchor_level"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_17"
                android:layout_marginStart="@dimen/dp_12" />

            <!--   主播徽章  -->
            <ImageView
                android:id="@+id/iv_anchor_level1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5" />


        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_receive_name"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:text="今日贡献榜:"
                android:textColor="@color/gray_A0A0A0"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_fengmizhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:textColor="@color/black_1A1A1A"
                android:textSize="@dimen/sp_12" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">


            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身高:"
                    android:textColor="@color/gray_A0A0A0"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@color/black_1A1A1A"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="体重:"
                    android:textColor="@color/gray_A0A0A0"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@color/black_1A1A1A"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星座:"
                    android:textColor="@color/gray_A0A0A0"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_constellation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@color/black_1A1A1A"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="理想型:"
                android:textColor="@color/gray_A0A0A0"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_ideal_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:gravity="center_vertical"
                android:textColor="@color/blue_5DB5FF"
                android:textSize="@dimen/sp_12" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gray_bottom_corners"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15">


            <TextView
                android:id="@+id/btn_attention"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:text="+关注"
                android:textColor="@color/red_f33c6f"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_sisin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:text="私信"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_at"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:text="\@TA"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_gift"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:text="送礼"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_zhuye"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:text="主页"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_addmanager"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:text="设置房管"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>