<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_agent_bg"
    android:orientation="vertical">
    <!--返回-->
    <ImageView
        android:id="@+id/iv_agent_list_back"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_32"
        android:padding="@dimen/dp_6"
        android:src="@drawable/icon_back" />
    <!--内容 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_content"
        android:layout_width="match_parent"
        android:layout_height="735dp"
        android:layout_marginTop="58dp"

        android:background="@drawable/ic_agent_list_content">
        <RelativeLayout
            android:id="@+id/ll_rank_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="15dp"
            android:paddingTop="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/rl_rank_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_65"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_list_first"
                        android:layout_width="@dimen/dp_63"
                        android:layout_height="@dimen/dp_63"

                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:layout_marginTop="@dimen/dp_17"
                        android:layout_marginRight="@dimen/dp_11"
                        android:src="@drawable/live_home_default" />

                    <ImageView
                        android:id="@+id/iv_one"
                        android:layout_width="@dimen/dp_86"
                        android:layout_height="@dimen/dp_86"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_agent_one" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_list_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_one"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:ems="5"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="虚位以待"
                    android:textColor="#CF604D"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_list_first_flower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/broker_one_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:ellipsize="end"
                    android:ems="6"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="#D0594D"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58dp"
                android:layout_marginTop="@dimen/dp_190"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_list_two"
                        android:layout_width="@dimen/dp_63"
                        android:layout_height="@dimen/dp_63"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:layout_marginTop="@dimen/dp_17"
                        android:layout_marginRight="@dimen/dp_11"

                        android:scaleType="centerCrop"
                        android:src="@drawable/live_home_default" />

                    <ImageView
                        android:id="@+id/iv_two"
                        android:layout_width="@dimen/dp_86"
                        android:layout_height="@dimen/dp_86"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_agent_two" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_list_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_two"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:ems="5"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="虚位以待"
                    android:textColor="#CF604D"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_list_two_flower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/broker_two_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:ellipsize="end"
                    android:ems="6"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="#D0594D"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_190"
                android:layout_marginRight="58dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_list_three"
                        android:layout_width="@dimen/dp_63"
                        android:layout_height="@dimen/dp_63"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_17"
                        android:scaleType="centerCrop"
                        android:src="@drawable/live_home_default" />

                    <ImageView
                        android:id="@+id/iv_three"
                        android:layout_width="@dimen/dp_86"
                        android:layout_height="@dimen/dp_86"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_agent_three" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_list_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_three"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:ems="5"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="虚位以待"
                    android:textColor="#CF604D"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_list_three_flower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/broker_three_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:ellipsize="end"
                    android:ems="6"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="#D0594D"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_agent_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_rank_one"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="161dp"
android:visibility="gone"
                android:background="@drawable/pic_fx_btn4"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_agent_go"
                    android:drawablePadding="@dimen/dp_2"

                    android:textColor="@color/text_white"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>


        </RelativeLayout>




        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/dp_27"
            app:layout_constraintTop_toBottomOf="@+id/ll_rank_three"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_22"
            android:background="@drawable/line_bg_agent_list"/>

        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/sl_agent_list"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dp_9"
            app:layout_constraintTop_toBottomOf="@+id/v_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/cl_content"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_agent_list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_225"
                android:layout_marginTop="@dimen/dp_9"
                />
        </com.scwang.smart.refresh.layout.SmartRefreshLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>