<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <View
        android:id="@+id/view_wish_dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_281"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_wish_blessing_blue_dialog"/>



    <TextView
        android:id="@+id/tv_blessing_anchor_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/colorWhite"
        android:text="选择主播："
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_59"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_blessing_label"/>



    <TextView
        android:id="@+id/tv_blessing_anchor_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_26"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/tv_blessing_content"
        app:layout_constraintRight_toRightOf="@+id/tv_blessing_content"
        app:layout_constraintBottom_toTopOf="@+id/tv_blessing_content"
        android:background="@drawable/bg_blessing_anchor"
        android:textSize="@dimen/sp_16"
        android:textColor="#304486"
        tools:text="米玲淋" />





    <TextView
        android:id="@+id/tv_blessing_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/colorWhite"
        android:text="选择祝福语："
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_68"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/iv_wish_btn"/>


    <TextView
        android:id="@+id/tv_blessing_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_21"
        android:layout_marginBottom="@dimen/dp_27"
        android:layout_marginEnd="@dimen/dp_27"
        android:textSize="@dimen/sp_16"
        android:textColor="#304486"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:background="@drawable/bg_blessing_content"
        tools:text="我愿做你的小太阳，围绕你转，护你登顶"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_blessing_label"
        app:layout_constraintBottom_toTopOf="@+id/iv_wish_btn"/>


    <ImageView
        android:id="@+id/iv_wish_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/icon_wish_btn"
        />



</androidx.constraintlayout.widget.ConstraintLayout>