<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic_push_end_back"
    tools:ignore="ResourceName">


    <com.tencent.rtmp.ui.TXCloudVideoView
        android:id="@+id/pusher_tx_cloud_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.tencent.rtmp.ui.TXCloudVideoView>



    <!--todo PK位置-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pk_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topview"
        android:layout_marginTop="@dimen/dp_20">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Placeholder
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="3:4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5" />

        <com.tencent.rtmp.ui.TXCloudVideoView
            android:id="@+id/pk_other_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="3:4"
            app:layout_constraintLeft_toLeftOf="@id/guideline"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.fengwo.module_comment.widget.StrokeTextView
                    android:id="@+id/tv_car_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|right"
                    android:layout_marginTop="@dimen/dp_175"
                    android:layout_marginRight="@dimen/dp_50"
                    android:textColor="@color/purple_9966ff"
                    android:textSize="@dimen/sp_18" />
            </FrameLayout>
        </com.tencent.rtmp.ui.TXCloudVideoView>

        <ImageView
            android:id="@+id/iv_pk_result_left"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_6"
            android:src="@drawable/ic_pk_success"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_pk_result_left_end"
            android:layout_width="@dimen/dp_78"
            android:layout_height="@dimen/dp_48"
            android:layout_marginBottom="@dimen/dp_20"
            android:src="@drawable/ic_pk_draw"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/iv_pk_result_right"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_6"
            android:src="@drawable/ic_pk_fail"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_pk_result_right_end"
            android:layout_width="@dimen/dp_78"
            android:layout_height="@dimen/dp_48"
            android:layout_marginBottom="@dimen/dp_20"
            android:src="@drawable/ic_pk_fail"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/layout_pk_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:constraint_referenced_ids="iv_pk_result_left,iv_pk_result_right"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_other_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/live_bg_topview_left"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pk_other_view">

            <TextView
                android:id="@+id/tv_other_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_6"
                android:ellipsize="end"
                android:lines="1"
                android:maxWidth="@dimen/dp_80"
                android:text="笑而不语"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/tv_other_attention"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_name"
                android:background="@drawable/live_bg_btn_pushroom_attention"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_2"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_2"
                android:text="关注"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <!--    TOP view-->
    <include
        android:id="@+id/topview"
        layout="@layout/live_livingroom_topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/tv_hour_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_55"
        android:background="@drawable/live_bg_topview_left"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_6"
        android:paddingTop="@dimen/dp_3"
        android:paddingEnd="@dimen/dp_6"
        android:paddingBottom="@dimen/dp_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_hour_rank" />

        <TextView
            android:id="@+id/tv_hour_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOP榜 未上榜"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_11" />
    </LinearLayout>

    <com.fengwo.module_comment.widget.NetWorkTextView
        android:id="@+id/tv_network"
        android:layout_toEndOf="@id/tv_hour_rank"
        android:layout_alignTop="@+id/tv_hour_rank"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_3"
        android:drawablePadding="@dimen/dp_5"
        android:drawableStart="@drawable/ic_network_status"
        android:drawableEnd="@drawable/bg_network_status"
        android:layout_width="@dimen/dp_91"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_11"
        tools:text="158kb/s"
        />



    <include layout="@layout/live_item_gift_showview" />


    <include
        android:id="@+id/layout_pk_start"
        layout="@layout/layout_pk_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!--<include-->
    <!--android:id="@+id/layout_pk_result"-->
    <!--layout="@layout/layout_pk_result"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/dp_200"-->
    <!--android:layout_below="@+id/topview"-->
    <!--android:layout_marginTop="@dimen/dp_110"-->
    <!--android:visibility="gone"/>-->

    <include
        android:id="@+id/layout_pk_progress"
        layout="@layout/layout_pk_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/pk_constraint_layout"
        android:layout_marginTop="@dimen/dp_m_80"
        android:visibility="gone" />

    <ImageView
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_11"
        android:layout_below="@+id/topview"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/ic_live_logo"
        android:visibility="gone" />

    <com.fengwo.module_comment.widget.likeview.KsgLikeView
        android:id="@+id/live_view"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/dp_100"
        app:ksg_curve_duration="4500"
        app:ksg_default_image="@drawable/live_paopao01"
        app:ksg_enter_duration="1500" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--礼物-->
        <com.fengwo.module_comment.widget.EPlayTextureView
            android:id="@+id/animationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:atb_type="1" />




    </FrameLayout>
    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/svga_pk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:clearsAfterStop="true" />


    <!--礼物-->
    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/svga_animation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical">

        <include
            layout="@layout/item_living_enter"
            android:visibility="visible" />

        <include layout="@layout/item_living_enter_activity" />

        <com.fengwo.module_comment.widget.CustomRecyclerView
            android:id="@+id/rv_chat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_125"
            android:fadingEdgeLength="16dp"
            android:requiresFadingEdge="vertical"
            app:layout_constraintTop_toBottomOf="@+id/ll_enter" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_hour_rank"
        android:orientation="vertical">

        <include
            android:id="@+id/view_toutiao"
            layout="@layout/live_item_toutiao"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@id/topview"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:visibility="gone"
            tools:visibility="visible" />

        <include
            android:id="@+id/view_annoucement"
            layout="@layout/live_item_annoucement"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:visibility="gone"
            tools:visibility="visible" />

        <include
            android:id="@+id/view_notice"
            layout="@layout/add_notice_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:visibility="gone"
            tools:visibility="visible" />
        <include
            android:id="@+id/view_buyguard"
            layout="@layout/live_item_buyguard"
            android:visibility="gone" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_view"
        android:layout_width="@dimen/dp_118"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_8"
        android:clipChildren="false"
        app:layout_constraintRight_toRightOf="parent">

        <com.fengwo.module_live_vedio.widget.redpack.RedPackIconView
            android:id="@+id/v_redpack_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content"/>
        <com.fengwo.module_comment.widget.BannerView.act.ActBannerView
            android:id="@+id/act_banner"
            android:layout_width="@dimen/dp_118"
            android:layout_height="@dimen/dp_187"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_60"
            android:clipChildren="false"

            android:gravity="center"
            android:orientation="vertical" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_view_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal|right"
        android:layout_marginTop="@dimen/dp_175"
        android:layout_marginRight="@dimen/dp_18"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/im_sd_lw_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_newyear_sbx" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pic_newyear_text"
            android:gravity="center">

            <TextSwitcher
                android:id="@+id/tv_sd_lw_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inAnimation="@anim/anim_in"
                android:lines="1"
                android:outAnimation="@anim/anim_out" />

        </RelativeLayout>


    </LinearLayout>
    <!-- Bottom view -->
    <FrameLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include
            android:id="@+id/view_bottom"
            layout="@layout/live_push_bottom_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_10"
            android:visibility="visible" />

        <include
            android:id="@+id/view_bottom_input"
            layout="@layout/live_livingroom_bottomview_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent" />


        <include
            android:id="@+id/view_bottom_notice"
            layout="@layout/live_notice_bottomview_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_faceunity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:visibility="gone">

        <ViewStub
            android:id="@+id/fu_base_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ViewStub
            android:id="@+id/fu_effect_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent" />
    </FrameLayout>

    <!--    <include
            android:id="@+id/view_annoucement"
            layout="@layout/live_item_annoucement"
            android:visibility="gone" />-->

    <ImageView
        android:id="@+id/im_shousha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topview"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_logo"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_djs"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_10"

        android:background="@drawable/bg_djs_back"
        android:drawableLeft="@drawable/bg_djs"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:text="00:00:00"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_11"

        />

    <TextView
        android:id="@+id/tv_monitor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#80000000"
        android:gravity="center"
        android:visibility="gone" />

    <!--公告-->
    <LinearLayout
        android:id="@+id/v_notice_container"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.fengwo.module_live_vedio.widget.redpack.FallingView
        android:id="@+id/v_redpack_view"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"/>
    <com.fengwo.module_comment.widget.DanmakuView
        android:id="@+id/dmk_show_danmu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:layout_marginTop="@dimen/dp_220" />
</RelativeLayout>
