<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_bg_toutiao_rule"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_5"
    android:paddingTop="@dimen/dp_15"
    android:paddingRight="@dimen/dp_5"
    android:paddingBottom="@dimen/dp_15">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="头条玩法"
        android:textColor="#B27700"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_rule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="start"
        android:maxWidth="@dimen/dp_120"
        android:text="1.Boss为心仪主播送出头条礼物，即可享受全平台直播间长达180秒的头条飘屏服务；\n2.也可在现有头条礼物的基础上+100花钻顶掉现有头条；\n3.送出超过当前头条礼物价值的其他头条礼物，亦可抢占头条飘屏服务"
        android:textColor="#B27700"
        android:textSize="@dimen/sp_12" />
</LinearLayout>