<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_190"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_white_corner"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="城堡名称"
        android:textColor="@color/gray_666666"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toTopOf="@id/iv_bg"
        app:layout_constraintLeft_toLeftOf="@id/iv_bg"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_guild_header"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintTop_toTopOf="@id/iv_bg"
        app:layout_constraintRight_toRightOf="@id/iv_bg"
        app:layout_constraintLeft_toLeftOf="@id/iv_bg"
        android:layout_marginTop="@dimen/dp_36"/>
    <TextView
        android:id="@+id/tv_guild_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_000000"
        android:text="阿来城"
        app:layout_constraintTop_toBottomOf="@id/iv_guild_header"
        app:layout_constraintRight_toRightOf="@id/iv_bg"
        app:layout_constraintLeft_toLeftOf="@id/iv_bg"
        android:layout_marginTop="@dimen/dp_14"/>
    
    <com.fengwo.module_comment.widget.GradientTextView
        android:id="@+id/tv_commit"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_35"
        app:layout_constraintTop_toBottomOf="@+id/tv_guild_name"
        app:layout_constraintRight_toRightOf="@id/iv_bg"
        app:layout_constraintLeft_toLeftOf="@id/iv_bg"
        android:layout_marginTop="@dimen/dp_16"
        android:text="发起挑战"
        android:gravity="center" />

</androidx.constraintlayout.widget.ConstraintLayout>
