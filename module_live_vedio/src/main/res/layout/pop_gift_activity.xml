<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
android:gravity="center"
    android:id="@+id/rl_viewint"
    >

    <ImageView

        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_bg_purple_close" />

    <RelativeLayout
        android:id="@+id/rl_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_297"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_48"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/im_pic"
            android:layout_width="match_parent"

            android:layout_height="match_parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_182"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_50"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_0"
            android:paddingRight="@dimen/dp_20" />

        <ImageView
            android:id="@+id/im_zs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:src="@drawable/pic_ljzs" />


        <TextView
            android:id="@+id/btn_buy"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_activitygesival_checked"
            android:gravity="center"
            android:text="增佳人"
            android:textColor="#B05426"
            android:textSize="@dimen/sp_12"
            android:visibility="gone" />


        <TextView
            android:id="@+id/btn_no_show"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_12"
            android:text="今日不再弹出"
            android:textColor="@color/text_white"
            android:visibility="gone" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_4"
            android:src="@drawable/pic_activity_l" />

        <ImageView
            android:id="@+id/im_giftmeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:src="@drawable/pic_activity_rs" />
    </LinearLayout>


</RelativeLayout>