<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/v_bg"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:src="@mipmap/ic_game_dial_notice_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/v_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:textColor="#ffffde2a"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/v_content"
        app:layout_constraintLeft_toLeftOf="@id/v_bg"
        app:layout_constraintRight_toLeftOf="@id/v_onlookers"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="喵了个咪" />

    <com.fengwo.module_live_vedio.widget.MarqueTextView
        android:id="@+id/v_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        app:delayTime="1000"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="@id/v_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/v_name"
        app:layout_constraintTop_toBottomOf="@id/v_name"
        tools:text="在「幸运转盘」中获得xxxx" />

    <TextView
        android:id="@+id/v_onlookers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_white_cf"
        android:paddingLeft="6dp"
        android:paddingTop="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="6dp"
        android:text="去围观"
        android:textColor="#FE4D64"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>