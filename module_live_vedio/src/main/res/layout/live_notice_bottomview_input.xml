<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <com.fengwo.module_comment.widget.TagLayoutView
        android:id="@+id/tagQuickSdMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/transparent"
        app:layout_constrainedHeight="true"
        app:layout_constraintTop_toBottomOf="@+id/tvGreet"
        app:tag_row_space="@dimen/dp_10"
        app:tag_tag_space="@dimen/dp_12"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/et_input_notice"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/bg_gray_round_8"
            android:hint="输入直播间公告内容"
            android:maxLength="20"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:maxLines="1"
            android:textCursorDrawable="@null"
            android:imeActionLabel="确定"
            android:imeOptions="actionSend"
            android:singleLine="true"
            android:textColor="@color/text_66"
            android:textColorHint="@color/text_99"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/btn_send_notice"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_32"
            android:background="@drawable/bg_notice_send"
            android:gravity="center"
            android:text="发送"
            android:layout_marginRight="@dimen/dp_8"
            android:textColor="#FE3C9C"

            android:textSize="@dimen/sp_14" />

    </LinearLayout>
</LinearLayout>



