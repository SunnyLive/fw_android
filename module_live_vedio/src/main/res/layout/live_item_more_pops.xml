<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_50"
    android:gravity="center"
    android:paddingStart="@dimen/dp_15"
    android:layout_gravity="center"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_pic"
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_19"
            android:layout_centerVertical="true"
            android:src="@drawable/pic_my" />

        <TextView
            android:id="@+id/iv_item_more_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_toEndOf="@+id/im_pic"
            android:text="手势魔法"
            android:textColor="@color/alpha_e9e9e9" />

        <ImageView
            android:id="@+id/iv_widgets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toEndOf="@+id/iv_item_more_img"
            android:src="@drawable/ic_live_widgets_new" />

        <TextView
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="0.1dp"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:background="#353236" />
    </RelativeLayout>



</LinearLayout>
