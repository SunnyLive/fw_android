<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_24"
    android:paddingBottom="@dimen/dp_20">


    <TextView
        android:id="@+id/iv_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/icon_ranking1"
        android:gravity="center"
        android:minWidth="@dimen/dp_21"
        android:minHeight="@dimen/dp_21"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/fl_header_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_2"
        android:layout_marginBottom="@dimen/dp_15"
        app:layout_constraintLeft_toRightOf="@+id/iv_ranking"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_header"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/default_head" />

        <ImageView
            android:id="@+id/iv_photo_frame"
            android:layout_width="@dimen/dp_47"
            android:layout_height="@dimen/dp_53"
            tools:src="@drawable/icon_photo_frame_ranking1" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/im_dw"
        android:layout_width="@dimen/dp_17"
        android:layout_height="@dimen/dp_17"
        app:layout_constraintRight_toRightOf="@+id/fl_header_parent"
        app:layout_constraintBottom_toBottomOf="@+id/fl_header_parent"
        />


    <TextView
        android:id="@+id/tv_rank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_7"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toRightOf="@+id/fl_header_parent"
        app:layout_constraintTop_toTopOf="@+id/fl_header_parent"
        tools:text="拉拉队" />


    <!--  用户等级  -->
    <ImageView
        android:id="@+id/iv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@+id/fl_header_parent"
        app:layout_constraintLeft_toRightOf="@+id/fl_header_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        tools:src="@drawable/login_ic_type3_v1" />


    <ImageView
        android:id="@+id/iv_level_anchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_3"
        app:layout_constraintLeft_toRightOf="@+id/iv_level"
        app:layout_constraintTop_toTopOf="@+id/iv_level"
        app:layout_constraintBottom_toBottomOf="@+id/iv_level"
        tools:src="@drawable/login_ic_type3_v1" />


    <TextView
        android:id="@+id/cb_attention"
        android:layout_width="@dimen/dp_53"
        android:layout_height="@dimen/dp_16"
        android:layout_marginLeft="4dp"
        android:background="@drawable/bg_radio_attention"
        android:button="@null"
        android:checked="false"
        android:gravity="center"
        android:textColor="@drawable/text_color_ranktop"
        android:textSize="@dimen/sp_10"
        app:layout_constraintLeft_toRightOf="@+id/tv_rank_name"
        app:layout_constraintTop_toTopOf="@+id/tv_rank_name"
        tools:text="关注" />

    <TextView
        android:id="@+id/tv_nectar_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_3"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_nectar_label"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="13.6w" />


    <TextView
        android:id="@+id/tv_nectar_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="花蜜值"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>