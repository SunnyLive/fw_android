<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_5"
    android:clipChildren="false">

    <LinearLayout
        android:id="@+id/left_view"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_gift_effect1"
        android:orientation="vertical"
        android:paddingLeft="50dp">

        <TextView
            android:id="@+id/tv_UserName"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赠送   "
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_Message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FFFFEA00"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/crvheadimage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:visibility="visible"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="1dp" />

    <ImageView
        android:id="@+id/ivgift"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="135dp" />
    <!--android:src="@mipmap/gift_icon" -->

    <com.fengwo.module_live_vedio.widget.OrangeStrokeTextView
        android:id="@+id/giftNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/ivgift"
        android:ellipsize="end"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:text="1"
        android:textColor="#ffde00"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <com.fengwo.module_live_vedio.widget.OrangeStrokeTextView
        android:id="@+id/giftNum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/giftNum"
        android:ellipsize="end"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:text=""
        android:textColor="#ffde00"
        android:textSize="25sp"
        android:textStyle="bold" />
</RelativeLayout>