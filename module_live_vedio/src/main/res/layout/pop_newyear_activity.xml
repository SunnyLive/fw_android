<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_viewint"
    android:layout_width="@dimen/dp_315"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/pic_newyear_back">
<ImageView
    android:id="@+id/im_clone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_margin="@dimen/dp_10"
    android:src="@mipmap/pic_clone_y_bai"/>
    <TextView
        android:id="@+id/tvSearch"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_48"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_44"
        android:background="@drawable/bg_white"
        android:gravity="center"
        android:text="输入主播昵称或者蜂窝号"
        android:textColor="#91AEE7"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user_header"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_32"
        android:src="@drawable/default_head"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="@dimen/dp_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSearch" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="name"
        android:textColor="@color/text_white_arr"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_user_header" />


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_6"
        android:text="赠送数量："
        android:textColor="@color/text_white_arr"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@+id/tv2"
        app:layout_constraintLeft_toLeftOf="@+id/tvName"
        app:layout_constraintRight_toLeftOf="@+id/tv2"
        app:layout_constraintTop_toTopOf="@+id/tv2" />

    <EditText
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_23"
        android:background="@drawable/bg_white"
        android:paddingLeft="@dimen/dp_26"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_26"
        android:paddingBottom="@dimen/dp_5"
        android:hint="请输入数量"
        android:inputType="number"
        android:textColor="#377DFE"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toRightOf="@+id/tv1"
        app:layout_constraintRight_toRightOf="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <ImageView
        android:id="@+id/im3"
        android:layout_width="@dimen/dp_33"
        android:layout_height="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_25"
        android:src="@drawable/pic_newyear_xxb"
        app:layout_constraintLeft_toLeftOf="@+id/tvName"
        app:layout_constraintRight_toLeftOf="@+id/tv4"
        app:layout_constraintTop_toBottomOf="@+id/tv2"

        />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_6"
        android:text="x1100"
        android:textColor="@color/text_white_arr"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@+id/im3"
        app:layout_constraintLeft_toRightOf="@+id/im3"
        app:layout_constraintRight_toRightOf="@+id/tvName"
        app:layout_constraintTop_toTopOf="@+id/im3" />

    <TextView
        android:id="@+id/tv_send_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_28"
        android:background="@drawable/pic_newyear_btn"
        android:textSize="@dimen/sp_16"
        android:text="赠送给当前主播"
        android:textColor="@color/text_white_arr"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv4" />
</androidx.constraintlayout.widget.ConstraintLayout>