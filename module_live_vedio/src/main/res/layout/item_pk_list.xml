<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10">

    <com.fengwo.module_live_vedio.widget.BevelView
        android:id="@+id/ivTeammateBack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/timg"
        app:bevel_bevel_percent="0.12"
        app:bevel_border_color="#F01F84"
        app:bevel_border_width="2dp"
        app:bevel_direction="up_left"
        app:bevel_round_radius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.53" />

    <com.fengwo.module_live_vedio.widget.BevelView
        android:id="@+id/ivEnemyBack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/timg"
        app:bevel_bevel_percent="0.12"
        app:bevel_border_color="#59FEFF"
        app:bevel_border_width="2dp"
        app:bevel_direction="down_right"
        app:bevel_round_radius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.53" />

    <ImageView
        android:layout_width="@dimen/dp_94"
        android:layout_height="@dimen/dp_110"
        android:src="@drawable/ic_pk_vs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSelfName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:text="笑笑"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEnemyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:text="小龙虾"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivTeammateFirst"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_margin="@dimen/dp_10"
        android:src="@drawable/timg"
        app:civ_border_color="@color/white"
        app:civ_border_width="@dimen/dp_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivTeammateSecond"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_10"
        android:src="@drawable/timg"
        app:civ_border_color="@color/white"
        app:civ_border_width="@dimen/dp_1"
        app:layout_constraintBottom_toBottomOf="@id/ivTeammateFirst"
        app:layout_constraintLeft_toRightOf="@id/ivTeammateFirst" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivEnemyFirst"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_10"
        android:src="@drawable/timg"
        app:civ_border_color="@color/white"
        app:civ_border_width="@dimen/dp_1"
        app:layout_constraintBottom_toBottomOf="@id/ivEnemySecond"
        app:layout_constraintRight_toLeftOf="@id/ivEnemySecond" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivEnemySecond"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_margin="@dimen/dp_10"
        android:src="@drawable/timg"
        app:civ_border_color="@color/white"
        app:civ_border_width="@dimen/dp_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>