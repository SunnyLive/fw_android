<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_240"
    android:layout_height="@dimen/dp_295"
    android:orientation="vertical">
<!--    android:background="@drawable/bg_pop_tips"-->
    <LinearLayout
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_295"

        android:gravity="bottom|center_horizontal"
        android:paddingBottom="@dimen/dp_20"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/im_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />
        <TextView
            android:id="@+id/tv_look_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:background="@drawable/btn_act_send"
            android:paddingTop="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_9"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16" />
        <TextView
            android:id="@+id/tv_no_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日不再提示"
            android:textSize="@dimen/sp_12"
            android:textColor="#FFF2B2"
            android:layout_marginTop="@dimen/dp_8"
            android:visibility="gone"/>

    </LinearLayout>

    <ImageView

        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/pic_clone_y_bai"
        android:layout_gravity="center"
        android:padding="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_5"/>

</RelativeLayout>
