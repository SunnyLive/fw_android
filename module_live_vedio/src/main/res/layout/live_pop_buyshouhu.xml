<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_500">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pic_live_sh_back"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_header"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_23"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/dp_3"
                tools:src="@drawable/timg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_tile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_34"
                    android:textColor="@color/text_white_arr"
                    android:textSize="@dimen/sp_18" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:orientation="horizontal">
                    <!--  用户等级的徽章   -->
                    <ImageView
                        android:id="@+id/iv_user_level_badge"
                        android:layout_width="@dimen/dp_46"
                        android:layout_height="@dimen/dp_14"

                        android:layout_marginStart="@dimen/dp_15"
                        android:visibility="gone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_user_id_copy"
                        tools:src="@drawable/login_ic_type3_v1"
                        tools:visibility="visible" />


                    <!--  主播等级徽章  -->
                    <ImageView
                        android:id="@+id/iv_anchor_level_badge"
                        android:layout_width="@dimen/dp_46"
                        android:layout_height="@dimen/dp_14"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_user_level_badge"
                        app:layout_constraintLeft_toRightOf="@+id/iv_user_level_badge"
                        app:layout_constraintTop_toTopOf="@+id/iv_user_level_badge"
                        tools:src="@drawable/login_ic_type3_v1"
                        tools:visibility="visible" />

                    <!--  贵族等级徽章  -->

                    <ImageView
                        android:id="@+id/iv_vip_level_badge"
                        android:layout_width="@dimen/dp_46"
                        android:layout_height="@dimen/dp_14"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_anchor_level_badge"
                        app:layout_constraintLeft_toRightOf="@+id/iv_anchor_level_badge"
                        app:layout_constraintTop_toTopOf="@+id/iv_anchor_level_badge"
                        tools:src="@drawable/login_ic_type3_v1"
                        tools:visibility="visible" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_100"
            android:background="@drawable/bg_white_top_round_8dp"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_18">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主播笑笑的守护队伍"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="118"
                    android:textColor="@color/purple_9966ff"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_0"
                android:gravity="left"
                android:text="加入军团，成为我的英雄"
                android:textColor="@color/color_3333"
                android:textSize="@dimen/sp_12" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_16"
                app:tabIndicatorHeight="0dp"
                app:tabMode="scrollable"
                app:tabRippleColor="@android:color/transparent" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout

                    android:id="@+id/ll_xiaoshouhu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_weight="1"
                    android:background="@drawable/live_bg_buy_shouhu"
                    android:enabled="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:src="@drawable/live_ic_xiaoshouhu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_3"
                        android:text="神守护"
                        android:textColor="@color/text_66"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_0" />

                <LinearLayout
                    android:id="@+id/ll_dashouhu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_weight="1"
                    android:background="@drawable/live_bg_buy_shouhu"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_82"
                        android:layout_height="@dimen/dp_60"
                        android:src="@drawable/live_ic_shouhu_empty" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_3"
                        android:text="魂守护"
                        android:textColor="@color/text_66"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="守护时长"
                android:textColor="@color/text_66"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginBottom="@dimen/dp_3"
                tools:itemCount="1" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的花钻："
                    android:textColor="@color/color_3333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_moneys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_3333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_cz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="充值 >"
                    android:textColor="#FEC248"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pic_bt_l" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="守护特权"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pic_bt_r" />
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_tequan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="1" />


            <!--      <View
                      android:layout_width="match_parent"
                      android:layout_height="0.1dp"
                      android:layout_marginTop="@dimen/dp_11"
                      android:background="@color/text_99" />-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_11"


                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dp_16"
                app:cardElevation="@dimen/dp_4"

                app:contentPaddingTop="@dimen/dp_5">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_top_round_8dp">

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:text="我的钻石： 2600"
                        android:textColor="#949494"
                        android:textSize="@dimen/sp_14" />

                    <com.fengwo.module_comment.widget.GradientTextView
                        android:id="@+id/btn_submit"
                        android:layout_width="@dimen/dp_132"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_24"
                        android:gravity="center"
                        android:text="立即守护"
                        android:textColor="@color/text_white_arr"
                        android:textSize="@dimen/sp_14"
                        app:gtv_end_color="@color/red_FE3C9C"
                        app:gtv_start_color="@color/color_FFC147" />

                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </FrameLayout>
</androidx.core.widget.NestedScrollView>