<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic_push_end_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
  android:layout_marginTop="@dimen/dp_66"
        android:orientation="vertical"
        tools:ignore="ResourceName">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/dp_70"
                android:layout_marginLeft="@dimen/dp_45"
                android:layout_height="@dimen/dp_70"
                android:src="@drawable/ic_difengduijue"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_16"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回忆终究是一个过去"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18" />
                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="蜂窝号："
                    android:layout_marginTop="@dimen/dp_7"
                    android:textColor="#99ffffff"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </LinearLayout>

<!--
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:text="影子"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_20"
            android:visibility="gone" />-->

        <TextView
            android:id="@+id/tv_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/shape_gray_corner"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_8"
            android:paddingRight="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_8"
            android:text="关注"
            android:textColor="@color/gray_666666"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/bg_live_end_view"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_14"
                android:gravity="center"
                android:text="本场直播礼物"
                android:textColor="#E9E9EA"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center"
                android:text="很遗憾，未收到礼物，加油哦！"
                android:textColor="#E9E9EA"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewGift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:overScrollMode="never" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/bg_live_end_view"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_14"
                android:gravity="center"
                android:text="本场记录"
                android:textColor="#E9E9EA"
                android:textSize="@dimen/sp_12" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_14">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="2000"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_14"
                        android:text="直播时长"
                        android:textColor="#96ffffff"
                        android:textSize="@dimen/sp_9" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_look_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="2000"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_14"
                        android:text="观看人数"
                        android:textColor="#96ffffff"
                        android:textSize="@dimen/sp_9" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_new_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="2000"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_new_fans_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_14"
                        android:text="新增粉丝"
                        android:textColor="#96ffffff"
                        android:textSize="@dimen/sp_9" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_honey_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="2000"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_honey_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_14"
                        android:text="花蜜值"
                        android:textColor="#96ffffff"
                        android:textSize="@dimen/sp_9" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:background="@drawable/pic_end_live_back"
    android:layout_alignParentBottom="true">
    <ImageView
        android:id="@+id/im_ewm"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_30"
        />

</RelativeLayout>
</RelativeLayout>
