<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_7"
    android:paddingRight="@dimen/dp_7"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_live_push_bottom_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_live_more"/>
    <ImageView
        android:id="@+id/iv_live_push_bottom_private_chat"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_private_chat"/>
    <TextView
        android:id="@+id/tv_send_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/text_white"
        android:text="说点什么"
        android:paddingLeft="@dimen/dp_12"
        android:visibility="gone"
        android:paddingRight="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_9"
        android:paddingTop="@dimen/dp_9"
        android:background="@drawable/shape_alpha_50_black"/>

    <ImageView
        android:id="@+id/iv_live_push_bottom_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_gift_host"/>

    <ImageView
        android:id="@+id/v_live_anchor_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_anchor_game"/>

    <ImageView
        android:id="@+id/iv_live_push_bottom_pk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_live_pk"/>

    <ImageView
        android:id="@+id/iv_live_push_bottom_daoju"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_live_daoju"/>
    <ImageView
        android:id="@+id/iv_live_push_bottom_guild_pk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:src="@drawable/ic_live_guild_pk"
        android:layout_weight="1"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_live_push_bottom_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_live_manager"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_live_push_bottom_mssage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/live_ic_sixin"/>
    <ImageView
        android:id="@+id/iv_live_push_bottom_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:visibility="gone"
        android:src="@drawable/live_ic_camera"/>

    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:src="@drawable/ic_live_close"
        android:visibility="visible" />
</LinearLayout>
