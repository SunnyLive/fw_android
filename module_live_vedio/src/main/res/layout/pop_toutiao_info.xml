<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_tou_tiao_buy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <ImageView
        android:id="@+id/ivHeader"
        android:layout_width="@dimen/dp_74"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@drawable/live_ic_toutiao_title_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivBackground" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@id/iv_close"
        app:layout_constraintLeft_toLeftOf="@id/ivBackground"
        app:layout_constraintTop_toTopOf="@id/iv_close"
        tools:text="20s" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:padding="@dimen/dp_10"
        android:src="@drawable/ic_action_close"
        app:layout_constraintRight_toRightOf="@id/ivBackground"
        app:layout_constraintTop_toTopOf="@id/ivBackground" />

    <ImageView
        android:id="@+id/iv_vs"
        android:layout_width="@dimen/dp_36"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tou_tiao_vs"
        app:layout_constraintBottom_toBottomOf="@id/iv_header_send"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_header_send" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_header_send"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_20"
        app:civ_border_color="#FFAA00"
        app:civ_border_width="@dimen/dp_1"
        app:layout_constraintRight_toLeftOf="@id/iv_vs"
        app:layout_constraintTop_toBottomOf="@id/ivHeader"
        tools:src="@drawable/timg" />

    <TextView
        android:id="@+id/tv_tag_send"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_20"
        android:background="@drawable/bg_tou_tiao_send"
        android:gravity="center"
        android:text="富豪"
        android:textColor="@color/text_white_arr"
        android:textSize="@dimen/sp_12"
        app:layout_constraintCircle="@id/iv_header_send"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="30dp"

        tools:ignore="MissingConstraints" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_header_receive"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginStart="@dimen/dp_20"
        app:civ_border_color="#FFAA00"
        app:civ_border_width="@dimen/dp_1"
        app:layout_constraintLeft_toRightOf="@id/iv_vs"
        app:layout_constraintTop_toTopOf="@id/iv_header_send"
        tools:src="@drawable/timg" />

    <TextView
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_20"
        android:background="@drawable/bg_tou_tiao_receive"
        android:gravity="center"
        android:text="主播"
        android:textColor="@color/text_white_arr"
        android:textSize="@dimen/sp_12"
        app:layout_constraintCircle="@id/iv_header_receive"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="30dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_send_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:maxLength="10"
        android:singleLine="true"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/iv_header_send"
        app:layout_constraintRight_toRightOf="@id/iv_header_send"
        app:layout_constraintTop_toBottomOf="@id/tv_tag_send"
        tools:text="土豪名字土豪名字土豪名字" />

    <TextView
        android:id="@+id/tv_receive_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:maxLength="10"
        android:singleLine="true"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/iv_header_receive"
        app:layout_constraintRight_toRightOf="@id/iv_header_receive"
        app:layout_constraintTop_toBottomOf="@id/tv_tag_send"
        tools:text="主播名字主播名字主播名字主播名字" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_12"
        android:singleLine="true"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_16"

        app:layout_constraintLeft_toLeftOf="@id/ivBackground"
        app:layout_constraintRight_toRightOf="@id/ivBackground"
        app:layout_constraintTop_toBottomOf="@id/tv_receive_name"
        tools:text="送出大飞机x3个" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:singleLine="true"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/ivBackground"
        app:layout_constraintRight_toRightOf="@id/ivBackground"
        app:layout_constraintTop_toBottomOf="@id/tv_content"
        tools:text="价值99999花钻" />

    <com.fengwo.module_comment.widget.GradientTextView
        android:id="@+id/btn_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_16"
        android:gravity="center"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="去围观"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_16"
        app:gtv_end_color="#FFC95E"
        app:gtv_mid_color="#FFBA31"
        app:gtv_start_color="#FFAA01"
        app:layout_constraintLeft_toLeftOf="@id/ivBackground"
        app:layout_constraintRight_toRightOf="@id/ivBackground"
        app:layout_constraintTop_toBottomOf="@id/tv_price" />

    <TextView
        android:id="@+id/btn_ding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/bg_tou_tiao_ding"
        android:gravity="center"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="+100花钻顶头条"
        android:textColor="#FFD93F"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="@id/ivBackground"
        app:layout_constraintRight_toRightOf="@id/ivBackground"
        app:layout_constraintTop_toBottomOf="@id/btn_submit"
        app:layout_goneMarginTop="@dimen/dp_48" />

    <TextView
        android:id="@+id/tv_rule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_29"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/ivBackground"
        app:layout_constraintLeft_toLeftOf="@id/ivBackground"
        app:layout_constraintRight_toRightOf="@id/ivBackground"
        app:layout_constraintTop_toBottomOf="@id/btn_ding"
        tools:text="送给 主播 礼物名 + 100x头条次数" />
</androidx.constraintlayout.widget.ConstraintLayout>
