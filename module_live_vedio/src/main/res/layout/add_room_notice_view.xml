<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_54"
    android:layout_marginTop="@dimen/dp_90"
    android:background="@drawable/pic_notice_backs"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/tv_drag_content"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_32"
        android:src="@drawable/pic_notice" />

    <TextView
        android:id="@+id/tv_notice_title"
        android:layout_width="@dimen/dp_290"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:background="@null"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />
    <TextView
        android:id="@+id/tv_notice_go_watch"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_22"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_2"
        android:background="@drawable/shape_white_corner_15"
        android:drawableEnd="@drawable/ic_buy_gift_arrow"
        android:gravity="center"
        android:paddingStart="@dimen/dp_5"
        android:visibility="gone"
        android:paddingEnd="@dimen/dp_3"
        android:text="去围观"
        android:textColor="@color/red_FF53DD"
        android:textSize="@dimen/sp_12" />

</LinearLayout>