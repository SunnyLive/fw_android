<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_32"
        android:background="@drawable/shape_white_corner"
        android:paddingLeft="@dimen/dp_32"
        android:paddingRight="@dimen/dp_32"
        android:paddingBottom="@dimen/dp_26"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_pop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:text="当前正在PK中，确定发起投降？"
            android:textColor="@color/black_000000"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_44"/>

        <TextView
            android:id="@+id/tv_pop_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:text="发起投降后，将直接结束本场PK。同时
本场PK判断发起投降方为败。"
            android:textColor="@color/text_33"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_30"/>

            <com.fengwo.module_comment.widget.GradientTextView
                android:id="@+id/tv_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_14"
                android:text="确定投降，并结束本场PK"
                android:background="@drawable/shape_purple_corner"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"/>

    </LinearLayout>
</LinearLayout>
