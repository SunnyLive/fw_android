<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/v_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_global_redpack_dialog_bg"
        app:layout_constraintBottom_toTopOf="@id/v_receiver"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/v_user_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_head"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/v_user_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/v_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:maxWidth="120dp"
        android:singleLine="true"
        tools:text="喵了个咪🐱"
        android:textColor="#ff333333"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/v_user_icon"
        app:layout_constraintLeft_toRightOf="@id/v_user_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/v_user_icon" />

    <TextView
        android:id="@+id/v_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text="送出50000花钻的红包"
        android:textColor="#ff333333"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_user_icon" />

    <TextView
        android:id="@+id/v_receiver"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/shape_redpack_bt"
        android:gravity="center"
        android:text="我知道了"
        android:textColor="#ffffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:translationY="-22dp"
        app:layout_constraintLeft_toLeftOf="@id/v_bg"
        app:layout_constraintRight_toRightOf="@id/v_bg"
        app:layout_constraintTop_toBottomOf="@id/v_bg" />
</androidx.constraintlayout.widget.ConstraintLayout>