<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#60000000"
    android:paddingBottom="@dimen/dp_12"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_select_gif_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_select_gif_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择礼物"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_16" />
        <TextView
            android:id="@+id/iv_select_gif_sure"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_9"
            android:paddingLeft="@dimen/dp_18"
            android:paddingRight="@dimen/dp_18"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_f8f8f8"
            android:text="确定"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/bg_live_end_btn"/>
    </LinearLayout>
<!--    礼物类型-->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@null"
        app:tabBackground="@null"
        app:tabGravity="center"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="0dp"
        app:tabMode="scrollable"
        app:tabPaddingEnd="-4dp"
        app:tabPaddingStart="-4dp"
        app:tabSelectedTextColor="@color/purple_9966ff"
        app:tabTextColor="@color/white" />
    <!--礼物列表-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_220"
            android:overScrollMode="never" />

        <LinearLayout
            android:id="@+id/ll_point"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:gravity="center"
            android:orientation="horizontal" />
    </LinearLayout>

</LinearLayout>