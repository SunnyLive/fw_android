<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_live_home_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/live_bg_home_top"

        app:layout_constraintDimensionRatio="1:0.573"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/basetitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/dp_140"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/live_fwhy"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/btn_tosearch"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_32"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_weight="1"
                android:background="@drawable/live_home_bg_search"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:visibility="visible">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:src="@drawable/ic_gray_search" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_weight="1"
                    android:text="搜索喜欢的主播"
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"

                android:background="@drawable/live_home_bg_search">

                <ImageView
                    android:id="@+id/btn_live"
                    android:layout_width="@dimen/dp_64"
                    android:layout_height="@dimen/dp_29"
                    android:src="@drawable/ic_home_living_gif"
                    tools:src="@drawable/ic_home_living_gif" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <com.shizhefei.view.indicator.ScrollIndicatorView
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="4dp"
        android:paddingBottom="@dimen/dp_8"
        app:layout_constraintTop_toBottomOf="@id/basetitle" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout" />
    <LinearLayout
        android:id="@+id/ll_shuaxin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络链接出错，"
            android:gravity="center"
            android:textColor="#C7C7C7"

            />
        <TextView
            android:id="@+id/tv_sx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击刷新"
            android:gravity="center"
            android:textColor="#C7C7C7"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>