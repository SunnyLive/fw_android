<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_wish_result_mvp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@drawable/icon_wish_result_mvp_click"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_wish_result_title" />


    <ImageView
        android:id="@+id/iv_wish_gift"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_41"
        app:layout_constraintLeft_toLeftOf="@+id/iv_wish_result_mvp"
        app:layout_constraintRight_toRightOf="@+id/iv_wish_result_mvp"
        app:layout_constraintTop_toTopOf="@+id/iv_wish_result_mvp"
        tools:src="@color/red_FE3C9C" />


    <TextView
        android:id="@+id/tv_wish_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:text="马上许愿"
        android:textColor="#fff288"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@+id/iv_wish_result_mvp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />



    <TextView
        android:id="@+id/tv_wish_gift_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_wish_gift_bg"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_10"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="@+id/iv_wish_gift"
        app:layout_constraintRight_toRightOf="@+id/iv_wish_gift"
        app:layout_constraintTop_toBottomOf="@+id/iv_wish_gift"
        tools:text="============" />


    <LinearLayout
        android:id="@+id/ll_wish_fans_blessing"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="@+id/ll_anchor_header"
        app:layout_constraintLeft_toRightOf="@+id/ll_anchor_header"
        app:layout_constraintRight_toRightOf="@+id/iv_wish_result_mvp"
        android:background="@drawable/bg_wish_mvp_text"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_5"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_56"
        android:layout_marginEnd="@dimen/dp_18"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_53"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_wish_fans_blessing"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/sp_10"
            android:textColor="#FF9803"
            tools:text="我愿做你的小太阳，围绕你转，护你登顶" />

        <TextView
            android:id="@+id/tv_wish_fans_blessing_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_8"
            android:textColor="#ffff9803"
            android:gravity="center"
            tools:text="★ 12.31 00:01 - 12:31 02:00 ★"
            />
    </LinearLayout>




    <LinearLayout
        android:id="@+id/ll_fans_header"
        android:layout_width="@dimen/dp_47"
        android:layout_marginEnd="@dimen/dp_33"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintRight_toRightOf="@+id/iv_wish_result_mvp"
        app:layout_constraintTop_toTopOf="@+id/ll_anchor_header">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cv_fans_header"
            android:layout_width="@dimen/dp_47"
            android:layout_height="@dimen/dp_47"
            tools:src="@color/color_ffc147" />
        <TextView
            android:id="@+id/tv_fans_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/dp_7"
            android:textSize="@dimen/sp_10"
            android:gravity="center"
            android:maxLines="2"
            android:layout_gravity="center"
            tools:text="赵春妮" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_anchor_header"
        android:layout_width="@dimen/dp_47"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_43"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/iv_wish_result_mvp"
        app:layout_constraintTop_toTopOf="@+id/iv_wish_result_mvp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cv_anchor_header"
            android:layout_width="@dimen/dp_47"
            android:layout_height="@dimen/dp_47"
            tools:src="@color/red_FE3C9C" />

        <TextView
            android:id="@+id/tv_anchor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_3"
            android:layout_marginEnd="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_7"
            android:textColor="@color/colorWhite"
            android:maxLines="2"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_10"
            tools:text="王麻子" />
    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_wish_result_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_wish_result_mvp" />



</androidx.constraintlayout.widget.ConstraintLayout>
