<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tencent.rtmp.ui.TXCloudVideoView
        android:id="@+id/pusher_tx_cloud_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <SurfaceView
            android:id="@+id/surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />
    </com.tencent.rtmp.ui.TXCloudVideoView>

    <LinearLayout
        android:id="@+id/layout_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/basetitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/status_bar_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/transparent" />


        <RelativeLayout
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">


            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_17"
                android:src="@drawable/live_ic_close" />


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_view"
        android:layout_width="@dimen/dp_331"
        android:layout_height="wrap_content"
        android:layout_below="@+id/basetitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/bg_back_5"

        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.fengwo.module_comment.widget.RoundImageView
                android:id="@+id/btn_upload"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_65"
                android:layout_margin="@dimen/dp_9"
                android:scaleType="centerCrop"
                app:radius="@dimen/dp_5"
                android:src="@drawable/live_ic_upload_fengmian" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_12"
                android:layout_alignBottom="@+id/btn_upload"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/dp_5"
                android:gravity="center"
                android:paddingRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="@drawable/shap_gd_dialog_bg"
                android:text="上传封面"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_9" />

        </RelativeLayout>


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_8"
            android:gravity="left"
            android:minWidth="@dimen/dp_187"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_8"
                android:background="@null"
                android:drawableRight="@drawable/live_ic_change_edit"
                android:gravity="left|center_vertical"
                android:hint="请输入直播间标题"
                android:maxLength="10"
                android:paddingStart="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_18"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_local_white"
                android:layout_marginTop="@dimen/dp_10"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center"
                android:text="厦门市"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_11" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/btn_tochoose"
        android:layout_width="@dimen/dp_331"
        android:layout_height="@dimen/dp_35"
        android:layout_below="@+id/ll_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/bg_back_5"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_6"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/live_ic_change_bq"
            android:drawablePadding="@dimen/dp_3"
            android:gravity="center"
            android:hint="直播标签"
            android:text=""
            android:textColorHint="@color/color_fefefe"
            android:textColor="@color/color_fefefe"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/tv_xz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:drawableRight="@drawable/icon_arr_right"
            android:drawablePadding="@dimen/dp_10"
            android:text="请选择"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_12" />


    </FrameLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_66">

        <ImageView
            android:id="@+id/btn_change_camera"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_33"
            android:layout_centerVertical="true"
            android:src="@drawable/live_ic_change_camera"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_14"
            app:layout_constraintLeft_toLeftOf="@+id/btn_meiyan"
            app:layout_constraintBottom_toTopOf="@+id/btn_meiyan"/>

        <ImageView
            android:id="@+id/iv_start_wx"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_37"
            android:layout_gravity="center"
            android:src="@drawable/ic_start_live_wx"
            android:layout_marginStart="@dimen/dp_47"
            android:layout_marginBottom="@dimen/dp_12"
            app:layout_constraintLeft_toLeftOf="@+id/btn_start"
            app:layout_constraintBottom_toTopOf="@+id/btn_start"/>

        <ImageView
            android:id="@+id/iv_start_circle"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_37"
            android:layout_gravity="center"
            android:src="@drawable/ic_start_wx_circle"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_12"
            app:layout_constraintLeft_toRightOf="@+id/iv_start_wx"
            app:layout_constraintBottom_toTopOf="@+id/btn_start"/>


        <TextView
            android:id="@+id/btn_meiyan"
            android:layout_width="@dimen/dp_132"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_16"
            android:background="@drawable/bg_white_circle"
            android:text="@string/meiyan"
            android:textColor="@color/color_fb3c9c"
            android:textSize="@dimen/sp_14"
            android:drawableStart="@drawable/live_ic_change_meiyan"
            android:drawablePadding="@dimen/dp_8"
            android:paddingStart="@dimen/dp_30"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <TextView
            android:id="@+id/btn_start"
            android:layout_width="@dimen/dp_181"
            android:layout_height="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_14"
            android:background="@drawable/bg_ffc147_to_fe3c9c"
            android:gravity="center"
            android:text="开始视频直播"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_15"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/fl_faceunity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:visibility="gone">

        <ViewStub
            android:id="@+id/fu_base_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />
    </FrameLayout>
</RelativeLayout>