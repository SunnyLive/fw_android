<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_32"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/rl_toutiao_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/pic_tt_back">

        <LinearLayout
            android:id="@+id/toutiao_lefttime_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_go_watch"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_22"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_2"
                android:background="@drawable/shape_white_corner_15"
                android:drawableEnd="@drawable/ic_buy_gift_arrow"
                android:gravity="center"
                android:paddingStart="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_3"
                android:text="去围观"
                android:textColor="@color/red_FF53DD"
                android:textSize="@dimen/sp_12" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/toutiao_leftview_short"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/toutiao_lefttime_view"
            android:background="@drawable/bg_leads_news_lefts"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/toutiao_useravatar"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/default_head" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#ffffffff"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/toutiao_gift2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/toutiao_gift_num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="x1314"
                android:textColor="#ffffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/toutiao_lefttime_tv"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_8"
                android:background="@drawable/shape_blue_round"

                android:gravity="center"
                android:text="180s"
                android:textColor="#ffffffff"
                android:textSize="10sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/toutiao_leftview_long"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/toutiao_lefttime_view"

            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/toutiao_im_tt"
                android:layout_width="43dp"
                android:layout_height="20dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/toutiao_tip"
                android:visibility="gone" />

            <com.fengwo.module_comment.widget.MarqueeViewGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_55"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/toutiao_giftview"
                app:isFixed="false"
                app:isLooper="true"
                app:mvg_direction="to_left"
                app:mvg_duration="5000">

                <RelativeLayout
                    android:layout_width="1000dp"
                    android:layout_height="match_parent"
                    android:gravity="left">

                    <LinearLayout
                        android:id="@+id/toutiao_giftview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">




                        <TextView
                            android:id="@+id/toutiao_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffffff"
                            android:textSize="12sp"
                            android:lines="1"
                            tools:text="用户昵称最多八字 送给 最多可有八个字..." />
                        <ImageView
                            android:id="@+id/toutiao_gift"
                            android:layout_width="18dp"
                            android:layout_height="18dp" />

                        <TextView
                            android:id="@+id/toutiao_gift_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="x1314"
                            android:textColor="#ffffffff"
                            android:textSize="12sp" />

                    </LinearLayout>


                </RelativeLayout>
            </com.fengwo.module_comment.widget.MarqueeViewGroup>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>