<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="bottom">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="643dp"
        android:background="@color/transparent"
        android:descendantFocusability="blocksDescendants">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pic_activity_wsj_back"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_224"
                android:background="@drawable/pic_activity_wsj_top" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/pic_activity_wsj_btn" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_110"
                android:layout_below="@+id/rl_context"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-40dp"
                android:src="@drawable/pic_activity_context_gift" />

            <RelativeLayout
                android:id="@+id/rl_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_187"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/pic_activity_wsj_giftlist"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:id="@+id/rl_one"
                    android:layout_width="@dimen/dp_82"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/im_gift_one"
                        android:layout_width="@dimen/dp_62"

                        android:layout_height="@dimen/dp_62" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pic_activity_wsj_one" />

                    <ImageView
                        android:id="@+id/im_status_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/im_gift_one"
                        android:layout_alignBottom="@+id/im_gift_one"
                        android:background="@drawable/pic_activity_wsj_jxz" />

                    <TextView
                        android:id="@+id/tv_gift_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/im_gift_one"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:gravity="center"
                        android:maxEms="4"
                        android:text="雪夜古堡入场券"
                        android:textColor="@color/purple_66EAF6"
                        android:textSize="@dimen/sp_12" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_two"

                    android:layout_width="@dimen/dp_82"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/im_gift_two"
                        android:layout_width="@dimen/dp_62"

                        android:layout_height="@dimen/dp_62" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pic_activity_wsj_two" />

                    <ImageView
                        android:id="@+id/im_status_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/im_gift_two"
                        android:layout_alignBottom="@+id/im_gift_two"
                        android:background="@drawable/pic_activity_wsj_jxz" />

                    <TextView
                        android:id="@+id/tv_gift_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/im_gift_two"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:gravity="center"
                        android:maxEms="4"
                        android:text="雪夜古堡入场券"
                        android:textColor="@color/purple_66EAF6"
                        android:textSize="@dimen/sp_12" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_three"
                    android:layout_width="@dimen/dp_82"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_25"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/im_gift_three"
                        android:layout_width="@dimen/dp_62"

                        android:layout_height="@dimen/dp_62" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pic_activity_wsj_three" />

                    <ImageView
                        android:id="@+id/im_status_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/im_gift_three"
                        android:layout_alignBottom="@+id/im_gift_three"
                        android:background="@drawable/pic_activity_wsj_jxz" />

                    <TextView
                        android:id="@+id/tv_gift_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/im_gift_three"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:gravity="center"
                        android:maxEms="4"
                        android:text="雪夜古堡入场券"
                        android:textColor="@color/purple_66EAF6"
                        android:textSize="@dimen/sp_12" />


                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_context"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/pic_activity_wsj_btn_context"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_sl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_19"
                    android:text="任务收礼（160/160）"
                    android:textColor="@color/purple_66EAF6"
                    android:textSize="@dimen/sp_14" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:layout_marginRight="@dimen/dp_26"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_22"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textSize="@dimen/sp_11"
                    android:text="Tips：当完成收礼任务时，直播间全服公告5分钟后，进入对应直播间降落南瓜灯笼，点击南瓜灯笼随机抽礼～"
                    android:textColor="@color/purple_66EAF6"
                    />
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/im_close"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@mipmap/pic_clone_bai" />
</RelativeLayout>