<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_472"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_pk_contribute">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_17"
        android:text="我方本场PK贡献榜"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_16"/>
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toTopOf="@+id/ll_bottom">

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_header_two"
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_48"
                        app:civ_border_width="@dimen/dp_2"
                        app:civ_border_color="@color/green_0FE8F0"
                        android:src="@drawable/ic_pk_rank_empty"
                        android:layout_marginTop="@dimen/dp_10"/>
                    <ImageView
                        android:id="@+id/iv_guard_two"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:src="@drawable/ic_guard"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone"/>
                </FrameLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pk_contribute_2"
                    android:layout_marginTop="@dimen/dp_8"/>
                <TextView
                    android:id="@+id/tv_name_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4811AD"
                    android:text="虚位以待"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/dp_6"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_header_one"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    app:civ_border_width="@dimen/dp_2"
                    app:civ_border_color="@color/yellow_FFD67F"
                    android:src="@drawable/ic_pk_rank_empty"
                    android:layout_marginTop="@dimen/dp_12"/>
                    <ImageView
                        android:id="@+id/iv_guard_one"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:src="@drawable/ic_guard"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone"/>
                </FrameLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pk_contribute_1"
                    android:layout_marginTop="@dimen/dp_8"/>
                <TextView
                    android:id="@+id/tv_name_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4811AD"
                    android:text="虚位以待"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/dp_6"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_header_three"
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_48"
                        android:layout_marginTop="@dimen/dp_10"
                        android:src="@drawable/ic_pk_rank_empty"
                        app:civ_border_color="@color/yellow_E9985C"
                        app:civ_border_width="@dimen/dp_2" />
                    <ImageView
                        android:id="@+id/iv_guard_three"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:src="@drawable/ic_guard"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone"/>
                </FrameLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pk_contribute_3"
                    android:layout_marginTop="@dimen/dp_8"/>
                <TextView
                    android:id="@+id/tv_name_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4811AD"
                    android:text="虚位以待"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/dp_6"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll_one"
                android:background="@drawable/shape_deep_purple_coner"
                android:layout_marginTop="@dimen/dp_22"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_white"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textSize="@dimen/sp_12"
                    android:text="本场PK热门礼物"
                    android:layout_gravity="center"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_hot_gift"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_12"/>
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_empty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_empty_bee"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:visibility="visible"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:gravity="center_vertical">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/ll_header_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center_vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_header_mine"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"/>
                <TextView
                    android:id="@+id/tv_contribute_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的贡献"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_12"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_empty_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_12"
                android:text="主播急需你的助力哦，快去抢占沙发"
                android:layout_gravity="center|left"/>
        </FrameLayout>
        <com.fengwo.module_comment.widget.GradientTextView
            android:id="@+id/tv_send"
            android:layout_width="@dimen/dp_74"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_3"
            app:gtv_start_color="#FFCC66"
            app:gtv_end_color="#FFAA00"
            android:text="赠送礼物"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_white"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
