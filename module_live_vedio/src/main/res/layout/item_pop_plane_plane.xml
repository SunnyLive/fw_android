<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fl_bg_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:padding="@dimen/dp_2"
            android:background="@drawable/bg_activitygift_checked">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_blue_plane_coner"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_8">


                <ImageView
                    android:id="@+id/iv_plane"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_30"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/tv_plane_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="铂金仓位"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="缘分值：+30"
                    android:textColor="#B2B8FF"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/bg_plane"
                android:visibility="gone" />

        </FrameLayout>
        <TextView
            android:id="@+id/tv_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_purple_bg_coner"
            android:paddingLeft="@dimen/dp_13"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_2"
            android:text="4'59"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_14" />
    </FrameLayout>
</FrameLayout>